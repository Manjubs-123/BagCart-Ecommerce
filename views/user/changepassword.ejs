<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password - BagHub</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gray-50 min-h-screen">

    <!-- HEADER -->
    <%- include('../partials/landingheader') %>

    <div class="container mx-auto px-4 py-8">

        <div class="flex flex-col lg:flex-row gap-8">

            <!-- SIDEBAR -->
            <%- include('../partials/userProfileSiderbar', {
                user,
                ordersCount,
                wishlistCount,
                unreadNotifications,
                activePage: "security"
            }) %>

            <!-- MAIN CONTENT -->
            <div class="lg:w-3/4">

                <!-- Page Header -->
                <div class="bg-gradient-to-r from-blue-600 to-emerald-600 text-white p-6 rounded-2xl shadow-lg mb-6">
                    <h1 class="text-2xl font-bold">Change Password</h1>
                    <p class="text-blue-100">Update your password securely</p>
                </div>

                <!-- Change Password Card -->
                <div class="bg-white rounded-2xl shadow p-6">

                    <form id="changePasswordForm" class="space-y-6">

                        <!-- CURRENT PASSWORD -->
                        <div>
                            <label class="block text-sm font-medium mb-2">Current Password</label>
                            <div class="relative">
                                <input type="password" id="currentPassword" class="input-box pr-12"
                                       placeholder="Enter current password">
                                <button type="button" onclick="togglePassword('currentPassword')"
                                        class="absolute right-3 top-1/2 -translate-y-1/2">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <p id="currentPasswordError" class="text-red-600 text-xs mt-1 hidden">
                                Incorrect password
                            </p>
                        </div>

                        <!-- NEW PASSWORD -->
                        <div>
                            <label class="block text-sm font-medium mb-2">New Password</label>
                            <div class="relative">
                                <input type="password" id="newPassword" class="input-box pr-12"
                                       placeholder="Enter new password">
                                <button type="button" onclick="togglePassword('newPassword')"
                                        class="absolute right-3 top-1/2 -translate-y-1/2">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>

                            <ul class="text-xs mt-2 text-gray-600">
                                <li id="req-upper">• At least 1 uppercase letter</li>
                                <li id="req-lower">• At least 1 lowercase letter</li>
                                <li id="req-number">• At least 1 number</li>
                                <li id="req-special">• At least 1 special character</li>
                                <li id="req-length">• Minimum 6 characters</li>
                            </ul>
                        </div>

                        <!-- CONFIRM PASSWORD -->
                        <div>
                            <label class="block text-sm font-medium mb-2">Confirm Password</label>
                            <div class="relative">
                                <input type="password" id="confirmPassword" class="input-box pr-12"
                                       placeholder="Confirm password">
                                <button type="button" onclick="togglePassword('confirmPassword')"
                                        class="absolute right-3 top-1/2 -translate-y-1/2">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <p id="confirmPasswordError" class="text-red-600 text-xs mt-1 hidden">
                                Passwords do not match
                            </p>
                        </div>

                        <div class="flex justify-end gap-3 pt-4">
                            <button type="reset" class="px-6 py-3 border rounded-lg">Reset</button>

                            <button type="button" id="submitBtn"
                                    onclick="changePassword()"
                                    class="px-6 py-3 bg-blue-600 text-white rounded-lg opacity-50"
                                    disabled>
                                Update Password
                            </button>
                        </div>

                    </form>

                </div>

            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>

<!-- STYLES -->
<style>
    .input-box {
        width: 100%;
        padding: 12px;
        border-radius: 10px;
        border: 1px solid #d1d5db;
        background: #f9fafb;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
const currentPassword = document.getElementById("currentPassword");
const newPassword = document.getElementById("newPassword");
const confirmPassword = document.getElementById("confirmPassword");
const submitBtn = document.getElementById("submitBtn");

let validCurrent = false;
let validNew = false;
let validConfirm = false;

// ------------ EYE TOGGLE -------------
function togglePassword(id) {
    const field = document.getElementById(id);
    const icon = event.target;

    if (field.type === "password") {
        field.type = "text";
        icon.classList.replace("fa-eye", "fa-eye-slash");
    } else {
        field.type = "password";
        icon.classList.replace("fa-eye-slash", "fa-eye");
    }
}

// ------------ CHECK CURRENT PASSWORD -------------
currentPassword.addEventListener("input", async () => {
    if (!currentPassword.value.trim()) {
        invalid(currentPassword, "currentPasswordError");
        validCurrent = false;
        toggleSubmit();
        return;
    }

    try {
        const res = await axios.post("/user/check-current-password", {
            currentPassword: currentPassword.value
        });

        if (res.data.valid) {
            valid(currentPassword, "currentPasswordError");
            validCurrent = true;
        } else {
            invalid(currentPassword, "currentPasswordError");
            validCurrent = false;
        }

        toggleSubmit();
    } catch (err) {
        invalid(currentPassword, "currentPasswordError");
    }
});

// ------------ NEW PASSWORD VALIDATION -------------
newPassword.addEventListener("input", () => {
    const pass = newPassword.value;

    const rules = {
        upper: /[A-Z]/.test(pass),
        lower: /[a-z]/.test(pass),
        number: /[0-9]/.test(pass),
        special: /[^A-Za-z0-9]/.test(pass),
        length: pass.length >= 6
    };

    document.getElementById("req-upper").style.color = rules.upper ? "green" : "red";
    document.getElementById("req-lower").style.color = rules.lower ? "green" : "red";
    document.getElementById("req-number").style.color = rules.number ? "green" : "red";
    document.getElementById("req-special").style.color = rules.special ? "green" : "red";
    document.getElementById("req-length").style.color = rules.length ? "green" : "red";

    validNew = Object.values(rules).every(Boolean);
    toggleSubmit();
    checkConfirm();
});

// ------------ CONFIRM PASSWORD -------------
confirmPassword.addEventListener("input", checkConfirm);

function checkConfirm() {
    if (confirmPassword.value === newPassword.value && validNew) {
        valid(confirmPassword, "confirmPasswordError");
        validConfirm = true;
    } else {
        invalid(confirmPassword, "confirmPasswordError");
        validConfirm = false;
    }
    toggleSubmit();
}

// ------------ HELPER FUNCTIONS -------------
function valid(input, errorId) {
    input.style.border = "2px solid #059669";
    document.getElementById(errorId).classList.add("hidden");
}

function invalid(input, errorId) {
    input.style.border = "2px solid #dc2626";
    document.getElementById(errorId).classList.remove("hidden");
}

function toggleSubmit() {
    if (validCurrent && validNew && validConfirm) {
        submitBtn.disabled = false;
        submitBtn.style.opacity = "1";
    } else {
        submitBtn.disabled = true;
        submitBtn.style.opacity = "0.5";
    }
}

// ------------ SUBMIT FINAL CHANGE -------------
async function changePassword() {
    const res = await axios.post("/user/change-password", {
        currentPassword: currentPassword.value,
        newPassword: newPassword.value
    });

    if (res.data.success) {
        Swal.fire({
            icon: "success",
            title: "Password Updated!",
            text: "Your password has been changed successfully.",
            confirmButtonColor: "#2563eb",
            timer: 2000,
            timerProgressBar: true
        }).then(() => {
            window.location.href = "/user/profile";
        });

    } else {
        Swal.fire({
            icon: "error",
            title: "Update Failed",
            text: res.data.message,
            confirmButtonColor: "#dc2626"
        });
    }
}

</script>

</html>
