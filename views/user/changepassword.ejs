<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password - BagHub</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gray-50 min-h-screen">

    <!-- HEADER -->
    <%- include('../partials/landingheader') %>


    <div class="container mx-auto px-4 py-8">

        <div class="flex flex-col lg:flex-row gap-8">

            <!-- ============== SIDEBAR ============== -->
      <%- include('../partials/userProfileSiderbar', {
    user,
    ordersCount,
    wishlistCount,
    unreadNotifications,
    activePage
}) %>

<div id="cropperModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center">
  <div class="bg-white p-5 rounded-xl">
      <img id="cropImage" class="max-w-[400px] max-h-[400px]" />
      <div class="flex justify-end gap-4 mt-4">
          <button onclick="cancelCrop()" class="bg-gray-500 text-white px-4 py-2 rounded">Cancel</button>
          <button onclick="applyCrop()" class="bg-blue-600 text-white px-4 py-2 rounded">Crop & Save</button>
      </div>
  </div>
</div>
            <!-- ============== MAIN CONTENT ============== -->
            <div class="lg:w-3/4">

                <!-- Header Section -->
                <div class="bg-gradient-to-r from-blue-600 to-emerald-600 text-white p-6 rounded-2xl shadow-lg mb-6">
                    <h1 class="text-2xl font-bold">Change Password</h1>
                    <p class="text-blue-100">Update your account password securely</p>
                </div>

                <!-- Change Password Card -->
                <div class="bg-white rounded-2xl shadow p-6">

                    <form id="changePasswordForm" class="space-y-6">

                        <!-- Current Password -->
                        <div>
                            <label class="block text-sm font-medium mb-2">Current Password</label>
                            <input type="password" name="currentPassword" id="currentPassword"
                                   class="input-box" placeholder="Enter current password">
                        </div>

                        <!-- New Password -->
                        <div>
                            <label class="block text-sm font-medium mb-2">New Password</label>
                            <input type="password" name="newPassword" id="newPassword"
                                   class="input-box" placeholder="Enter new password">
                        </div>

                        <!-- Confirm Password -->
                        <div>
                            <label class="block text-sm font-medium mb-2">Confirm Password</label>
                            <input type="password" name="confirmPassword" id="confirmPassword"
                                   class="input-box" placeholder="Confirm new password">
                        </div>

                        <div class="flex justify-end gap-3">
                            <button type="reset" class="px-6 py-3 border border-gray-300 rounded-lg">Reset</button>
                            <button type="button"
                                    onclick="changePassword()"
                                    class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                                Update Password
                            </button>
                        </div>

                    </form>

                </div>

            </div>

        </div>
    </div>

    <%- include('../partials/footer') %>

</body>

<style>
    .nav-item {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px;
        border-radius: 12px;
        color: #4b5563;
        transition: 0.2s;
    }
    .nav-item:hover {
        background: #f3f4f6;
    }
    .nav-item-active {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px;
        border-radius: 12px;
        background: #eff6ff;
        border-left: 4px solid #1d4ed8;
        color: #1d4ed8;
        font-weight: bold;
    }
    .input-box {
        width: 100%;
        padding: 12px;
        border-radius: 10px;
        border: 1px solid #d1d5db;
        background: #f9fafb;
    }
</style>

<script>
async function changePassword() {
    const form = document.getElementById("changePasswordForm");
    const data = Object.fromEntries(new FormData(form));

    const res = await axios.post("/user/change-password", data);

    alert(res.data.message);
}
</script>

</html>
