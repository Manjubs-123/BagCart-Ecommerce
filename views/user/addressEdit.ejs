<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Address - BagHub</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    
    <style>
        :root {
            --primary: #1a56db;
            --primary-dark: #1e429f;
            --secondary: #047857;
        }
        
        .btn-primary {
            background-color: var(--primary);
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }
        
        .card-hover {
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
        
        .card-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }
        
        .shake {
            animation: shake 0.5s ease-in-out;
        }
        
        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }
        
        .error-border {
            border-color: #ef4444 !important;
        }
        
        .success-border {
            border-color: #10b981 !important;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <%- include('../partials/landingheader') %>
    
    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8">
        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Sidebar Navigation -->
            <div class="lg:w-1/4">
                <div class="bg-white rounded-2xl shadow-sm p-6 card-hover sticky top-24">
                    <!-- User Profile Summary -->
                    <div class="text-center mb-6">
                        <% if (user.profileImage) { %>
                            <img id="sidebarProfileImage"
                                 src="<%= user.profileImage?.url %>"
                                 class="w-24 h-24 rounded-full object-cover mx-auto border-4 border-white shadow-md">
                        <% } else { %>
                            <div id="sidebarProfileImage"
                                 class="w-24 h-24 rounded-full bg-gradient-to-r from-blue-500 to-emerald-500 flex items-center justify-center text-white text-2xl font-bold mx-auto">
                                <%= user.name ? user.name.charAt(0).toUpperCase() : "U" %>
                            </div>
                        <% } %>

                        <h2 class="text-xl font-bold text-gray-900 mt-3"><%= user.name || "User" %></h2>
                        <p class="text-gray-600 text-sm"><%= user.email %></p>

                        <p class="text-green-600 text-sm font-medium mt-1">
                            <i class="fas fa-check-circle mr-1"></i> Verified
                        </p>
                    </div>

                    <!-- Navigation Menu -->
                    <nav class="space-y-2">
                        <a href="/user/profile"
                           class="w-full text-left flex items-center gap-3 p-3 rounded-xl transition-all duration-200 hover:bg-gray-100 text-gray-700">
                            <i class="fas fa-user text-gray-600 w-5"></i>
                            <span>Profile Information</span>
                        </a>

                        <a href="/user/profile/orders"
                           class="w-full text-left flex items-center gap-3 p-3 rounded-xl transition-all duration-200 hover:bg-gray-100 text-gray-700">
                            <i class="fas fa-shopping-bag text-gray-600 w-5"></i>
                            <span>My Orders</span>
                            <span class="ml-auto bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">
                                <%= ordersCount || 0 %>
                            </span>
                        </a>

                        <a href="/user/profile/addresses"
                           class="w-full text-left flex items-center gap-3 p-3 rounded-xl transition-all duration-200 text-blue-600 font-semibold bg-blue-50 border-l-4 border-blue-600">
                            <i class="fas fa-map-marker-alt text-blue-600 w-5"></i>
                            <span>Saved Addresses</span>
                        </a>

                        <a href="/user/profile/wishlist"
                           class="w-full text-left flex items-center gap-3 p-3 rounded-xl transition-all duration-200 hover:bg-gray-100 text-gray-700">
                            <i class="far fa-heart text-gray-600 w-5"></i>
                            <span>Wishlist</span>
                            <span class="ml-auto bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">
                                <%= wishlistCount || 0 %>
                            </span>
                        </a>

                        <a href="/user/profile/security"
                           class="w-full text-left flex items-center gap-3 p-3 rounded-xl transition-all duration-200 hover:bg-gray-100 text-gray-700">
                            <i class="fas fa-shield-alt text-gray-600 w-5"></i>
                            <span>Security</span>
                        </a>

                        <a href="/user/profile/notifications"
                           class="w-full text-left flex items-center gap-3 p-3 rounded-xl transition-all duration-200 hover:bg-gray-100 text-gray-700">
                            <i class="fas fa-bell text-gray-600 w-5"></i>
                            <span>Notifications</span>
                            <span class="ml-auto bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full">
                                <%= unreadNotifications || 0 %>
                            </span>
                        </a>
                    </nav>
                </div>
            </div>

            <!-- Main Content Area -->
            <div class="lg:w-3/4">
                <!-- Header Section -->
                <div class="bg-gradient-to-r from-blue-600 to-emerald-600 rounded-2xl shadow-lg p-6 mb-6 text-white">
                    <div class="flex items-center gap-4">
                        <div class="w-16 h-16 rounded-full bg-white/20 flex items-center justify-center">
                            <i class="fas fa-edit text-2xl"></i>
                        </div>
                        <div>
                            <h1 class="text-2xl font-bold">Edit Address</h1>
                            <p class="text-blue-100">Update your delivery address information</p>
                        </div>
                    </div>
                </div>

                <!-- Edit Address Form -->
                <div class="bg-white rounded-2xl shadow-sm p-6 card-hover">
                    <form id="editAddressForm" class="space-y-6">
                        <input type="hidden" id="addressId" name="addressId" value="<%= address._id %>">
                        
                        <!-- Address Type -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Address Type</label>
                            <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                                <label class="flex items-center">
                                    <input type="radio" name="addressType" value="home" class="sr-only peer" 
                                           <%= address.addressType === 'home' ? 'checked' : '' %>>
                                    <div class="w-full p-3 border border-gray-300 rounded-lg text-center cursor-pointer peer-checked:border-blue-500 peer-checked:bg-blue-50">
                                        <i class="fas fa-home text-gray-600 mb-1"></i>
                                        <div class="text-sm font-medium">Home</div>
                                    </div>
                                </label>
                                <label class="flex items-center">
                                    <input type="radio" name="addressType" value="work" class="sr-only peer"
                                           <%= address.addressType === 'work' ? 'checked' : '' %>>
                                    <div class="w-full p-3 border border-gray-300 rounded-lg text-center cursor-pointer peer-checked:border-blue-500 peer-checked:bg-blue-50">
                                        <i class="fas fa-briefcase text-gray-600 mb-1"></i>
                                        <div class="text-sm font-medium">Work</div>
                                    </div>
                                </label>
                                <label class="flex items-center">
                                    <input type="radio" name="addressType" value="other" class="sr-only peer"
                                           <%= address.addressType === 'other' ? 'checked' : '' %>>
                                    <div class="w-full p-3 border border-gray-300 rounded-lg text-center cursor-pointer peer-checked:border-blue-500 peer-checked:bg-blue-50">
                                        <i class="fas fa-map-marker-alt text-gray-600 mb-1"></i>
                                        <div class="text-sm font-medium">Other</div>
                                    </div>
                                </label>
                            </div>
                        </div>

                        <!-- Full Name -->
                        <div>
                            <label for="fullName" class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
                            <input 
                                type="text" 
                                id="fullName" 
                                name="fullName" 
                                value="<%= address.fullName %>"
                                class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                placeholder="Enter full name"
                            >
                            <div id="fullNameError" class="text-red-500 text-sm mt-2 hidden">
                                <i class="fas fa-exclamation-circle mr-1"></i>
                                <span id="fullNameErrorText"></span>
                            </div>
                        </div>

                        <!-- Phone Number -->
                        <div>
                            <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
                            <input 
                                type="tel" 
                                id="phone" 
                                name="phone" 
                                value="<%= address.phone %>"
                                class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                placeholder="Enter phone number"
                                maxlength="10"
                            >
                            <div id="phoneError" class="text-red-500 text-sm mt-2 hidden">
                                <i class="fas fa-exclamation-circle mr-1"></i>
                                <span id="phoneErrorText"></span>
                            </div>
                        </div>

                        <!-- Address Line 1 -->
                        <div>
                            <label for="addressLine1" class="block text-sm font-medium text-gray-700 mb-2">Address Line 1</label>
                            <input 
                                type="text" 
                                id="addressLine1" 
                                name="addressLine1" 
                                value="<%= address.addressLine1 %>"
                                class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                placeholder="House no., Building, Street"
                            >
                            <div id="addressLine1Error" class="text-red-500 text-sm mt-2 hidden">
                                <i class="fas fa-exclamation-circle mr-1"></i>
                                <span id="addressLine1ErrorText"></span>
                            </div>
                        </div>

                        <!-- Address Line 2 -->
                        <div>
                            <label for="addressLine2" class="block text-sm font-medium text-gray-700 mb-2">Address Line 2 (Optional)</label>
                            <input 
                                type="text" 
                                id="addressLine2" 
                                name="addressLine2" 
                                value="<%= address.addressLine2 || '' %>"
                                class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                placeholder="Area, Landmark"
                            >
                        </div>

                        <!-- City, State, Pincode -->
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div>
                                <label for="city" class="block text-sm font-medium text-gray-700 mb-2">City</label>
                                <input 
                                    type="text" 
                                    id="city" 
                                    name="city" 
                                    value="<%= address.city %>"
                                    class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                    placeholder="City"
                                >
                                <div id="cityError" class="text-red-500 text-sm mt-2 hidden">
                                    <i class="fas fa-exclamation-circle mr-1"></i>
                                    <span id="cityErrorText"></span>
                                </div>
                            </div>
                            <div>
                                <label for="state" class="block text-sm font-medium text-gray-700 mb-2">State</label>
                                <input 
                                    type="text" 
                                    id="state" 
                                    name="state" 
                                    value="<%= address.state %>"
                                    class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                    placeholder="State"
                                >
                                <div id="stateError" class="text-red-500 text-sm mt-2 hidden">
                                    <i class="fas fa-exclamation-circle mr-1"></i>
                                    <span id="stateErrorText"></span>
                                </div>
                            </div>
                            <div>
                                <label for="pincode" class="block text-sm font-medium text-gray-700 mb-2">Pincode</label>
                                <input 
                                    type="text" 
                                    id="pincode" 
                                    name="pincode" 
                                    value="<%= address.pincode %>"
                                    class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                    placeholder="Pincode"
                                    maxlength="6"
                                >
                                <div id="pincodeError" class="text-red-500 text-sm mt-2 hidden">
                                    <i class="fas fa-exclamation-circle mr-1"></i>
                                    <span id="pincodeErrorText"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Country -->
                        <div>
                            <label for="country" class="block text-sm font-medium text-gray-700 mb-2">Country</label>
                            <select 
                                id="country" 
                                name="country"
                                class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            >
                                <option value="">Select Country</option>
                                <option value="India" <%= address.country === 'India' ? 'selected' : '' %>>India</option>
                                <option value="United States" <%= address.country === 'United States' ? 'selected' : '' %>>United States</option>
                                <option value="United Kingdom" <%= address.country === 'United Kingdom' ? 'selected' : '' %>>United Kingdom</option>
                                <option value="Canada" <%= address.country === 'Canada' ? 'selected' : '' %>>Canada</option>
                                <option value="Australia" <%= address.country === 'Australia' ? 'selected' : '' %>>Australia</option>
                            </select>
                            <div id="countryError" class="text-red-500 text-sm mt-2 hidden">
                                <i class="fas fa-exclamation-circle mr-1"></i>
                                <span id="countryErrorText"></span>
                            </div>
                        </div>

                        <!-- Set as Default -->
                        <div class="flex items-center">
                            <input 
                                type="checkbox" 
                                id="isDefault" 
                                name="isDefault"
                                class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                                <%= address.isDefault ? 'checked' : '' %>
                            >
                            <label for="isDefault" class="ml-2 text-sm text-gray-700">
                                Set as default address
                            </label>
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex justify-end gap-3 pt-6 border-t border-gray-200">
                            <a 
                                href="/user/profile/addresses"
                                class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-all"
                            >
                                Cancel
                            </a>
                            <button 
                                type="button" 
                                id="updateAddressBtn"
                                onclick="updateAddress()"
                                class="btn-primary text-white px-6 py-3 rounded-lg flex items-center gap-2"
                            >
                                <i class="fas fa-save"></i>
                                <span>Update Address</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <!-- Notification Container -->
    <div id="notificationContainer" class="fixed top-4 right-4 z-50"></div>

    <script>
        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            setupRealTimeValidation();
        });

        // Setup real-time validation for all fields
        function setupRealTimeValidation() {
            const inputs = document.querySelectorAll('#editAddressForm input, #editAddressForm select');
            inputs.forEach(input => {
                input.addEventListener('input', function() {
                    validateField(this.id, this.value);
                    hideError(this.id + 'Error');
                });
                
                input.addEventListener('blur', function() {
                    validateField(this.id, this.value);
                });
            });
        }

        // Real-time field validation
        function validateField(fieldId, value) {
            switch(fieldId) {
                case 'fullName':
                    return validateFullName(value);
                case 'phone':
                    return validatePhone(value);
                case 'addressLine1':
                    return validateAddressLine1(value);
                case 'city':
                    return validateCity(value);
                case 'state':
                    return validateState(value);
                case 'pincode':
                    return validatePincode(value);
                case 'country':
                    return validateCountry(value);
                default:
                    return true;
            }
        }

        // Individual validation functions
        function validateFullName(value) {
            if (!value.trim()) {
                showError('fullNameError', 'Full name is required');
                return false;
            }
            if (value.trim().length < 2) {
                showError('fullNameError', 'Full name must be at least 2 characters');
                return false;
            }
            hideError('fullNameError');
            return true;
        }

        function validatePhone(value) {
            const phone = value.replace(/\D/g, '');
            
            if (!phone) {
                showError('phoneError', 'Phone number is required');
                return false;
            }
            
            if (phone.length !== 10) {
                showError('phoneError', 'Phone number must be 10 digits');
                return false;
            }
            
            // Check for repeated digits (like 1111111111)
            if (/^(\d)\1{9}$/.test(phone)) {
                showError('phoneError', 'Please enter a valid phone number');
                return false;
            }
            
            // Check for sequential digits (like 1234567890)
            if (isSequential(phone)) {
                showError('phoneError', 'Please enter a valid phone number');
                return false;
            }
            
            hideError('phoneError');
            return true;
        }

        function validateAddressLine1(value) {
            if (!value.trim()) {
                showError('addressLine1Error', 'Address line 1 is required');
                return false;
            }
            if (value.trim().length < 5) {
                showError('addressLine1Error', 'Address must be at least 5 characters');
                return false;
            }
            hideError('addressLine1Error');
            return true;
        }

        function validateCity(value) {
            if (!value.trim()) {
                showError('cityError', 'City is required');
                return false;
            }
            if (value.trim().length < 2) {
                showError('cityError', 'Please enter a valid city name');
                return false;
            }
            hideError('cityError');
            return true;
        }

        function validateState(value) {
            if (!value.trim()) {
                showError('stateError', 'State is required');
                return false;
            }
            if (value.trim().length < 2) {
                showError('stateError', 'Please enter a valid state name');
                return false;
            }
            hideError('stateError');
            return true;
        }

        function validatePincode(value) {
            const pincode = value.replace(/\D/g, '');
            
            if (!pincode) {
                showError('pincodeError', 'Pincode is required');
                return false;
            }
            
            if (pincode.length !== 6) {
                showError('pincodeError', 'Pincode must be 6 digits');
                return false;
            }
            
            // Check for repeated digits (like 111111)
            if (/^(\d)\1{5}$/.test(pincode)) {
                showError('pincodeError', 'Please enter a valid pincode');
                return false;
            }
            
            // Check for sequential digits (like 123456)
            if (isSequential(pincode)) {
                showError('pincodeError', 'Please enter a valid pincode');
                return false;
            }
            
            hideError('pincodeError');
            return true;
        }

        function validateCountry(value) {
            if (!value) {
                showError('countryError', 'Please select a country');
                return false;
            }
            hideError('countryError');
            return true;
        }

        // Helper function to check sequential numbers
        function isSequential(str) {
            const digits = str.split('').map(Number);
            
            // Check ascending sequence
            let ascending = true;
            for (let i = 1; i < digits.length; i++) {
                if (digits[i] !== digits[i-1] + 1) {
                    ascending = false;
                    break;
                }
            }
            
            // Check descending sequence
            let descending = true;
            for (let i = 1; i < digits.length; i++) {
                if (digits[i] !== digits[i-1] - 1) {
                    descending = false;
                    break;
                }
            }
            
            return ascending || descending;
        }

        // Validate entire form
        function validateForm() {
            const formData = new FormData(document.getElementById('editAddressForm'));
            const data = Object.fromEntries(formData);
            
            hideAllErrors();
            
            let isValid = true;
            
            isValid = validateFullName(data.fullName) && isValid;
            isValid = validatePhone(data.phone) && isValid;
            isValid = validateAddressLine1(data.addressLine1) && isValid;
            isValid = validateCity(data.city) && isValid;
            isValid = validateState(data.state) && isValid;
            isValid = validatePincode(data.pincode) && isValid;
            isValid = validateCountry(data.country) && isValid;
            
            return isValid;
        }

        // Update address
        async function updateAddress() {
            if (!validateForm()) {
                showNotification('Please fix the validation errors before updating', 'error');
                return;
            }
            
            const formData = new FormData(document.getElementById('editAddressForm'));
            const data = Object.fromEntries(formData);
            const addressId = document.getElementById('addressId').value;
            
            try {
                // Update button state
                const updateBtn = document.getElementById('updateAddressBtn');
                updateBtn.disabled = true;
                updateBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i><span>Updating...</span>';
                
                const response = await axios.put(`/user/addresses/${addressId}`, data);
                
                if (response.data.success) {
                    showNotification('Address updated successfully!', 'success');
                    
                    // Redirect to address list after successful update
                    setTimeout(() => {
                        window.location.href = "/user/profile/addresses";
                    }, 1000);
                    
                } else {
                    showNotification(response.data.message || 'Failed to update address', 'error');
                }
            } catch (error) {
                console.error('Error updating address:', error);
                if (error.response && error.response.data && error.response.data.message) {
                    showNotification(error.response.data.message, 'error');
                } else {
                    showNotification('Failed to update address. Please try again.', 'error');
                }
            } finally {
                // Reset button state
                const updateBtn = document.getElementById('updateAddressBtn');
                updateBtn.disabled = false;
                updateBtn.innerHTML = '<i class="fas fa-save"></i><span>Update Address</span>';
            }
        }

        // Show error message
        function showError(elementId, message) {
            const errorElement = document.getElementById(elementId);
            const errorText = document.getElementById(elementId + 'Text');
            
            if (errorElement && errorText) {
                errorText.textContent = message;
                errorElement.classList.remove('hidden');
                
                // Add shake animation and red border to corresponding input
                const inputId = elementId.replace('Error', '');
                const input = document.getElementById(inputId);
                if (input) {
                    input.classList.add('shake', 'error-border');
                    setTimeout(() => input.classList.remove('shake'), 500);
                }
            }
        }

        // Hide error message
        function hideError(elementId) {
            const errorElement = document.getElementById(elementId);
            if (errorElement) {
                errorElement.classList.add('hidden');
                
                // Remove red border from input
                const inputId = elementId.replace('Error', '');
                const input = document.getElementById(inputId);
                if (input) {
                    input.classList.remove('error-border');
                }
            }
        }

        // Hide all errors
        function hideAllErrors() {
            const errorElements = document.querySelectorAll('[id$="Error"]');
            errorElements.forEach(element => {
                element.classList.add('hidden');
            });
            
            // Remove all error borders
            const inputs = document.querySelectorAll('#editAddressForm input, #editAddressForm select');
            inputs.forEach(input => {
                input.classList.remove('error-border');
            });
        }

        // Notification system
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `p-4 rounded-lg shadow-lg mb-2 transform transition-all duration-300 ${
                type === 'success' ? 'bg-green-500 text-white' : 'bg-red-500 text-white'
            }`;
            notification.innerHTML = `
                <div class="flex items-center gap-3">
                    <i class="fas fa-${type === 'success' ? 'check' : 'exclamation'}-circle"></i>
                    <span>${message}</span>
                </div>
            `;
            
            const container = document.getElementById('notificationContainer');
            container.appendChild(notification);
            
            // Remove notification after 3 seconds
            setTimeout(() => {
                notification.style.opacity = '0';
                setTimeout(() => {
                    if (container.contains(notification)) {
                        container.removeChild(notification);
                    }
                }, 300);
            }, 3000);
        }
