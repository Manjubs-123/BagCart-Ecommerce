<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | BagHub</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/images/favicon.png" />

    <!-- Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/a2e0da32f7.js" crossorigin="anonymous"></script>
  </head>

  <body class="bg-white font-mono min-h-screen flex flex-col">

    <!-- Navbar -->
    <nav class="shadow-md bg-white">
      <%- include('../partials/landingheader') %>
    </nav>

    <!-- Centered Login Box -->
    <main class="flex flex-1 items-center justify-center py-10">
      <div class="border-2 border-gray-300 rounded-3xl p-10 w-80 sm:w-96 text-center shadow-lg bg-white">
        <h1 class="text-2xl mb-6 font-semibold text-gray-800">Login</h1>

        <!-- Error Message -->
        <% if (error) { %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4 text-sm" role="alert">
            <span class="block sm:inline"><%= error %></span>
          </div>
        <% } %>

        <!-- Login Form -->
        <form action="/user/login" method="POST" class="space-y-4">
          <!-- Email -->
          <input
            type="email"
            name="email"
            placeholder="Email"
            required
            class="w-full bg-gray-100 text-sm rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-black"
          />

          <!-- Password -->
          <input
            type="password"
            name="password"
            placeholder="Password"
            required
            class="w-full bg-gray-100 text-sm rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-black"
          />

          <!-- Google Login Button -->
          <a
            href="/auth/google"
            class="flex items-center justify-center gap-2 w-full border border-gray-300 rounded-md py-2 px-3 hover:bg-gray-100 transition-all text-gray-700 font-medium"
          >
            <img src="https://www.svgrepo.com/show/355037/google.svg" alt="Google" class="w-5 h-5" />
            Login with Google
          </a>

          <!-- Links -->
          <div class="flex justify-between text-xs text-gray-600">
            <a href="/user/signup" class="hover:underline">Signup</a>
            <a href="/user/forgotPassword" class="hover:underline">Forgot Password?</a>
          </div>

          <!-- Login Button -->
          <button
            type="submit"
            class="bg-black text-white px-6 py-2 rounded-full hover:bg-gray-800 transition-all w-full"
          >
            Login
          </button>
        </form>
      </div>
    </main>

    <!-- Footer -->
    <footer class="mt-auto">
      <%- include('../partials/footer') %>
    </footer>
  </body>
</html>
