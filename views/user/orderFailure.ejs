<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Failed | BagHub</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        :root {
            --primary: #1a56db;
            --primary-dark: #1e429f;
            --primary-light: #3b82f6;
            --secondary: #10b981;
            --danger: #ef4444;
            --warning: #f59e0b;
            --gray-light: #f3f4f6;
            --gray-dark: #374151;
        }
        
        * {
            font-family: 'Inter', sans-serif;
        }
        
        .fade-in {
            animation: fadeIn 0.8s ease-in-out;
        }
        
        .slide-up {
            animation: slideUp 0.6s ease-out;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        @keyframes slideUp {
            from { transform: translateY(30px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }
        
        .gradient-bg {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        }
        
        .error-icon {
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
        
        .btn-primary {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(26, 86, 219, 0.25);
        }
        
        .btn-secondary {
            background: linear-gradient(135deg, var(--gray-dark) 0%, #4b5563 100%);
            transition: all 0.3s ease;
        }
        
        .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(55, 65, 81, 0.25);
        }
        
        .border-glow {
            box-shadow: 0 0 25px rgba(239, 68, 68, 0.15);
            border: 1px solid rgba(239, 68, 68, 0.1);
        }
        
        .glass-effect {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen flex items-center justify-center p-4">
    
    <!-- Main Container -->
    <div class="max-w-4xl w-full fade-in">
        
        <!-- Header Card -->
        <div class="glass-effect rounded-2xl shadow-xl overflow-hidden mb-8 border-glow">
            <div class="gradient-bg p-8 text-center text-white relative overflow-hidden">
                <!-- Background Pattern -->
                <div class="absolute inset-0 opacity-10">
                    <div class="absolute top-0 left-0 w-64 h-64 bg-white rounded-full -translate-x-1/2 -translate-y-1/2"></div>
                    <div class="absolute bottom-0 right-0 w-64 h-64 bg-white rounded-full translate-x-1/2 translate-y-1/2"></div>
                </div>
                
                <div class="relative z-10">
                    <div class="flex justify-center mb-6">
                        <div class="w-24 h-24 rounded-full bg-white/20 flex items-center justify-center error-icon border-4 border-white/30">
                            <i class="fas fa-exclamation-triangle text-4xl text-white"></i>
                        </div>
                    </div>
                    <h1 class="text-3xl font-bold mb-3 tracking-tight">Payment Failed</h1>
                    <p class="text-lg opacity-95 font-light">We encountered an issue processing your payment</p>
                </div>
            </div>
            
            <!-- Content Section -->
            <div class="p-6 md:p-10">
                <div class="flex flex-col lg:flex-row items-center gap-8">
                    
                    <!-- Illustration -->
                    <div class="lg:w-1/2 slide-up" style="animation-delay: 0.2s">
                        <div class="bg-gradient-to-br from-red-50 to-pink-50 rounded-xl p-4 border border-red-100">
                            <div class="relative">
                                <div class="bg-white rounded-lg p-4 shadow-inner">
                                    <img src="/images/failure-illustration.svg" 
                                         alt="Payment Failed Illustration" 
                                         class="w-full max-w-sm mx-auto h-auto"
                                         onerror="this.onerror=null; this.src='https://cdn-icons-png.flaticon.com/512/179/179386.png'">
                                </div>
                                
                                <!-- Animated Elements -->
                                <div class="absolute -top-3 -right-3 w-14 h-14 bg-red-500 rounded-full flex items-center justify-center shadow-lg">
                                    <i class="fas fa-times text-white text-xl"></i>
                                </div>
                                <div class="absolute -bottom-3 -left-3 w-10 h-10 bg-yellow-500 rounded-full flex items-center justify-center shadow-lg">
                                    <i class="fas fa-exclamation text-white text-sm"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Message & Actions -->
                    <div class="lg:w-1/2 slide-up" style="animation-delay: 0.4s">
                        
                        <!-- Status Details -->
                        <div class="mb-8">
                            <div class="flex items-center gap-3 mb-4">
                                <div class="w-12 h-12 bg-red-50 rounded-full flex items-center justify-center border border-red-100">
                                    <i class="fas fa-credit-card text-red-500 text-xl"></i>
                                </div>
                                <div>
                                    <h3 class="text-lg font-semibold text-gray-800">Transaction Status</h3>
                                    <div class="flex items-center gap-2 mt-1">
                                        <span class="px-3 py-1 bg-red-50 text-red-700 rounded-full text-sm font-semibold border border-red-200">
                                            <i class="fas fa-times-circle mr-1.5"></i> Failed
                                        </span>
                                        <span class="text-gray-500 text-sm bg-gray-50 px-2 py-1 rounded border border-gray-200">
                                            <i class="far fa-clock mr-1.5"></i> Just now
                                        </span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="bg-gray-50 rounded-lg p-4 mb-6 border border-gray-200">
                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <p class="text-xs text-gray-500 mb-1 uppercase tracking-wider font-medium">Order ID</p>
                                        <p class="font-mono font-semibold text-gray-800 text-sm">
                                             <%= orderDisplayId || 'N/A' %>
                                        </p>
                                    </div>
                                    <div>
                                        <p class="text-xs text-gray-500 mb-1 uppercase tracking-wider font-medium">Date & Time</p>
                                        <p class="font-semibold text-gray-800 text-sm" id="currentDateTime"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Error Message -->
                        <div class="mb-8">
                            <h3 class="text-base font-semibold text-gray-800 mb-3 flex items-center gap-2">
                                <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-info-circle text-blue-500 text-sm"></i>
                                </div>
                                Possible Reasons
                            </h3>
                            <div class="bg-blue-50 border border-blue-100 rounded-lg p-4">
                                <ul class="space-y-2.5 text-gray-700">
                                    <li class="flex items-start gap-3">
                                        <div class="w-6 h-6 bg-white rounded-full flex items-center justify-center border border-blue-200 mt-0.5">
                                            <i class="fas fa-circle text-blue-400 text-xs"></i>
                                        </div>
                                        <span class="text-sm">Insufficient funds in your account</span>
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <div class="w-6 h-6 bg-white rounded-full flex items-center justify-center border border-blue-200 mt-0.5">
                                            <i class="fas fa-circle text-blue-400 text-xs"></i>
                                        </div>
                                        <span class="text-sm">Incorrect card details or CVV</span>
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <div class="w-6 h-6 bg-white rounded-full flex items-center justify-center border border-blue-200 mt-0.5">
                                            <i class="fas fa-circle text-blue-400 text-xs"></i>
                                        </div>
                                        <span class="text-sm">Network or bank server issues</span>
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <div class="w-6 h-6 bg-white rounded-full flex items-center justify-center border border-blue-200 mt-0.5">
                                            <i class="fas fa-circle text-blue-400 text-xs"></i>
                                        </div>
                                        <span class="text-sm">Card expired or blocked by bank</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        
                        <!-- Action Buttons -->
                        <div class="space-y-4">
                            <div class="flex flex-col sm:flex-row gap-3">
                                <!-- Retry Payment Button -->
                                <a href="/order/retry/<%= orderMongoId %>" 
                                   class="btn-primary text-white font-semibold py-3.5 px-6 rounded-lg flex-1 text-center flex items-center justify-center gap-3 shadow-md hover:shadow-lg transition-all duration-300 group">
                                    <i class="fas fa-redo-alt group-hover:rotate-180 transition-transform duration-500"></i>
                                    <span>Retry Payment</span>
                                </a>
                                
                                <!-- View Order Details Button -->
                                 <a href="/order/orders"
                                   class="btn-secondary text-white font-semibold py-3.5 px-6 rounded-lg flex-1 text-center flex items-center justify-center gap-3 shadow-md hover:shadow-lg transition-all duration-300 group">
                                    <i class="fas fa-file-invoice group-hover:scale-110 transition-transform duration-300"></i>
                                    <span>View Details</span>
                                </a>
                            </div>
                            
                            
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Tips & Suggestions -->
        <div class="slide-up" style="animation-delay: 0.6s">
            <div class="glass-effect rounded-xl shadow-lg p-6 border border-gray-200">
                <h3 class="text-base font-semibold text-gray-800 mb-4 flex items-center gap-2">
                    <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-lightbulb text-yellow-500 text-sm"></i>
                    </div>
                    Tips for successful payment
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                    <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-lg p-4 border border-green-100 hover:border-green-200 transition-colors duration-300">
                        <div class="flex items-center gap-3 mb-3">
                            <div class="w-9 h-9 bg-green-100 rounded-full flex items-center justify-center border border-green-200">
                                <i class="fas fa-shield-alt text-green-500 text-sm"></i>
                            </div>
                            <h4 class="font-medium text-gray-800 text-sm">Verify Details</h4>
                        </div>
                        <p class="text-xs text-gray-600 leading-relaxed">Double-check card number, expiry date, and CVV for accuracy</p>
                    </div>
                    
                    <div class="bg-gradient-to-br from-blue-50 to-cyan-50 rounded-lg p-4 border border-blue-100 hover:border-blue-200 transition-colors duration-300">
                        <div class="flex items-center gap-3 mb-3">
                            <div class="w-9 h-9 bg-blue-100 rounded-full flex items-center justify-center border border-blue-200">
                                <i class="fas fa-wifi text-blue-500 text-sm"></i>
                            </div>
                            <h4 class="font-medium text-gray-800 text-sm">Stable Connection</h4>
                        </div>
                        <p class="text-xs text-gray-600 leading-relaxed">Ensure strong internet connection during transaction</p>
                    </div>
                    
                    <div class="bg-gradient-to-br from-purple-50 to-violet-50 rounded-lg p-4 border border-purple-100 hover:border-purple-200 transition-colors duration-300">
                        <div class="flex items-center gap-3 mb-3">
                            <div class="w-9 h-9 bg-purple-100 rounded-full flex items-center justify-center border border-purple-200">
                                <i class="fas fa-history text-purple-500 text-sm"></i>
                            </div>
                            <h4 class="font-medium text-gray-800 text-sm">Wait & Retry</h4>
                        </div>
                        <p class="text-xs text-gray-600 leading-relaxed">Wait a few minutes before retrying the payment</p>
                    </div>
                </div>
                
                <!-- Continue Shopping Link -->
                <div class="text-center mt-6 pt-4 border-t border-gray-100">
                    <a href="/user/shop" 
                       class="inline-flex items-center gap-2 text-primary font-medium hover:text-primary-dark transition-colors text-sm">
                        <i class="fas fa-shopping-bag"></i>
                        Continue Shopping
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Security Badge -->
        <div class="slide-up mt-6 text-center" style="animation-delay: 0.8s">
            <div class="inline-flex items-center gap-3 text-gray-500 text-xs bg-white/50 rounded-full px-4 py-2 border border-gray-200">
                <i class="fas fa-lock text-green-500"></i>
                <span>Secure Payment • 256-bit SSL Encryption • PCI DSS Compliant</span>
                <i class="fas fa-shield-alt text-blue-500"></i>
            </div>
        </div>
        
    </div>
    
   
    <script>
        // Display current date and time
        function updateDateTime() {
            const now = new Date();
            const options = { 
                year: 'numeric',
                month: 'short',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            };
            document.getElementById('currentDateTime').textContent = 
                now.toLocaleDateString('en-US', options);
        }
        
        // Update time on load
        updateDateTime();
        
        // Add animation to buttons on hover
        document.addEventListener('DOMContentLoaded', function() {
            // Add loading state to retry button
            const retryBtn = document.querySelector('a[href*="/order/retry/"]');
            if (retryBtn) {
                retryBtn.addEventListener('click', function(e) {
                    const originalText = this.innerHTML;
                    this.innerHTML = `
                        <i class="fas fa-spinner fa-spin"></i>
                        <span>Processing...</span>
                    `;
                    this.classList.add('opacity-75', 'cursor-not-allowed');
                    
                    // Reset after 5 seconds if still on page
                    setTimeout(() => {
                        this.innerHTML = originalText;
                        this.classList.remove('opacity-75', 'cursor-not-allowed');
                    }, 5000);
                });
            }
            
            // Add subtle hover effects to all cards
            const cards = document.querySelectorAll('.glass-effect');
            cards.forEach(card => {
                card.addEventListener('mouseenter', () => {
                    card.style.transform = 'translateY(-2px)';
                    card.style.transition = 'transform 0.3s ease';
                });
                
                card.addEventListener('mouseleave', () => {
                    card.style.transform = 'translateY(0)';
                });
            });
        });
        
        // Fallback for missing illustration
        document.addEventListener('error', function(e) {
            if (e.target.tagName.toLowerCase() === 'img' && e.target.src.includes('failure-illustration.svg')) {
                e.target.src = 'https://cdn-icons-png.flaticon.com/512/179/179386.png';
                e.target.classList.add('max-w-[180px]', 'mx-auto', 'opacity-80');
            }
        }, true);
    </script>
    
</body>
</html>