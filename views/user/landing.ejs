    <!-- JS SECTION -->
    <script>
      // Swiper Configurations
      const config = {
        slidesPerView: 1,
        spaceBetween: 20,
        loop: true,
        autoplay: { delay: 3000, disableOnInteraction: false },
        pagination: { el: ".swiper-pagination", clickable: true },
        breakpoints: {
          640: { slidesPerView: 1.2 },
          768: { slidesPerView: 2 },
          1024: { slidesPerView: 3 },
          1280: { slidesPerView: 4 },
        },
      };

      const featuredConfig = {
        ...config,
        navigation: { nextEl: ".swiper-button-next", prevEl: ".swiper-button-prev" },
      };

      new Swiper(".featuredSwiper", featuredConfig);
      new Swiper(".favSwiper", config);
      new Swiper(".handSwiper", config);
      new Swiper(".trendSwiper", config);

      // Axios Demo
      async function loadProducts() {
        try {
          const res = await axios.get("/api/products");
          console.log("Products:", res.data);
        } catch (err) {
          console.error("Error loading products:", err);
        }
      }
      loadProducts();
      
      
function addToCartFrontend(productId) {
  fetch("/user/cart/add", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      productId,
      quantity: 1,
      variantIndex: 0
    })
  })
  .then(res => res.json())
  .then(data => {
    if (data.success) {
      updateCartCount();
      showNotification("Added to Cart", "success");
    } else {
      showNotification("Failed to add to cartttt", "error");
    }
  });
}

// Update navbar cart badge
function updateCartCount() {
    const cartBadge = document.querySelector("#cartCount, .cartCount, .cart-count");

    if (cartBadge) {
        let current = parseInt(cartBadge.innerText) || 0;
        cartBadge.innerText = current + 1;
    }
}

// Simple toast (you already use it for wishlist)
function showNotification(msg, type) {
  Swal.fire({
    title: msg,
    icon: type === "success" ? "success" : "error",
    toast: true,
    position: "top-end",
    showConfirmButton: false,
    timer: 1800,
    timerProgressBar: true
  });
}


    

function toggleWishlist(productId, btn) {
    fetch(`/user/wishlist/toggle/${productId}`, {
        method: "POST"
    })
    .then(res => res.json())
    .then(data => {
        const icon = btn.querySelector("i");

        if (data.added) {
            icon.classList.remove("far");
            icon.classList.add("fas", "text-red-500");
        } else {
            icon.classList.remove("fas", "text-red-500");
            icon.classList.add("far");
        }

        showNotification(data.message, "success");
    });
}
</script>

