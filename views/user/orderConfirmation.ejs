<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Order Confirmed - BagHub</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #1a56db;
      --success: #10b981;
    }
    
    .confetti {
      position: absolute;
      width: 10px;
      height: 10px;
      border-radius: 2px;
      animation: fall 4s linear infinite;
    }
    
    @keyframes fall {
      0% { transform: translateY(-50px) rotate(0deg); }
      100% { transform: translateY(100vh) rotate(180deg); }
    }
    
    .success-circle {
      width: 90px;
      height: 90px;
      border-radius: 50%;
      background: var(--success);
      display: flex;
      align-items: center;
      justify-content: center;
      margin: auto;
      animation: pop 0.5s ease-in-out forwards;
    }
    
    @keyframes pop {
      0% { transform: scale(0.5); opacity: 0; }
      100% { transform: scale(1); opacity: 1; }
    }
    
    .order-item-card {
      border-left: 4px solid #1a56db;
      transition: all 0.3s ease;
    }
    
    .order-item-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>

<body class="bg-gray-50 min-h-screen">

  <%- include('../partials/landingheader') %>

  <!-- Confetti Effect -->
  <div id="confettiContainer" class="fixed inset-0 pointer-events-none z-0"></div>

  <div class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">
      
      <!-- Success Header -->
      <div class="bg-white rounded-2xl shadow-lg p-8 mb-8 text-center relative z-10">
        <div class="success-circle mb-6">
          <i class="fas fa-check text-white text-4xl"></i>
        </div>
        
        <h1 class="text-3xl md:text-4xl font-bold text-green-600 mb-4">
          Order Confirmed Successfully!
        </h1>
        
        <p class="text-gray-600 text-lg mb-6">
          Thank you for your purchase. Your order has been confirmed and will be processed shortly.
        </p>

        <!-- Order Summary Box -->
        <div class="bg-blue-50 border border-blue-200 rounded-xl p-6 max-w-2xl mx-auto">
          <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div class="text-left">
              <h2 class="text-xl font-bold text-gray-900">Order Summary</h2>
              <p class="text-gray-600">We've sent the order details to your email</p>
            </div>
            <div class="text-right">
              <p class="text-sm text-gray-600">Main Order ID</p>
              <p class="text-2xl font-bold text-blue-600 font-mono">
                <%= order._id %>
              </p>
              <p class="text-sm text-gray-600 mt-1">
                <%= order.createdAt.toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric',
                  hour: '2-digit',
                  minute: '2-digit'
                }) %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Individual Order Items -->
      <div class="space-y-6 mb-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Your Order Items</h2>
        
        <% order.items.forEach((item, index) => { %>
          <div class="order-item-card bg-white rounded-xl shadow-sm p-6">
            <div class="flex flex-col lg:flex-row gap-6">
              
              <!-- Product Image -->
              <div class="flex-shrink-0">
                <img src="<%= item.image || '/images/no-image.jpg' %>" 
                     alt="<%= item.product.name %>"
                     class="w-32 h-32 object-cover rounded-lg">
              </div>

              <!-- Product Details -->
              <div class="flex-grow">
                <div class="flex flex-col md:flex-row md:items-start justify-between gap-4 mb-4">
                  <div>
                    <h3 class="text-xl font-bold text-gray-900 mb-2">
                      <%= item.product.name %>
                    </h3>
                    
                    <!-- Individual Item Order ID -->
                    <div class="bg-gray-100 rounded-lg p-3 mb-3">
                      <p class="text-sm text-gray-600">Item Order ID</p>
                      <p class="font-mono text-lg font-bold text-gray-900">
                        <%= order._id %>-<%= index + 1 %>
                      </p>
                    </div>

                    <!-- Product Specifications -->
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                      <div>
                        <p class="text-sm text-gray-600">Color</p>
                        <p class="font-medium"><%= item.color %></p>
                      </div>
                      <div>
                        <p class="text-sm text-gray-600">Quantity</p>
                        <p class="font-medium"><%= item.quantity %></p>
                      </div>
                      <div>
                        <p class="text-sm text-gray-600">Unit Price</p>
                        <p class="font-medium">₹<%= item.price %></p>
                      </div>
                      <div>
                        <p class="text-sm text-gray-600">Item Total</p>
                        <p class="font-medium">₹<%= (item.price * item.quantity).toFixed(2) %></p>
                      </div>
                    </div>
                  </div>

                  <!-- Status Badge -->
                  <div class="flex-shrink-0">
                    <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold
                                <%= getStatusColor(item.status || order.orderStatus) %>">
                      <i class="fas <%= getStatusIcon(item.status || order.orderStatus) %> mr-2"></i>
                      <%= (item.status || order.orderStatus).charAt(0).toUpperCase() + (item.status || order.orderStatus).slice(1) %>
                    </span>
                  </div>
                </div>

                <!-- Progress Bar -->
                <div class="mt-4">
                  <div class="flex justify-between text-sm text-gray-600 mb-2">
                    <span>Order Placed</span>
                    <span>Processing</span>
                    <span>Shipped</span>
                    <span>Delivered</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div class="<%= getProgressBarClass(item.status || order.orderStatus) %> h-2 rounded-full transition-all duration-500"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Order Summary -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
        <!-- Price Summary -->
        <div class="bg-white rounded-xl shadow-sm p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Price Summary</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-600">Subtotal (<%= order.items.length %> items)</span>
              <span class="font-medium">₹<%= order.subtotal.toFixed(2) %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Tax (10%)</span>
              <span class="font-medium">₹<%= order.tax.toFixed(2) %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Shipping</span>
              <span class="font-medium text-green-600">
                <%= order.shippingFee === 0 ? 'FREE' : `₹${order.shippingFee.toFixed(2)}` %>
              </span>
            </div>
            <div class="border-t pt-3">
              <div class="flex justify-between text-lg font-bold">
                <span>Total Amount</span>
                <span class="text-blue-600">₹<%= order.totalAmount.toFixed(2) %></span>
              </div>
            </div>
          </div>
        </div>

        <!-- Shipping Address -->
        <div class="bg-white rounded-xl shadow-sm p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Shipping Address</h3>
          <div class="text-gray-600">
            <p class="font-medium text-gray-900"><%= order.shippingAddress.fullName %></p>
            <p class="mt-1"><%= order.shippingAddress.addressLine1 %></p>
            <% if (order.shippingAddress.addressLine2) { %>
              <p><%= order.shippingAddress.addressLine2 %></p>
            <% } %>
            <p>
              <%= order.shippingAddress.city %>, 
              <%= order.shippingAddress.state %> - 
              <%= order.shippingAddress.pincode %>
            </p>
            <p><%= order.shippingAddress.country %></p>
            <p class="mt-2 font-medium">Phone: <%= order.shippingAddress.phone %></p>
          </div>
        </div>

        <!-- Payment Information -->
        <div class="bg-white rounded-xl shadow-sm p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Payment Information</h3>
          <div class="space-y-3 text-gray-600">
            <div class="flex justify-between">
              <span>Payment Method:</span>
              <span class="font-medium capitalize">
                <%= order.paymentMethod === 'cod' ? 'Cash on Delivery' : order.paymentMethod %>
              </span>
            </div>
            <div class="flex justify-between">
              <span>Payment Status:</span>
              <span class="font-medium text-green-600 capitalize">
                <%= order.paymentStatus %>
              </span>
            </div>
            <div class="flex justify-between">
              <span>Order Status:</span>
              <span class="font-medium text-blue-600 capitalize">
                <%= order.orderStatus %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="bg-white rounded-xl shadow-sm p-8 text-center">
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/user/orders" 
             class="bg-blue-600 text-white px-8 py-4 rounded-xl font-semibold hover:bg-blue-700 transition-colors flex items-center justify-center gap-3">
            <i class="fas fa-list"></i>
            View All Orders
          </a>
          <a href="/" 
             class="bg-white border border-gray-300 text-gray-700 px-8 py-4 rounded-xl font-semibold hover:bg-gray-50 transition-colors flex items-center justify-center gap-3">
            <i class="fas fa-shopping-bag"></i>
            Continue Shopping
          </a>
          <button onclick="downloadInvoice('<%= order._id %>')" 
                  class="bg-green-600 text-white px-8 py-4 rounded-xl font-semibold hover:bg-green-700 transition-colors flex items-center justify-center gap-3">
            <i class="fas fa-file-invoice"></i>
            Download Invoice
          </button>
        </div>
      </div>

    </div>
  </div>

  <script>
    // Confetti animation
    function launchConfetti() {
      const container = document.getElementById("confettiContainer");
      const colors = ["#10b981", "#3b82f6", "#f59e0b", "#ef4444", "#8b5cf6"];

      for (let i = 0; i < 50; i++) {
        let div = document.createElement("div");
        div.classList.add("confetti");
        div.style.left = Math.random() * 100 + "vw";
        div.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        div.style.animationDelay = Math.random() * 3 + "s";
        container.appendChild(div);
      }
    }

    // Download invoice function
    function downloadInvoice(orderId) {
      // Implement your invoice download logic here
      window.open(`/order/${orderId}/invoice`, '_blank');
    }

    document.addEventListener("DOMContentLoaded", launchConfetti);
  </script>
</body>
</html>

<%
  // Helper functions for dynamic styling
  function getStatusColor(status) {
    const statusColors = {
      'pending': 'bg-yellow-100 text-yellow-800',
      'processing': 'bg-blue-100 text-blue-800',
      'shipped': 'bg-purple-100 text-purple-800',
      'delivered': 'bg-green-100 text-green-800',
      'cancelled': 'bg-red-100 text-red-800'
    };
    return statusColors[status] || 'bg-gray-100 text-gray-800';
  }

  function getStatusIcon(status) {
    const statusIcons = {
      'pending': 'fa-clock',
      'processing': 'fa-cog',
      'shipped': 'fa-truck',
      'delivered': 'fa-check',
      'cancelled': 'fa-times'
    };
    return statusIcons[status] || 'fa-info-circle';
  }

  function getProgressBarClass(status) {
    const progressClasses = {
      'pending': 'bg-yellow-500 w-1/4',
      'processing': 'bg-blue-500 w-2/4',
      'shipped': 'bg-purple-500 w-3/4',
      'delivered': 'bg-green-500 w-full',
      'cancelled': 'bg-red-500 w-full'
    };
    return progressClasses[status] || 'bg-gray-500 w-1/4';
  }
%>