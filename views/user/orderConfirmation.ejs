    <script>
        // Create confetti effect
        function createConfetti() {
            const container = document.getElementById('confettiContainer');
            const colors = ['#f59e0b', '#10b981', '#3b82f6', '#ef4444', '#8b5cf6'];
            
            for (let i = 0; i < 50; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.animationDelay = Math.random() * 5 + 's';
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                container.appendChild(confetti);
            }
        }
        
        // Download invoice
        function downloadInvoice() {
            // In a real application, this would trigger a PDF download
            alert('Your invoice is being downloaded...');
        }
        
        // Track order
        function trackOrder() {
            // In a real application, this would redirect to tracking page
            alert('Redirecting to order tracking...');
        }
        
        // Continue shopping
        function continueShopping() {
            window.location.href = '/';
        }
        
        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            createConfetti();
            
            // Add event listeners to buttons
            document.querySelector('button:first-child').addEventListener('click', trackOrder);
            document.querySelectorAll('button')[1].addEventListener('click', downloadInvoice);
            document.querySelectorAll('button')[2].addEventListener('click', continueShopping);
            
            // Auto progress animation
            setTimeout(() => {
                const progressFill = document.querySelector('.progress-fill');
                progressFill.style.width = '40%';
            }, 1000);
        });
