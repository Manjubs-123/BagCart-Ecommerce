    <script>
        // Checkout state
        const checkoutState = {
            selectedAddress: null,
            selectedPaymentMethod: null,
            cartItems: [],
            walletBalance: 0,
            addresses: [],
            orderSummary: {
                subtotal: 0,
                shipping: 0,
                tax: 0,
                total: 0
            }
        };

        // Initialize checkout
        document.addEventListener('DOMContentLoaded', function() {
            loadCheckoutData();
            setupEventListeners();
            setupAddressModalValidation();
        });

        // Load checkout data
        async function loadCheckoutData() {
            try {
                // Load cart items
                const cartResponse = await axios.get('/api/cart');
                if (cartResponse.data.success) {
                    checkoutState.cartItems = cartResponse.data.cart.items || [];
                    renderOrderItems();
                    updateOrderSummary();
                }

                // Load addresses
                const addressResponse = await axios.get('/api/addresses');
                if (addressResponse.data.success) {
                    checkoutState.addresses = addressResponse.data.addresses || [];
                    renderAddresses();
                }

                // Load wallet balance
                const walletResponse = await axios.get('/api/wallet/balance');
                if (walletResponse.data.success) {
                    checkoutState.walletBalance = walletResponse.data.balance || 0;
                    // document.getElementById('walletBalance').textContent = checkoutState.walletBalance.toFixed(2);
                }

            } catch (error) {
                console.error('Error loading checkout data:', error);
                showNotification('Failed to load checkout data', 'error');
            }
        }

        // Render addresses
       function renderAddresses() {
    const container = document.getElementById('addressesContainer');

    if (checkoutState.addresses.length === 0) {
        container.innerHTML = `
            <div class="col-span-2 text-center py-8">
                <i class="fas fa-map-marker-alt text-gray-400 text-4xl mb-4"></i>
                <p class="text-gray-600 mb-4">No addresses found</p>
                <button onclick="openAddressModal()" class="text-blue-600 hover:text-blue-800 transition-colors">
                    Add your first address
                </button>
            </div>
        `;
        return;
    }

    container.innerHTML = checkoutState.addresses.map(address => `
        <div class="address-card p-4 border border-gray-200 rounded-xl cursor-pointer 
                    ${address.isDefault ? 'selected' : ''}"
             data-address-id="${address._id}">

            <div class="flex items-start justify-between mb-2">
                <h3 class="font-bold text-gray-900">${address.fullName}</h3>

                ${address.isDefault ? `
                    <span class="default-badge text-white text-xs px-2 py-1 rounded-full">
                        Default
                    </span>
                ` : ``}
            </div>

            <p class="text-gray-600 text-sm mb-2">${address.phone}</p>
            <p class="text-gray-600 text-sm mb-2">${address.addressLine1}</p>

            ${address.addressLine2 
                ? `<p class="text-gray-600 text-sm mb-2">${address.addressLine2}</p>` 
                : ''}

            <p class="text-gray-600 text-sm">
                ${address.city}, ${address.state} - ${address.pincode}
            </p>

            <div class="text-sm text-blue-600 mt-3">
                Click to select for delivery
            </div>
        </div>
    `).join('');

    // Auto-select default address
    const defaultAddress = checkoutState.addresses.find(addr => addr.isDefault);
    if (defaultAddress) {
        document.querySelector(`[data-address-id="${defaultAddress._id}"]`)?.classList.add('selected');
        checkoutState.selectedAddress = defaultAddress._id;
    }
}

        // Render order items
       function renderOrderItems() {
    const container = document.getElementById('orderItemsContainer');
    const previewContainer = document.getElementById('orderPreviewContainer');

    if (checkoutState.cartItems.length === 0) {
        container.innerHTML = `
            <div class="text-center py-8">
                <i class="fas fa-shopping-cart text-gray-400 text-4xl mb-4"></i>
                <p class="text-gray-600">Your cart is empty</p>
            </div>
        `;
        previewContainer.innerHTML = '<p class="text-gray-600 text-sm">No items in cart</p>';
        return;
    }

    container.innerHTML = checkoutState.cartItems.map(item => {

        const product = item.product;
        const variant = product.variants[item.variantIndex];

        const available = variant?.stock ?? 0;
        const isOutOfStock = available <= 0;
        const isLowStock = available > 0 && available < 5;

        const totalPrice = variant.price * item.quantity;

        return `
            <div class="checkout-item bg-white border border-gray-200 rounded-xl p-4 flex flex-col md:flex-row gap-4"
                 data-item-id="${item._id}"
                 data-price="${variant.price}"
                 data-qty="${item.quantity}"
                 data-available="${available}">
                 
                <!-- IMAGE -->
                <div class="flex-shrink-0">
                    <img src="${variant?.images?.[0]?.url || '/images/no-image.jpg'}"
                         alt="${product.name}"
                         class="w-24 h-24 md:w-32 md:h-32 object-cover rounded-lg">
                </div>

                <div class="flex-grow">

                    <!-- NAME -->
                    <h3 class="font-bold text-gray-900 text-lg">${product.name}</h3>

                    <!-- COLOR -->
                    <p class="text-gray-600 text-sm mt-1">
                        Color: ${variant.color}
                    </p>

                    <!-- STOCK DISPLAY -->
                    <div class="mt-2 flex items-center gap-4">
                        ${isOutOfStock ? `
                            <span class="text-red-600 font-medium flex items-center gap-1">
                                <i class="fas fa-times-circle"></i> Out of stock
                            </span>
                            <span class="text-gray-500 text-sm ml-3">
                                <i class="fas fa-box mr-1"></i> 0 left
                            </span>
                        ` : `
