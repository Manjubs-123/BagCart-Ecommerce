        // Setup address modal validation
        function setupAddressModalValidation() {
            const inputs = document.querySelectorAll('#addressForm input, #addressForm select');
            inputs.forEach(input => {
                input.addEventListener('input', function() {
                    validateField(this.name, this.value);
                    hideError(this.name + 'Error');
                });
                
                input.addEventListener('blur', function() {
                    validateField(this.name, this.value);
                });
            });
        }

        // Handle quantity changes
        async function handleQuantityChange(itemId, action) {
            try {
                const item = checkoutState.cartItems.find(item => item._id === itemId);
                if (!item) return;

                let newQuantity = item.quantity;

                if (action === 'increase') {
                    newQuantity++;
                } else if (action === 'decrease') {
                    if (newQuantity > 1) {
                        newQuantity--;
                    } else {
                        await handleRemoveItem(itemId);
                        return;
                    }
                }

                const response = await axios.put('/user/cart/update', {
                    itemId,
                    quantity: newQuantity
                });

                if (response.data.success) {
                    item.quantity = newQuantity;
                    renderOrderItems();
                    updateOrderSummary();
                    showNotification('Cart updated successfully', 'success');
                } else {
                    showNotification('Failed to update quantity', 'error');
                }
            } catch (error) {
                console.error('Error updating quantity:', error);
                showNotification('Failed to update quantity', 'error');
            }
        }

        // Handle remove item
        async function handleRemoveItem(itemId) {
            if (!confirm('Remove this item from your order?')) return;

            try {
                const response = await axios.delete(`/user/cart/remove/${itemId}`);

                if (response.data.success) {
                    checkoutState.cartItems = checkoutState.cartItems.filter(item => item._id !== itemId);
                    renderOrderItems();
                    updateOrderSummary();
                    showNotification('Item removed from cart', 'success');
                } else {
                    showNotification('Failed to remove item', 'error');
                }
            } catch (error) {
                console.error('Error removing item:', error);
                showNotification('Failed to remove item', 'error');
            }
        }

        // Handle add or update address
        async function handleAddOrUpdateAddress(e) {
            e.preventDefault();
            
            if (!validateAddressForm()) {
                showNotification('Please fix the validation errors before saving', 'error');
                return;
            }
            
            try {
                const formData = new FormData(e.target);
                const addressData = {
                    fullName: formData.get('fullName'),
                    phone: formData.get('phone'),
                    addressLine1: formData.get('addressLine1'),
                    addressLine2: formData.get('addressLine2'),
                    city: formData.get('city'),
                    state: formData.get('state'),
                    pincode: formData.get('pincode'),
                    country: formData.get('country'),
                    addressType: formData.get('addressType'),
                    isDefault: formData.get('isDefault') === 'on'
                };

                const addressId = document.getElementById('addressId').value;
                let response;

                // Update button state
                const submitBtn = document.getElementById('submitAddressBtn');
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i><span>Saving...</span>';

                if (addressId) {
                    // Update existing address
                    response = await axios.put(`/api/addresses/${addressId}`, addressData);
                } else {
                    // Add new address
                    response = await axios.post('/api/addresses', addressData);
                }

                if (response.data.success) {
                    if (addressId) {
                        // Update local state for edit
                        const index = checkoutState.addresses.findIndex(addr => addr._id === addressId);
                        if (index !== -1) {
                            checkoutState.addresses[index] = response.data.address;
                        }
                    } else {
                        // Add to local state for new address
                        checkoutState.addresses.push(response.data.address);
                    }
                    
                    renderAddresses();
                    closeAddressModal();
                    e.target.reset();
                    showNotification(`Address ${addressId ? 'updated' : 'added'} successfully`, 'success');
                } else {
                    showNotification(`Failed to ${addressId ? 'update' : 'add'} address`, 'error');
                }
            } catch (error) {
                console.error(`Error ${addressId ? 'updating' : 'adding'} address:`, error);
                showNotification(`Failed to ${addressId ? 'update' : 'add'} address`, 'error');
            } finally {
                // Reset button state
                const submitBtn = document.getElementById('submitAddressBtn');
                submitBtn.disabled = false;
                submitBtn.innerHTML = 'Save Address';
            }
        }

       
       
        // Handle place order
      async function handlePlaceOrder() {
    if (!checkoutState.selectedAddress) {
        showNotification('Please select a shipping address', 'error');
        return;
    }

    if (!checkoutState.selectedPaymentMethod) {
        showNotification('Please select a payment method', 'error');
        return;
    }

    try {
        const orderData = {
            addressId: checkoutState.selectedAddress,
            paymentMethod: checkoutState.selectedPaymentMethod
        };

        const response = await axios.post('/api/orders', orderData);

        if (response.data.success) {
            showNotification('Order placed successfully!', 'success');
            setTimeout(() => {
                window.location.href = `/order/confirmation/${response.data.orderId}`;
            }, 1500);
        } else {
            showNotification(response.data.message || 'Failed to place order', 'error');
        }
    } catch (error) {
        console.error('Order Error:', error);
        showNotification('Failed to place order', 'error');
    }
}

        // Modal functions
        function openAddressModal(addressId = null) {
            if (addressId) {
                // Edit mode
                const address = checkoutState.addresses.find(addr => addr._id === addressId);
                if (address) {
                    document.getElementById('modalTitle').textContent = 'Edit Address';
                    document.getElementById('addressId').value = address._id;
                    document.getElementById('addressForm').fullName.value = address.fullName;
                    document.getElementById('addressForm').phone.value = address.phone;
                    document.getElementById('addressForm').addressLine1.value = address.addressLine1;
                    document.getElementById('addressForm').addressLine2.value = address.addressLine2 || '';
                    document.getElementById('addressForm').city.value = address.city;
                    document.getElementById('addressForm').state.value = address.state;
                    document.getElementById('addressForm').pincode.value = address.pincode;
                    document.getElementById('addressForm').country.value = address.country;
                    
                    // Set address type
                    document.querySelectorAll('input[name="addressType"]').forEach(radio => {
                        if (radio.value === address.addressType) {
                            radio.checked = true;
                        }
                    });
                    
