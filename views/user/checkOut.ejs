<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Address Modal - BagHub</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
        /* ALL YOUR EXISTING STYLES REMAIN THE SAME */
        :root {
            --primary: #1a56db;
            --primary-dark: #1e429f;
            --secondary: #047857;
            --error: #dc2626;
            --success: #059669;
        }
        
        .btn-primary {
            background-color: var(--primary);
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }
        
        .card-hover {
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
        
        .card-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }
        
        .checkout-item {
            transition: all 0.3s ease;
        }
        
        .quantity-btn {
            transition: all 0.2s ease;
        }
        
        .quantity-btn:hover:not(:disabled) {
            background-color: #e5e7eb;
        }
        
        .notification {
            animation: slideIn 0.5s ease-out;
        }
        
        @keyframes slideIn {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
        
        .address-card {
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }
        
        .address-card:hover {
            border-color: #3b82f6;
        }
        
        .address-card.selected {
            border-color: #1a56db;
            background-color: #f0f9ff;
        }
        
        .payment-method {
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }
        
        .payment-method.selected {
            border-color: #1a56db;
            background-color: #f0f9ff;
        }
        
        .default-badge {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .inputBox {
            width: 100%;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            font-size: 0.875rem;
            transition: all 0.2s;
        }

        .inputBox:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        .btnCancel {
            flex: 1;
            padding: 0.75rem 1rem;
            border: 1px solid #d1d5db;
            color: #374151;
            border-radius: 0.5rem;
            background: white;
            transition: all 0.2s;
        }

        .btnCancel:hover {
            background-color: #f9fafb;
        }

        .btnPrimary {
            flex: 1;
            padding: 0.75rem 1rem;
            background: #1a56db;
            color: white;
            border-radius: 0.5rem;
            transition: all 0.2s;
        }

        .btnPrimary:hover {
            background: #1e429f;
        }

        .shake {
            animation: shake 0.5s ease-in-out;
        }
        
        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }
        
        .error-border {
            border-color: #ef4444 !important;
        }
        
        .success-border {
            border-color: #10b981 !important;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <%- include('../partials/landingheader') %>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8">
        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Sidebar -->
            <%- include('../partials/userProfileSiderbar', {
                activePage: 'checkout',
                user,
                ordersCount,
                wishlistCount,
                unreadNotifications
            }) %>

            <!-- Checkout Content -->
            <div class="lg:w-2/3">
                <!-- Header -->
                <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl shadow-lg p-6 mb-6 text-white">
                    <div class="flex items-center gap-4">
                        <div class="w-16 h-16 rounded-full bg-white/20 flex items-center justify-center">
                            <i class="fas fa-credit-card text-2xl"></i>
                        </div>
                        <div>
                            <h1 class="text-2xl font-bold">Checkout</h1>
                            <p class="text-blue-100">Complete your order with secure payment</p>
                        </div>
                    </div>
                </div>

                <!-- Progress Steps -->
                <div class="bg-white rounded-2xl shadow-sm p-6 card-hover mb-6">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-2">
                            <div class="w-8 h-8 rounded-full bg-green-500 text-white flex items-center justify-center">
                                <i class="fas fa-check text-sm"></i>
                            </div>
                            <span class="font-medium text-green-600">Cart</span>
                        </div>
                        <div class="flex-1 h-1 bg-green-500 mx-4"></div>
                        <div class="flex items-center gap-2">
                            <div class="w-8 h-8 rounded-full bg-blue-500 text-white flex items-center justify-center">
                                <span class="font-medium">2</span>
                            </div>
                            <span class="font-medium text-blue-600">Checkout</span>
                        </div>
                        <div class="flex-1 h-1 bg-gray-300 mx-4"></div>
                        <div class="flex items-center gap-2">
                            <div class="w-8 h-8 rounded-full bg-gray-300 text-gray-600 flex items-center justify-center">
                                <span class="font-medium">3</span>
                            </div>
                            <span class="font-medium text-gray-500">Confirmation</span>
                        </div>
                    </div>
                </div>

                <!-- Shipping Address Section -->
                <div class="bg-white rounded-2xl shadow-sm p-6 card-hover mb-6">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-xl font-bold text-gray-900">Shipping Address</h2>
                        <button onclick="openAddressModal()" class="text-blue-600 hover:text-blue-800 transition-colors flex items-center gap-2">
                            <i class="fas fa-plus"></i>
                            <span>Add New Address</span>
                        </button>
                    </div>

                    <div id="addressesContainer" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Addresses will be loaded here -->
                    </div>
                </div>

                <!-- Payment Method Section -->
                <div class="bg-white rounded-2xl shadow-sm p-6 card-hover mb-6">
                    <h2 class="text-xl font-bold text-gray-900 mb-6">Payment Method</h2>
                    
                    <div class="space-y-4">
                        <!-- Cash on Delivery -->
                        <div class="payment-method p-4 border border-gray-200 rounded-xl cursor-pointer"
                             data-method="cod">
                            <div class="flex items-center gap-4">
                                <div class="w-12 h-12 rounded-full bg-green-100 flex items-center justify-center text-green-600">
                                    <i class="fas fa-money-bill-wave text-xl"></i>
                                </div>
                                <div class="flex-grow">
                                    <h3 class="font-bold text-gray-900">Cash on Delivery</h3>
                                    <p class="text-gray-600 text-sm">Pay when you receive your order</p>
                                </div>
                                <div class="w-6 h-6 rounded-full border-2 border-gray-300 flex items-center justify-center">
                                    <div class="w-3 h-3 rounded-full bg-blue-600 hidden"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Coupon Section - FIXED -->
                <div class="bg-white rounded-2xl shadow-sm p-6 card-hover mb-6">
                    <h2 class="text-xl font-bold text-gray-900 mb-6">Apply Coupon</h2>
                    
                    <div class="space-y-4">
                        <!-- Coupon Input -->
                        <div class="flex gap-3">
                            <input type="text" id="couponCode" 
                                   class="flex-1 inputBox" 
                                   placeholder="Enter coupon code"
                                   maxlength="20">
                            <button onclick="applyCoupon()" 
                                    id="applyCouponBtn"
                                    class="bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
                                Apply
                            </button>
                        </div>
                        
                        <!-- Show Available Coupons Button -->
                        <div class="text-center">
                            <button onclick="toggleCouponList()" 
                                    class="text-blue-600 hover:text-blue-800 transition-colors text-sm font-medium">
                                <i class="fas fa-tag mr-1"></i>
                                <span id="couponToggleText">Show Available Coupons</span>
                            </button>
                        </div>
                        
                        <!-- Available Coupons List -->
                        <div id="availableCouponsContainer" class="hidden border border-gray-200 rounded-lg p-4 bg-gray-50">
                            <div class="flex items-center justify-between mb-3">
                                <h4 class="font-semibold text-gray-700">Available Coupons</h4>
                                <button onclick="toggleCouponList()" class="text-gray-500 hover:text-gray-700">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            
                            <div id="couponsList" class="space-y-3">
                                <div id="couponsLoading" class="text-center py-4">
                                    <i class="fas fa-spinner fa-spin text-blue-600"></i>
                                    <p class="text-gray-600 text-sm mt-2">Loading coupons...</p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Applied Coupon Display -->
                        <div id="appliedCouponContainer" class="hidden">
                            <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center gap-3">
                                        <i class="fas fa-tag text-green-600 text-xl"></i>
                                        <div>
                                            <h3 class="font-bold text-green-800" id="appliedCouponCode"></h3>
                                            <p class="text-green-600 text-sm" id="appliedCouponDiscount"></p>
                                        </div>
                                    </div>
                                    <button onclick="removeCoupon()" 
                                            class="text-red-500 hover:text-red-700 transition-colors">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Coupon Error -->
                        <div id="couponError" class="hidden bg-red-50 border border-red-200 rounded-lg p-3">
                            <div class="flex items-center gap-2 text-red-700">
                                <i class="fas fa-exclamation-circle"></i>
                                <span id="couponErrorText"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Items Section -->
                <div class="bg-white rounded-2xl shadow-sm p-6 card-hover">
                    <h2 class="text-xl font-bold text-gray-900 mb-6">Order Items</h2>
                    
                    <div id="orderItemsContainer" class="space-y-4">
                        <!-- Order items will be loaded here -->
                    </div>
                </div>
            </div>

            <!-- Order Summary Section -->
            <div class="lg:w-1/3">
                <div class="bg-white rounded-2xl shadow-sm p-6 card-hover sticky top-24">
                    <h2 class="text-xl font-bold text-gray-900 mb-6">Order Summary</h2>
                    
                    <!-- Order Items Preview -->
                    <div class="space-y-3 mb-6">
                        <div id="orderPreviewContainer">
                            <!-- Order preview items will be loaded here -->
                        </div>
                    </div>

                    <!-- Price Breakdown -->
                    <div class="space-y-3 mb-6">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Subtotal</span>
                            <span class="font-medium" id="subtotal">‚Çπ0.00</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Shipping</span>
                            <span class="font-medium text-green-600" id="shipping">FREE</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Tax (10%)</span>
                            <span class="font-medium" id="taxAmount">‚Çπ0.00</span>
                        </div>
                        <div class="border-t pt-3">
                            <div class="flex justify-between text-lg font-bold">
                                <span>Total</span>
                                <span id="totalAmount">‚Çπ0.00</span>
                            </div>
                        </div>
                    </div>

                    <!-- Place Order Button -->
                    <button id="placeOrderBtn" class="w-full btn-primary text-white py-4 rounded-lg flex items-center justify-center gap-2 mb-4 text-lg font-semibold">
                        <i class="fas fa-lock"></i>
                        <span>Place Order</span>
                    </button>
                    
                    <!-- Security Notice -->
                    <div class="text-center text-gray-500 text-sm">
                        <i class="fas fa-shield-alt mr-1"></i>
                        <span>Secure checkout ‚Ä¢ Your information is safe</span>
                    </div>

                    <!-- Trust Badges -->
                    <div class="border-t mt-6 pt-6">
                        <div class="grid grid-cols-3 gap-4 text-center">
                            <div>
                                <i class="fas fa-shipping-fast text-blue-600 text-xl mb-2"></i>
                                <p class="text-xs text-gray-600">Free Shipping</p>
                            </div>
                            <div>
                                <i class="fas fa-undo-alt text-green-600 text-xl mb-2"></i>
                                <p class="text-xs text-gray-600">Easy Returns</p>
                            </div>
                            <div>
                                <i class="fas fa-shield-alt text-purple-600 text-xl mb-2"></i>
                                <p class="text-xs text-gray-600">Secure Payment</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Unified Address Modal -->
    <div id="addressModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden items-center justify-center p-4">
        <div class="bg-white rounded-xl w-full max-w-md max-h-[90vh] overflow-y-auto">
            <div class="p-6">
                <!-- Modal Header -->
                <div class="flex items-center justify-between mb-6">
                    <h3 id="modalTitle" class="text-xl font-bold text-gray-900">Add New Address</h3>
                    <button onclick="closeAddressModal()" class="text-gray-400 hover:text-gray-600 transition-colors">
                        <i class="fas fa-times text-lg"></i>
                    </button>
                </div>

                <!-- Address Form -->
                <form id="addressForm" class="space-y-4">
                    <input type="hidden" id="addressId" name="addressId">
                    
                    <!-- Address Type -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Address Type</label>
                        <div class="grid grid-cols-3 gap-3">
                            <label class="flex items-center">
                                <input type="radio" name="addressType" value="home" class="sr-only peer" checked>
                                <div class="w-full p-3 border border-gray-300 rounded-lg text-center cursor-pointer peer-checked:border-blue-500 peer-checked:bg-blue-50">
                                    <i class="fas fa-home text-gray-600 mb-1"></i>
                                    <div class="text-sm font-medium">Home</div>
                                </div>
                            </label>
                            <label class="flex items-center">
                                <input type="radio" name="addressType" value="work" class="sr-only peer">
                                <div class="w-full p-3 border border-gray-300 rounded-lg text-center cursor-pointer peer-checked:border-blue-500 peer-checked:bg-blue-50">
                                    <i class="fas fa-briefcase text-gray-600 mb-1"></i>
                                    <div class="text-sm font-medium">Work</div>
                                </div>
                            </label>
                            <label class="flex items-center">
                                <input type="radio" name="addressType" value="other" class="sr-only peer">
                                <div class="w-full p-3 border border-gray-300 rounded-lg text-center cursor-pointer peer-checked:border-blue-500 peer-checked:bg-blue-50">
                                    <i class="fas fa-map-marker-alt text-gray-600 mb-1"></i>
                                    <div class="text-sm font-medium">Other</div>
                                </div>
                            </label>
                        </div>
                    </div>

                    <!-- Full Name -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
                        <input type="text" name="fullName" required 
                               class="inputBox" placeholder="Enter your full name">
                        <div id="fullNameError" class="text-red-500 text-sm mt-2 hidden">
                            <i class="fas fa-exclamation-circle mr-1"></i>
                            <span id="fullNameErrorText"></span>
                        </div>
                    </div>
                    
                    <!-- Phone Number -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
                        <input type="tel" name="phone" required 
                               class="inputBox" placeholder="Enter your phone number" maxlength="10">
                        <div id="phoneError" class="text-red-500 text-sm mt-2 hidden">
                            <i class="fas fa-exclamation-circle mr-1"></i>
                            <span id="phoneErrorText"></span>
                        </div>
                    </div>
                    
                    <!-- Address Line 1 -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Address Line 1</label>
                        <input type="text" name="addressLine1" required 
                               class="inputBox" placeholder="House no., Building, Street">
                        <div id="addressLine1Error" class="text-red-500 text-sm mt-2 hidden">
                            <i class="fas fa-exclamation-circle mr-1"></i>
                            <span id="addressLine1ErrorText"></span>
                        </div>
                    </div>
                    
                    <!-- Address Line 2 (Optional) -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Address Line 2 (Optional)</label>
                        <input type="text" name="addressLine2" 
                               class="inputBox" placeholder="Area, Landmark">
                    </div>
                    
                    <!-- City & Pincode -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">City</label>
                            <input type="text" name="city" required 
                                   class="inputBox" placeholder="Enter city">
                            <div id="cityError" class="text-red-500 text-sm mt-2 hidden">
                                <i class="fas fa-exclamation-circle mr-1"></i>
                                <span id="cityErrorText"></span>
                            </div>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Pincode</label>
                            <input type="text" name="pincode" required 
                                   class="inputBox" placeholder="Enter pincode" maxlength="6">
                            <div id="pincodeError" class="text-red-500 text-sm mt-2 hidden">
                                <i class="fas fa-exclamation-circle mr-1"></i>
                                <span id="pincodeErrorText"></span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- State & Country -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">State</label>
                            <input type="text" name="state" required 
                                   class="inputBox" placeholder="Enter state">
                            <div id="stateError" class="text-red-500 text-sm mt-2 hidden">
                                <i class="fas fa-exclamation-circle mr-1"></i>
                                <span id="stateErrorText"></span>
                            </div>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Country</label>
                            <select name="country" class="inputBox">
                                <option value="India" selected>India</option>
                                <option value="United States">United States</option>
                                <option value="United Kingdom">United Kingdom</option>
                                <option value="Canada">Canada</option>
                                <option value="Australia">Australia</option>
                            </select>
                            <div id="countryError" class="text-red-500 text-sm mt-2 hidden">
                                <i class="fas fa-exclamation-circle mr-1"></i>
                                <span id="countryErrorText"></span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Set as Default -->
                    <div class="flex items-center gap-3 pt-2">
                        <input type="checkbox" id="setDefault" name="isDefault" 
                               class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2">
                        <label for="setDefault" class="text-sm text-gray-700 cursor-pointer">
                            Set as default address
                        </label>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="flex gap-3 pt-6">
                        <button type="button" onclick="closeAddressModal()" 
                                class="btnCancel">
                            Cancel
                        </button>
                        <button type="submit" id="submitAddressBtn"
                                class="btnPrimary">
                            Save Address
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Notification Container -->
    <div id="notificationContainer" class="fixed top-4 right-4 z-50 space-y-2"></div>

    <script>
        // Checkout state - ADD COUPON PROPERTIES
        const checkoutState = {
            selectedAddress: null,
            selectedPaymentMethod: null,
            cartItems: [],
            walletBalance: 0,
            addresses: [],
            orderSummary: {
                subtotal: 0,
                shipping: 0,
                tax: 0,
                total: 0
            },
            // ADD THESE TWO LINES:
            appliedCoupon: null,
            availableCoupons: []
        };

        // Initialize checkout
        document.addEventListener('DOMContentLoaded', function() {
            loadCheckoutData();
            setupEventListeners();
            setupAddressModalValidation();
        });

        // Load checkout data - ADD COUPON LOADING
        async function loadCheckoutData() {
            try {
                // Load cart items
                const cartResponse = await axios.get('/api/cart');
                if (cartResponse.data.success) {
                    checkoutState.cartItems = cartResponse.data.cart.items || [];
                    renderOrderItems();
                    updateOrderSummary();
                }

                // Load addresses
                const addressResponse = await axios.get('/api/addresses');
                if (addressResponse.data.success) {
                    checkoutState.addresses = addressResponse.data.addresses || [];
                    renderAddresses();
                }

                // Load wallet balance
                const walletResponse = await axios.get('/api/wallet/balance');
                if (walletResponse.data.success) {
                    checkoutState.walletBalance = walletResponse.data.balance || 0;
                }

                // ADD THIS: Load available coupons
                loadAvailableCoupons();

            } catch (error) {
                console.error('Error loading checkout data:', error);
                showNotification('Failed to load checkout data', 'error');
            }
        }

        // Render addresses - ADD EDIT BUTTON
        function renderAddresses() {
            const container = document.getElementById('addressesContainer');

            if (checkoutState.addresses.length === 0) {
                container.innerHTML = `
                    <div class="col-span-2 text-center py-8">
                        <i class="fas fa-map-marker-alt text-gray-400 text-4xl mb-4"></i>
                        <p class="text-gray-600 mb-4">No addresses found</p>
                        <button onclick="openAddressModal()" class="text-blue-600 hover:text-blue-800 transition-colors">
                            Add your first address
                        </button>
                    </div>
                `;
                return;
            }

            container.innerHTML = checkoutState.addresses.map(address => `
                <div class="address-card p-4 border border-gray-200 rounded-xl cursor-pointer 
                            ${address.isDefault ? 'selected' : ''}"
                     data-address-id="${address._id}">

                    <div class="flex items-start justify-between mb-2">
                        <h3 class="font-bold text-gray-900">${address.fullName}</h3>
                        <div class="flex items-center gap-2">
                            ${address.isDefault ? `
                                <span class="default-badge text-white text-xs px-2 py-1 rounded-full">
                                    Default
                                </span>
                            ` : ''}
                            <!-- ADD EDIT BUTTON -->
                            <button onclick="event.stopPropagation(); openAddressModal('${address._id}')" 
                                    class="text-blue-600 hover:text-blue-800 transition-colors text-sm">
                                <i class="fas fa-edit"></i>
                            </button>
                        </div>
                    </div>

                    <p class="text-gray-600 text-sm mb-2">${address.phone}</p>
                    <p class="text-gray-600 text-sm mb-2">${address.addressLine1}</p>

                    ${address.addressLine2 
                        ? `<p class="text-gray-600 text-sm mb-2">${address.addressLine2}</p>` 
                        : ''}

