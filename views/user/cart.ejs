                    console.log("REMOVE CLICKED:", itemId);
                    handleRemoveItem(itemId);
                });
            });
            
            // Clear cart button
            const clearCartBtn = document.getElementById('clearCartBtn');
            if (clearCartBtn) {
                clearCartBtn.addEventListener('click', function() {
                    if (confirm('Are you sure you want to clear your cart?')) {
                        handleClearCart();
                    }
                });
            }
            
            // Checkout button
            document.getElementById('checkoutBtn').addEventListener('click', handleCheckout);
        }

        // Handle quantity changes
       async function handleQuantityChange(itemId, action) {
    const itemEl = document.querySelector(`[data-item-id="${itemId}"]`);
    const currentQty = parseInt(itemEl.querySelector('.qty-value').textContent);
    const available = parseInt(itemEl.getAttribute('data-available')); // Add this attribute

    let newQty = currentQty;

    if (action === "increase") {
        if (currentQty >= available) {
            showNotification(`Only ${available} available`, "error");
            return;
        }
        newQty++;
    }

    if (action === "decrease") {
        if (currentQty <= 1) return;
        newQty--;
    }

    const success = await updateCartItem(itemId, newQty);

    if (success) {
        // Update UI
        itemEl.querySelector('.qty-value').textContent = newQty;
        itemEl.setAttribute('data-qty', newQty);
        updateItemTotal(itemId, newQty);

        // Disable/Enable +
        const plusBtn = itemEl.querySelector('[data-action="increase"]');
        plusBtn.disabled = newQty >= available;
    }
}

