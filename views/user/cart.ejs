    <script>
        // Cart API endpoints
        const API_ENDPOINTS = {
            getCart: '/api/cart',
            updateCart: '/api/cart',
            updateItem: '/user/cart/update',
            removeItem: '/user/cart/remove',
            clearCart: '/user/cart/clear',
            checkout: '/api/checkout'
        };

        // Cart state
        let cartState = {
            items: [
                {
                    id: 1,
                    name: "Premium Leather Backpack",
                    price: 89.99,
                    quantity: 1,
                    maxQuantity: 12,
                    image: "https://images.unsplash.com/photo-1548036328-c9fa89d128fa?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=500&q=80",
                    inStock: true,
                    stockLeft: 12,
                    rating: 4.5,
                    reviews: "128 reviews",
                    variant: "Color: Brown • Size: Medium",
                    originalPrice: 119.99,
                    discount: 25
                },
                {
                    id: 2,
                    name: "Professional Laptop Bag",
                    price: 64.99,
                    quantity: 1,
                    maxQuantity: 3,
                    image: "https://images.unsplash.com/photo-1553062407-98eeb64c6a62?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=500&q=80",
                    inStock: true,
                    stockLeft: 3,
                    rating: 4.0,
                    reviews: "92 reviews",
                    variant: "Color: Black • Size: 15\"",
                    originalPrice: null,
                    discount: null
                },
                {
                    id: 3,
                    name: "Weekend Travel Duffel Bag",
                    price: 49.99,
                    quantity: 0,
                    maxQuantity: 0,
                    image: "https://images.unsplash.com/photo-1584917865442-de89df76afd3?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=500&q=80",
                    inStock: false,
                    stockLeft: 0,
                    rating: 5.0,
                    reviews: "64 reviews",
                    variant: "Color: Navy Blue • Size: Large",
                    originalPrice: 69.99,
                    discount: 30
                }
            ],
            taxRate: 0.10,
            loading: false
        };

        // Initialize cart
        document.addEventListener('DOMContentLoaded', function() {
            updateCartSummary();
            setupEventListeners();
        });

        // Set up event listeners
        function setupEventListeners() {
            // Quantity buttons
            // document.querySelectorAll('.quantity-btn').forEach(button => {
            //     button.addEventListener('click', function() {
            //         const itemId = this.getAttribute('data-item-id');
            //         const action = this.getAttribute('data-action');
            //         handleQuantityChange(itemId, action);
            //     });
            // });
            
            document.querySelectorAll('.qty-btn-increase, .qty-btn-decrease').forEach(button => {
    button.addEventListener('click', function () {
        const itemId = this.getAttribute('data-id');
        const isIncrease = this.classList.contains('qty-btn-increase');
        handleQuantityChange(itemId, isIncrease ? "increase" : "decrease");
    });
});

            // Remove item buttons
            document.querySelectorAll('.remove-item-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const itemId = this.getAttribute('data-item-id');
                    handleRemoveItem(itemId);
                });
            });
            
            // Clear cart button
            document.getElementById('clearCartBtn').addEventListener('click', function() {
                if (confirm('Are you sure you want to clear your cart?')) {
                    handleClearCart();
                }
            });
            
            // Checkout button
            document.getElementById('checkoutBtn').addEventListener('click', handleCheckout);
        }

        // Handle quantity changes
        async function handleQuantityChange(itemId, action) {
            const item = cartState.items.find(item => item.id == itemId);
            if (!item) return;
            
            let newQuantity = item.quantity;
            
            if (action === 'increase') {
                if (newQuantity < item.maxQuantity) {
                    newQuantity++;
                } else {
                    showNotification(`Cannot add more than ${item.maxQuantity} of this item`, 'error');
                    return;
                }
            } else if (action === 'decrease') {
                if (newQuantity > 1) {
                    newQuantity--;
                } else {
                    // If quantity becomes 0, remove the item
                    await handleRemoveItem(itemId);
                    return;
                }
            }
            
            const success = await updateCartItem(itemId, newQuantity);
            if (success) {
                // Update UI immediately for better UX
                const quantityElement = document.querySelector(`[data-item-id="${itemId}"]`);
                if (quantityElement) {
                    quantityElement.textContent = newQuantity;
                }
                updateItemTotal(itemId, newQuantity);
            }
        }

        // Update cart item quantity using PATCH
       async function updateCartItem(itemId, newQuantity) {
    try {
        setLoading(true);

        const response = await axios.put(API_ENDPOINTS.updateItem, {
            itemId,
            quantity: newQuantity
        });

        if (response.data.success) {
            updateCartSummary();
            showNotification('Cart updated successfully', 'success');
            return true;
        } else {
            showNotification(response.data.message || 'Failed to update cart', 'error');
            return false;
        }
    } catch (error) {
        console.error('Error updating cart item:', error);
        showNotification('Failed to update cart item', 'error');
        return false;
    } finally {
        setLoading(false);
    }
}

        // Update item total display
        function updateItemTotal(itemId, quantity) {
            const item = cartState.items.find(item => item.id == itemId);
            if (!item) return;
            
            const itemTotal = item.price * quantity;
            const itemTotalElement = document.querySelector(`.cart-item[data-item-id="${itemId}"] .text-xl.font-bold`);
            if (itemTotalElement) {
                itemTotalElement.textContent = `$${itemTotal.toFixed(2)}`;
            }
        }

        // Handle remove item
        async function handleRemoveItem(itemId) {
            const item = cartState.items.find(item => item.id == itemId);
            if (!item) return;
            
            if (confirm(`Remove ${item.name} from cart?`)) {
                const success = await removeCartItem(itemId);
                if (success) {
                    const itemElement = document.querySelector(`.cart-item[data-item-id="${itemId}"]`);
                    if (itemElement) {
                        itemElement.style.opacity = '0';
                        itemElement.style.transform = 'translateX(100%)';
                        setTimeout(() => {
                            itemElement.remove();
                        }, 300);
                    }
                }
            }
        }
        function addToCartFrontend(productId) {
    fetch("/user/cart/add", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
            productId,
            quantity: 1,
            color: selectedColor // or null if not required
        })
    })
    .then(res => res.json())
    .then(data => {
       if(data.success){
          updateCartCount();
          showNotification("Item added to cart!", "success");
       } else {
          showNotification(data.message, "error");
       }
    });
}


        // Remove item from cart using DELETE
        async function removeCartItem(itemId) {
            try {
                setLoading(true);
                
                const response = await axios.delete(`${API_ENDPOINTS.removeItem}/${itemId}`);

                if (response.data.success) {
                    cartState.items = cartState.items.filter(item => item.id !== itemId);
                    updateCartSummary();
                    showNotification('Item removed from cart', 'success');
                    return true;
                } else {
                    showNotification(response.data.message || 'Failed to remove item', 'error');
                    return false;
                }
            } catch (error) {
                console.error('Error removing cart item:', error);
                if (error.response?.data?.message) {
                    showNotification(error.response.data.message, 'error');
                } else {
                    showNotification('Failed to remove item from cart', 'error');
                }
                return false;
            } finally {
                setLoading(false);
            }
        }

        // Handle clear cart
        async function handleClearCart() {
            const success = await clearCart();
            if (success) {
                document.getElementById('cartItems').innerHTML = '';
            }
        }

        // Clear entire cart using DELETE
        async function clearCart() {
            try {
                setLoading(true);
                
                const response = await axios.delete(API_ENDPOINTS.clearCart);

                if (response.data.success) {
                    cartState.items = [];
                    updateCartSummary();
                    showNotification('Cart cleared successfully', 'success');
                    return true;
                } else {
                    showNotification(response.data.message || 'Failed to clear cart', 'error');
                    return false;
                }
            } catch (error) {
                console.error('Error clearing cart:', error);
                if (error.response?.data?.message) {
                    showNotification(error.response.data.message, 'error');
                } else {
                    showNotification('Failed to clear cart', 'error');
                }
                return false;
            } finally {
                setLoading(false);
            }
        }

        // Update cart summary
        function updateCartSummary() {
            let subtotal = 0;
            let itemCount = 0;
            
            cartState.items.forEach(item => {
                if (item.inStock) {
                    subtotal += item.price * item.quantity;
                    itemCount += item.quantity;
                }
            });
            
            const taxAmount = subtotal * cartState.taxRate;
            const totalAmount = subtotal + taxAmount;
            
            document.getElementById('subtotal').textContent = `$${subtotal.toFixed(2)}`;
            document.getElementById('taxAmount').textContent = `$${taxAmount.toFixed(2)}`;
            document.getElementById('totalAmount').textContent = `$${totalAmount.toFixed(2)}`;
            document.getElementById('itemCount').textContent = itemCount;
        }

        // Handle checkout
        async function handleCheckout() {
            if (cartState.items.length === 0) {
                showNotification('Your cart is empty', 'error');
                return;
            }
            
            // Check if all items are in stock
            const outOfStockItems = cartState.items.filter(item => !item.inStock);
            if (outOfStockItems.length > 0) {
                showNotification('Please remove out-of-stock items before checkout', 'error');
                return;
            }
            
            try {
                setLoading(true);
                const response = await axios.post(API_ENDPOINTS.checkout, {
                    items: cartState.items
                });
                
                if (response.data.success) {
                    showNotification('Order placed successfully!', 'success');
                    // Redirect to order confirmation
                    setTimeout(() => {
                        window.location.href = '/order/confirmation';
                    }, 2000);
                } else {
                    showNotification(response.data.message || 'Checkout failed', 'error');
                }
            } catch (error) {
                console.error('Error during checkout:', error);
                if (error.response?.data?.message) {
                    showNotification(error.response.data.message, 'error');
                } else {
                    showNotification('Checkout failed. Please try again.', 'error');
                }
            } finally {
                setLoading(false);
            }
        }

        // Set loading state
        function setLoading(loading) {
            cartState.loading = loading;
            const mainContent = document.querySelector('.container');
            if (loading) {
                mainContent.classList.add('loading');
            } else {
                mainContent.classList.remove('loading');
            }
        }

        // Notification system
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `p-4 rounded-lg shadow-lg transform transition-all duration-300 notification ${
                type === 'success' ? 'bg-green-500 text-white' : 'bg-red-500 text-white'
            }`;
            notification.innerHTML = `
                <div class="flex items-center gap-3">
                    <i class="fas fa-${type === 'success' ? 'check' : 'exclamation'}-circle"></i>
                    <span class="font-medium">${message}</span>
                </div>
            `;
            
            const container = document.getElementById('notificationContainer');
            container.appendChild(notification);
            
            // Remove notification after 5 seconds
            setTimeout(() => {
                notification.style.opacity = '0';
                setTimeout(() => {
                    if (container.contains(notification)) {
                        container.removeChild(notification);
                    }
                }, 300);
            }, 5000);
        }
    </script>
