function validateReason(reason, details, errorBox, errorTextEl) {
  details = (details || "").trim();

  const mustHaveLetter = /[a-zA-Z]/;
  const allowedRegex = /^[a-zA-Z0-9\s.,\-()]+$/;

  if (reason === "Other") {
    if (!details) {
      showFieldError("Please enter additional details.", errorBox, errorTextEl);
      return false;
    }

    if (details.length < 10) {
      showFieldError("Details must be at least 10 characters.", errorBox, errorTextEl);
      return false;
    }

    if (!allowedRegex.test(details) || !mustHaveLetter.test(details)) {
      showFieldError("Invalid input. Meaningful text only.", errorBox, errorTextEl);
      return false;
    }
  }

  hideFieldError(errorBox);
  return true;
}

function showFieldError(msg, box, textEl) {
  textEl.textContent = msg;
  box.classList.remove("hidden");
}

function hideFieldError(box) {
  box.classList.add("hidden");
