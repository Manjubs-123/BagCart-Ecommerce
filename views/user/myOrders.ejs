<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Orders - BagHub</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #1a56db;
      --success: #10b981;
      --warning: #f59e0b;
      --danger: #ef4444;
    }

    .order-item-card {
      border-left: 4px solid #1a56db;
      transition: all 0.3s ease;
    }

    .order-item-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .status-pending { background-color: #fef3c7; color: #92400e; }
    .status-processing { background-color: #dbeafe; color: #1e40af; }
    .status-shipped { background-color: #e0e7ff; color: #3730a3; }
    .status-out_for_delivery { background-color: #fce7f3; color: #be185d; }
    .status-delivered { background-color: #dcfce7; color: #166534; }
    .status-cancelled { background-color: #fee2e2; color: #991b1b; }
    .status-returned { background-color: #f3e8ff; color: #7c3aed; }

    .status-badge {
      padding: 0.5rem 1rem;
      border-radius: 9999px;
      font-size: 0.875rem;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--primary) 0%, #1e40af 100%);
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .btn-success {
      background: linear-gradient(135deg, var(--success) 0%, #047857 100%);
    }

    .btn-danger {
      background: linear-gradient(135deg, var(--danger) 0%, #dc2626 100%);
    }

    .btn-warning {
      background: linear-gradient(135deg, var(--warning) 0%, #d97706 100%);
    }

    .glass-effect {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .professional-shadow {
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    /* Mobile-specific styles */
    @media (max-width: 768px) {
      .mobile-stack {
        flex-direction: column !important;
      }
      
      .mobile-full {
        width: 100% !important;
      }
      
      .mobile-text-center {
        text-align: center !important;
      }
      
      .mobile-p-4 {
        padding: 1rem !important;
      }
      
      .mobile-space-y-2 > * + * {
        margin-top: 0.5rem !important;
      }
      
      .status-badge {
        padding: 0.375rem 0.75rem;
        font-size: 0.75rem;
      }
      
      .action-buttons-mobile {
        flex-direction: column;
        gap: 0.5rem;
      }
      
      .action-buttons-mobile button {
        width: 100%;
        justify-content: center;
      }
      
      .accordion-content {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease-out;
      }
      
      .accordion-content.open {
        max-height: 2000px;
      }
    }
  </style>
</head>

<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">

  <%- include('../partials/landingheader') %>

  <div class="container mx-auto px-3 sm:px-4 py-4 sm:py-8">
    <div class="max-w-7xl mx-auto">

      <!-- RESPONSIVE LAYOUT WRAPPER -->
      <div class="flex flex-col lg:flex-row gap-4 sm:gap-6">

        <!-- Sidebar (left) -->
        <div class="w-full lg:w-1/4 mb-4 sm:mb-0">
          <%- include('../partials/userProfileSiderbar', {
            activePage: 'orders',
            user,
            ordersCount
          }) %>
        </div>

        <!-- MAIN CONTENT -->
        <div class="flex-1">

          <!-- Page Header -->
          <div class="glass-effect rounded-2xl professional-shadow p-4 sm:p-6 md:p-8 mb-6 sm:mb-8 text-center">
            <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-800 mb-3 sm:mb-4">
              My Orders
            </h1>
            <p class="text-gray-600 text-base sm:text-lg">
              Track and manage all your orders in one place
            </p>
          </div>

          <!-- Orders List -->
          <div class="space-y-4 sm:space-y-6">
            <% if (orders && orders.length > 0) { %>
              <% orders.forEach(order => { %>
                <!-- Order Card - ACCORDION STYLE -->
                <div class="bg-white rounded-2xl professional-shadow overflow-hidden mb-4">
                  <!-- Order Header (Clickable for mobile accordion) -->
                  <div
  class="bg-gradient-to-r from-blue-50 to-indigo-50 px-4 sm:px-6 py-3 sm:py-4 border-b border-gray-200 cursor-pointer mobile-accordion order-header"
  role="button"
  tabindex="0"
  data-order-id="<%= order._id %>"
  onclick="toggleOrderDetails('<%= order._id %>')"
  onkeydown="if(event.key === 'Enter' || event.key === ' ') toggleOrderDetails('<%= order._id %>')"
>

                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-3 sm:gap-4">
                      <div class="mobile-text-center md:text-left flex items-center gap-3">
                        <i class="fas fa-chevron-down transition-transform hidden md:block" id="icon-<%= order._id %>"></i>
                        <div>
                          <h2 class="text-lg sm:text-xl font-bold text-gray-900">Order #<%= order.orderId %></h2>
                          <p class="text-gray-600 text-xs sm:text-sm mt-1">
                            Placed on <%= new Date(order.createdAt).toLocaleDateString('en-US', { 
                              year: 'numeric', 
                              month: 'long', 
                              day: 'numeric',
                              hour: '2-digit',
                              minute: '2-digit'
                            }) %>
                          </p>
                        </div>
                      </div>
                      <div class="mobile-text-center md:text-right mobile-space-y-2">
                        <span class="status-badge <%= getStatusClass(order.orderStatus) %> inline-block">
                          <i class="fas <%= getStatusIcon(order.orderStatus) %>"></i>
                          <%= order.orderStatus.charAt(0).toUpperCase() + order.orderStatus.slice(1) %>
                        </span>
                        <p class="text-base sm:text-lg font-bold text-blue-600 mt-1 sm:mt-2">₹<%= order.totalAmount.toFixed(2) %></p>
                      </div>
                    </div>
                  </div>

                  <!-- Order Details (Hidden on mobile by default) -->
                  <div class="order-details accordion-content" id="details-<%= order._id %>">
                    <!-- Order Items -->
                    <div class="p-4 sm:p-6 space-y-4">
                    <% order.items.forEach((item, index) => {
  // --- SAFE FALLBACKS for prices & offers ---
  // Variant fallback (if item.product populated)
  const variant = (item.product && item.product.variants && item.product.variants[item.variantIndex]) || null;

  // finalPrice: prefer stored item.price (saved when order created). fallback -> variant.price -> 0
  const finalPrice = (typeof item.price === 'number' ? item.price : (variant ? (variant.price || 0) : 0));

  // regularPrice: prefer stored item.regularPrice (saved when order created). fallback -> variant.mrp -> variant.price -> finalPrice
  const regularPrice = (typeof item.regularPrice === 'number' ? item.regularPrice : (variant ? ((variant.mrp || variant.price) || finalPrice) : finalPrice));

  const quantity = Number(item.quantity || 1);

  const totalFinal = finalPrice * quantity;
  const totalRegular = regularPrice * quantity;
  const savings = Math.max(0, totalRegular - totalFinal);

  // discount percent (defensive: avoid divide by zero)
  const discountPercent = (regularPrice > finalPrice && regularPrice > 0)
    ? Math.round(((regularPrice - finalPrice) / regularPrice) * 100)
    : 0;

  // Offer meta (order item may have appliedOffer saved; fallback to appliedOffer property if present)
  const offerMeta = item.appliedOffer || item.appliedOffer || null;
%>

                        <div class="order-item-card bg-gray-50 rounded-xl p-4 sm:p-6">
                          <div class="flex flex-col lg:flex-row gap-4 sm:gap-6">
                            
                            <!-- Product Image -->
                            <div class="flex-shrink-0 mobile-text-center lg:text-left">
                              <img src="<%= item.image || '/images/no-image.jpg' %>" 
                                   alt="<%= (item.product && item.product.name) ? item.product.name : 'Product' %>"

                                   class="w-20 h-20 sm:w-24 sm:h-24 object-cover rounded-lg border border-gray-200 mx-auto lg:mx-0">
                            </div>

                            <!-- Product Details -->
                            <div class="flex-grow">
                              <div class="flex flex-col md:flex-row md:items-start justify-between gap-3 sm:gap-4 mb-4 mobile-stack">
                                <div class="flex-grow mobile-text-center md:text-left">
                                  <h3 class="text-lg sm:text-xl font-semibold text-gray-900 mb-2">
                                    <%= item.product.name %>
                                  </h3>
                                  
                                  <!-- Offer Badge -->
<% if (offerMeta) { %>
  <div class="mb-3">
    <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-2 py-1 rounded">
      <i class="fas fa-tag mr-1"></i>
      <% if (offerMeta.offerType === 'category') { %>
        Category Offer: <%= offerMeta.discountValue %>%
      <% } else if (offerMeta.offerType === 'product') { %>
        Product Offer: <%= offerMeta.discountValue %>%
      <% } else if (offerMeta.offerName) { %>
        <%= offerMeta.offerName %> - <%= offerMeta.discountValue || '' %><% if (offerMeta.discountValue) { %>%<% } %>
      <% } else { %>
        Special Offer
      <% } %>
    </span>
  </div>
<% } %>

                                  
                                  <!-- Item Order ID -->
                                  <div class="bg-white rounded-lg p-3 mb-3 inline-block mobile-full sm:inline-block">
                                    <p class="text-xs text-gray-600">Item Order ID</p>
                                    <p class="font-mono text-base sm:text-lg font-bold text-gray-900">
                                      <%= item.itemOrderId || `${order.orderId}-${index + 1}` %>
                                    </p>
                                  </div>

                                  <!-- Product Specifications - UPDATED WITH BOTH PRICES -->
                                  <div class="grid grid-cols-2 sm:grid-cols-4 gap-2 sm:gap-4 mb-4">
                                    <!-- Color -->
                                    <div class="bg-white p-2 sm:p-3 rounded-lg border border-gray-200">
                                      <p class="text-xs text-gray-500 mb-1">Color</p>
                                      <p class="font-medium text-gray-900 text-sm sm:text-base"><%= item.color %></p>
                                    </div>
                                    
                                    <!-- Quantity -->
                                    <div class="bg-white p-2 sm:p-3 rounded-lg border border-gray-200">
                                      <p class="text-xs text-gray-500 mb-1">Quantity</p>
                                      <p class="font-medium text-gray-900 text-sm sm:text-base"><%= quantity %></p>
                                    </div>
                                    
                                    <!-- Unit Price - UPDATED -->
                                    <div class="bg-white p-2 sm:p-3 rounded-lg border border-gray-200">
                                      <p class="text-xs text-gray-500 mb-1">Unit Price</p>
                                      
                                      <!-- Final Price -->
                                      <p class="font-medium text-gray-900 text-sm sm:text-base">
                                        ₹<%= finalPrice.toFixed(2) %>
                                      </p>
                                      
                                      <!-- Original Price (Crossed) -->
                                      <% if (regularPrice > finalPrice) { %>
                                        <p class="text-gray-500 text-xs sm:text-sm line-through">
                                          ₹<%= regularPrice.toFixed(2) %>
                                        </p>
                                        <p class="text-green-600 text-xs font-semibold mt-1">
                                          <%= discountPercent %>% off
                                        </p>
                                      <% } %>
                                    </div>
                                    
                                    <!-- Item Total - UPDATED -->
                                    <div class="bg-white p-2 sm:p-3 rounded-lg border border-gray-200">
                                      <p class="text-xs text-gray-500 mb-1">Item Total</p>
                                      
                                      <!-- Final Total -->
                                      <p class="font-medium text-blue-600 text-sm sm:text-base">
                                        ₹<%= totalFinal.toFixed(2) %>
                                      </p>
                                      
                                      <!-- Original Total (Crossed) -->
                                      <% if (totalRegular > totalFinal) { %>
                                        <p class="text-gray-500 text-xs line-through">
                                          ₹<%= totalRegular.toFixed(2) %>
                                        </p>
                                        <p class="text-green-600 text-xs mt-1">
                                          Save ₹<%= savings.toFixed(0) %>
                                        </p>
                                      <% } %>
                                    </div>
                                  </div>
                                  
                                  <!-- Savings Highlight -->
                                  <% if (savings > 0) { %>
                                    <div class="bg-green-50 border border-green-200 rounded-lg p-3 mb-4">
                                      <div class="flex items-center gap-2">
                                        <i class="fas fa-piggy-bank text-green-600"></i>
                                        <span class="text-green-700 font-medium">
                                          You saved ₹<%= savings.toFixed(2) %> on this item
                                        </span>
                                      </div>
                                    </div>
                                  <% } %>
                                </div>

                                <!-- Item Status Badge -->
                                <div class="flex-shrink-0 mobile-text-center md:text-right">
                                  <span class="status-badge <%= getStatusClass(item.status || order.orderStatus) %> inline-block">
                                    <i class="fas <%= getStatusIcon(item.status || order.orderStatus) %>"></i>
                                    <%= (item.status || order.orderStatus).charAt(0).toUpperCase() + (item.status || order.orderStatus).slice(1) %>
                                  </span>

                                  <% if (item.status === 'return-rejected' && item.returnDetails) { %>
  <div class="mt-3 bg-red-50 border border-red-200 rounded-lg p-3">
    <p class="text-sm text-red-700 font-semibold">
      <i class="fas fa-circle-xmark mr-1"></i>
      Return Rejected
    </p>
    <p class="text-sm text-gray-700 mt-1">
      <strong>Reason:</strong> <%= item.returnDetails %>
    </p>
  </div>
<% } %>

                                </div>
                              </div>

                              <!-- Progress Bar -->
                              <!-- <div class="mt-4">
                                <div class="flex justify-between text-xs sm:text-sm text-gray-600 mb-2">
                                  <span class="hidden xs:inline">Order Placed</span>
                                  <span class="text-xs">Processing</span>
                                  <span class="hidden sm:inline">Shipped</span>
                                  <span class="hidden md:inline">Out for Delivery</span>
                                  <span class="hidden xs:inline">Delivered</span>
                                </div>
                                <div class="w-full bg-gray-200 rounded-full h-2 sm:h-2.5">
                                  <div class="<%= getProgressBarClass(item.status || order.orderStatus) %> h-2 sm:h-2.5 rounded-full transition-all duration-500"></div>
                                </div>
                              </div> -->

                              <!-- Action Buttons -->
<div class="mt-4 sm:mt-6 pt-4 border-t border-gray-200">

<% if (order.paymentStatus === 'failed') { %>
  <a href="/order/retry/<%= order._id %>"
     class="bg-blue-600 text-white px-4 py-2 rounded-lg font-semibold professional-shadow text-sm sm:text-base">
     Retry Payment
  </a>
<% } 
else { %>

      <!-- NORMAL BUTTONS (only if payment is successful or COD) -->

      <div class="flex flex-wrap gap-2 sm:gap-3 action-buttons-mobile">

        <!-- Download Invoice -->
        <button 
          onclick="downloadInvoice('<%= order._id %>', '<%= item._id %>', '<%= item.product.name %>', this)"
          class="btn-primary text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-semibold flex items-center gap-3 professional-shadow text-sm sm:text-base mobile-full">
          <i class="fas fa-file-invoice"></i>
          <span>Download Invoice</span>
        </button>

        <!-- Cancel -->
        <% if (canCancelItem(item.status || order.orderStatus)) { %>
          <button 
            onclick="showCancelModal('<%= order._id %>', '<%= item._id %>', '<%= item.product.name %>')"
            class="btn-danger text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-semibold flex items-center gap-3 professional-shadow text-sm sm:text-base mobile-full">
            <i class="fas fa-times-circle"></i>
            <span>Cancel Item</span>
          </button>
        <% } %>

        <!-- Return -->
        <% if (canReturnItem(item.status || order.orderStatus)) { %>
          <button 
            onclick="showReturnModal('<%= order._id %>', '<%= item._id %>', '<%= item.product.name %>')"
            class="btn-warning text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-semibold flex items-center gap-3 professional-shadow text-sm sm:text-base mobile-full">
            <i class="fas fa-undo"></i>
            <span>Return Item</span>
          </button>
        <% } %>

      </div>

  <% } %>

</div>

                            </div>
                          </div>
                        </div>
                      <% }) %>
                    </div>

                    <!-- Order Footer with Price Summary -->
                    <div class="bg-gray-50 px-4 sm:px-6 py-3 sm:py-4 border-t border-gray-200">
                      <div class="flex flex-col lg:flex-row gap-6">
                        <!-- Shipping & Payment Info -->
                        <div class="flex-1">
                          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                            <!-- Shipping Address -->
                            <div class="bg-white p-4 rounded-lg border border-gray-200">
                              <h4 class="text-sm font-semibold text-gray-900 mb-2">Shipping Address</h4>
                              <p class="text-xs text-gray-600">
                                <%= order.shippingAddress.fullName %><br>
                                <%= order.shippingAddress.addressLine1 %><br>
                                <% if (order.shippingAddress.addressLine2) { %>
                                  <%= order.shippingAddress.addressLine2 %><br>
                                <% } %>
                                <%= order.shippingAddress.city %>, <%= order.shippingAddress.state %> - 
                                <%= order.shippingAddress.pincode %><br>
                                <%= order.shippingAddress.country %><br>
                                Phone: <%= order.shippingAddress.phone %>
                              </p>
                            </div>
                            
                            <!-- Payment Information -->
                            <div class="bg-white p-4 rounded-lg border border-gray-200">
                              <h4 class="text-sm font-semibold text-gray-900 mb-2">Payment Information</h4>
                              <p class="text-xs text-gray-600 mb-2">
                                <strong>Method:</strong> 
                                <%= order.paymentMethod === 'cod' ? 'Cash on Delivery' : order.paymentMethod %>
                              </p>
                              <p class="text-xs text-gray-600">
                                <strong>Status:</strong> 
                                <span class="font-medium <%= order.paymentStatus === 'paid' ? 'text-green-600' : 'text-yellow-600' %>">
                                  <%= order.paymentStatus.charAt(0).toUpperCase() + order.paymentStatus.slice(1) %>
                                </span>
                              </p>
                              <% if (order.coupon && order.coupon.code) { %>
                                <p class="text-xs text-green-600 mt-2">
                                  <i class="fas fa-tag mr-1"></i>
                                  Coupon Applied: <%= order.coupon.code %> (-₹<%= order.coupon.discountAmount.toFixed(2) %>)
                                </p>
                              <% } %>
                            </div>
                          </div>
                        </div>
                        
                        <!-- Price Summary -->
                        <div class="lg:w-1/3">
                          <div class="bg-white rounded-lg border border-gray-200 p-4">
                            <h4 class="text-sm font-semibold text-gray-900 mb-3">Order Summary</h4>
                            <div class="space-y-2 text-xs">
                              <!-- Calculate totals -->
                              <% 
                                let orderOriginalSubtotal = 0;
                                let orderDiscountedSubtotal = 0;
                                order.items.forEach(item => {
                                  const itemRegular = item.regularPrice || item.price;
                                  orderOriginalSubtotal += itemRegular * item.quantity;
                                  orderDiscountedSubtotal += item.price * item.quantity;
                                });
                                
                                const productSavings = orderOriginalSubtotal - orderDiscountedSubtotal;
                                const couponDiscount = order.coupon?.discountAmount || 0;
                                const totalSavings = productSavings + couponDiscount;
                              %>
                              
                              <!-- Original Subtotal -->
                              <% if (orderOriginalSubtotal > orderDiscountedSubtotal) { %>
                                <div class="flex justify-between">
                                  <span class="text-gray-500 line-through">Original Total</span>
                                  <span class="text-gray-500 line-through">₹<%= orderOriginalSubtotal.toFixed(2) %></span>
                                </div>
                                
                                <!-- Product Savings -->
                                <div class="flex justify-between">
                                  <span class="text-green-600">Product Discounts</span>
                                  <span class="text-green-600 font-medium">-₹<%= productSavings.toFixed(2) %></span>
                                </div>
                              <% } %>
                              
                              <!-- Subtotal -->
                              <div class="flex justify-between">
                                <span class="text-gray-600">Subtotal (<%= order.items.length %> items)</span>
                                <span class="font-medium">₹<%= order.subtotal.toFixed(2) %></span>
                              </div>
                              
                              <!-- Tax -->
                              <div class="flex justify-between">
                                <span class="text-gray-600">Tax (10%)</span>
                                <span class="font-medium">₹<%= order.tax.toFixed(2) %></span>
                              </div>
                              
                              <!-- Shipping -->
                              <div class="flex justify-between">
                                <span class="text-gray-600">Shipping</span>
                                <span class="<%= order.shippingFee === 0 ? 'text-green-600' : 'font-medium' %>">
                                  <%= order.shippingFee === 0 ? 'FREE' : `₹${order.shippingFee.toFixed(2)}` %>
                                </span>
                              </div>
                              
                              <!-- Coupon Discount -->
                              <% if (couponDiscount > 0) { %>
                                <div class="flex justify-between">
                                  <span class="text-green-600">Coupon Discount</span>
                                  <span class="text-green-600 font-medium">-₹<%= couponDiscount.toFixed(2) %></span>
                                </div>
                              <% } %>
                              
                              <!-- Grand Total -->
                              <div class="border-t border-gray-200 pt-2 mt-2">
                                <div class="flex justify-between text-sm font-bold">
                                  <span>Grand Total</span>
                                  <span class="text-blue-600">₹<%= order.totalAmount.toFixed(2) %></span>
                                </div>
                              </div>
                              
                              <!-- Total Savings -->
                              <% if (totalSavings > 0) { %>
                                <div class="border-t border-green-100 pt-2 mt-2">
                                  <div class="flex justify-between text-green-700 text-xs">
                                    <span><i class="fas fa-piggy-bank mr-1"></i>Total Savings</span>
                                    <span class="font-bold">₹<%= totalSavings.toFixed(2) %></span>
                                  </div>
                                </div>
                              <% } %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <!-- Empty State -->
              <div class="bg-white rounded-2xl professional-shadow p-6 sm:p-8 md:p-12 text-center">
                <div class="flex flex-col items-center justify-center text-gray-500">
                  <i class="fas fa-shopping-cart text-4xl sm:text-6xl mb-3 sm:mb-4 text-gray-300"></i>
                  <h2 class="text-xl sm:text-2xl font-bold text-gray-700 mb-2">No Orders Found</h2>
                  <p class="text-gray-600 text-sm sm:text-base mb-4 sm:mb-6">You haven't placed any orders yet.</p>
                  <a href="/" class="btn-primary text-white px-6 sm:px-8 py-3 sm:py-4 rounded-xl font-semibold hover:bg-blue-700 transition-colors flex items-center gap-2 sm:gap-3 text-sm sm:text-base">
                    <i class="fas fa-shopping-bag"></i>
                    <span>Start Shopping</span>
                  </a>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

 <!-- Cancel Modal -->
<div id="cancelModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden px-3 sm:px-4">
  <div class="bg-white rounded-lg max-w-lg w-full p-6">
    <h3 class="text-lg font-semibold mb-3">Cancel Item</h3>
    <form id="cancelForm">
