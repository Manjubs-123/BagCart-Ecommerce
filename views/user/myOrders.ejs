<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Orders - BagHub</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #1a56db;
      --success: #10b981;
      --warning: #f59e0b;
      --danger: #ef4444;
    }

    .order-item-card {
      border-left: 4px solid #1a56db;
      transition: all 0.3s ease;
    }

    .order-item-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .status-pending { background-color: #fef3c7; color: #92400e; }
    .status-processing { background-color: #dbeafe; color: #1e40af; }
    .status-shipped { background-color: #e0e7ff; color: #3730a3; }
    .status-out_for_delivery { background-color: #fce7f3; color: #be185d; }
    .status-delivered { background-color: #dcfce7; color: #166534; }
    .status-cancelled { background-color: #fee2e2; color: #991b1b; }
    .status-returned { background-color: #f3e8ff; color: #7c3aed; }

    .status-badge {
      padding: 0.5rem 1rem;
      border-radius: 9999px;
      font-size: 0.875rem;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--primary) 0%, #1e40af 100%);
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .btn-success {
      background: linear-gradient(135deg, var(--success) 0%, #047857 100%);
    }

    .btn-danger {
      background: linear-gradient(135deg, var(--danger) 0%, #dc2626 100%);
    }

    .btn-warning {
      background: linear-gradient(135deg, var(--warning) 0%, #d97706 100%);
    }

    .glass-effect {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .professional-shadow {
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    /* Mobile-specific styles */
    @media (max-width: 768px) {
      .mobile-stack {
        flex-direction: column !important;
      }
      
      .mobile-full {
        width: 100% !important;
      }
      
      .mobile-text-center {
        text-align: center !important;
      }
      
      .mobile-p-4 {
        padding: 1rem !important;
      }
      
      .mobile-space-y-2 > * + * {
        margin-top: 0.5rem !important;
      }
      
      .status-badge {
        padding: 0.375rem 0.75rem;
        font-size: 0.75rem;
      }
      
      .action-buttons-mobile {
        flex-direction: column;
        gap: 0.5rem;
      }
      
      .action-buttons-mobile button {
        width: 100%;
        justify-content: center;
      }
    }
  </style>
</head>

<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">

  <%- include('../partials/landingheader') %>

  <div class="container mx-auto px-3 sm:px-4 py-4 sm:py-8">
    <div class="max-w-7xl mx-auto">

      <!-- RESPONSIVE LAYOUT WRAPPER -->
      <div class="flex flex-col lg:flex-row gap-4 sm:gap-6">

        <!-- Sidebar (left) -->
        <div class="w-full lg:w-1/4 mb-4 sm:mb-0">
          <%- include('../partials/userProfileSiderbar', {
            activePage: 'orders',
            user,
            ordersCount
          }) %>
        </div>

        <!-- MAIN CONTENT -->
        <div class="flex-1">

          <!-- Page Header -->
          <div class="glass-effect rounded-2xl professional-shadow p-4 sm:p-6 md:p-8 mb-6 sm:mb-8 text-center">
            <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-800 mb-3 sm:mb-4">
              My Orders
            </h1>
            <p class="text-gray-600 text-base sm:text-lg">
              Track and manage all your orders in one place
            </p>
          </div>

          <!-- Orders List -->
          <div class="space-y-4 sm:space-y-6">
            <% if (orders && orders.length > 0) { %>
              <% orders.forEach(order => { %>
                <!-- Order Card -->
                <div class="bg-white rounded-2xl professional-shadow overflow-hidden">
                  <!-- Order Header -->
                  <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-4 sm:px-6 py-3 sm:py-4 border-b border-gray-200">
                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-3 sm:gap-4 mobile-stack">
                      <div class="mobile-text-center md:text-left">
                        <h2 class="text-lg sm:text-xl font-bold text-gray-900">Order #<%= order.orderId || order._id %></h2>
                        <p class="text-gray-600 text-xs sm:text-sm mt-1">
                          Placed on <%= new Date(order.createdAt).toLocaleDateString('en-US', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric',
                            hour: '2-digit',
                            minute: '2-digit'
                          }) %>
                        </p>
                      </div>
                      <div class="mobile-text-center md:text-right mobile-space-y-2">
                        <span class="status-badge <%= getStatusClass(order.orderStatus) %> inline-block">
                          <i class="fas <%= getStatusIcon(order.orderStatus) %>"></i>
                          <%= order.orderStatus.charAt(0).toUpperCase() + order.orderStatus.slice(1) %>
                        </span>
                        <p class="text-base sm:text-lg font-bold text-blue-600 mt-1 sm:mt-2">₹<%= order.totalAmount.toFixed(2) %></p>
                      </div>
                    </div>
                  </div>

                  <!-- Order Items -->
                  <div class="p-4 sm:p-6 space-y-4">
                    <% order.items.forEach((item, index) => { %>
                      <div class="order-item-card bg-gray-50 rounded-xl p-4 sm:p-6">
                        <div class="flex flex-col lg:flex-row gap-4 sm:gap-6">
                          
                          <!-- Product Image -->
                          <div class="flex-shrink-0 mobile-text-center lg:text-left">
                            <img src="<%= item.image || '/images/no-image.jpg' %>" 
                                 alt="<%= item.product.name %>"
                                 class="w-20 h-20 sm:w-24 sm:h-24 object-cover rounded-lg border border-gray-200 mx-auto lg:mx-0">
                          </div>

                          <!-- Product Details -->
                          <div class="flex-grow">
                            <div class="flex flex-col md:flex-row md:items-start justify-between gap-3 sm:gap-4 mb-4 mobile-stack">
                              <div class="flex-grow mobile-text-center md:text-left">
                                <h3 class="text-lg sm:text-xl font-semibold text-gray-900 mb-2">
                                  <%= item.product.name %>
                                </h3>
                                
                                <!-- Item Order ID -->
                                <div class="bg-white rounded-lg p-3 mb-3 inline-block mobile-full sm:inline-block">
                                  <p class="text-xs text-gray-600">Item Order ID</p>
                                  <p class="font-mono text-base sm:text-lg font-bold text-gray-900">
                                    <%= item.itemOrderId || `${order.orderId}-${index + 1}` %>
                                  </p>
                                </div>

                                <!-- Product Specifications -->
                                <div class="grid grid-cols-2 sm:grid-cols-4 gap-2 sm:gap-4 mb-4">
                                  <div class="bg-white p-2 sm:p-3 rounded-lg border border-gray-200">
                                    <p class="text-xs text-gray-500 mb-1">Color</p>
                                    <p class="font-medium text-gray-900 text-sm sm:text-base"><%= item.color %></p>
                                  </div>
                                  <div class="bg-white p-2 sm:p-3 rounded-lg border border-gray-200">
                                    <p class="text-xs text-gray-500 mb-1">Quantity</p>
                                    <p class="font-medium text-gray-900 text-sm sm:text-base"><%= item.quantity %></p>
                                  </div>
                                  <div class="bg-white p-2 sm:p-3 rounded-lg border border-gray-200">
                                    <p class="text-xs text-gray-500 mb-1">Unit Price</p>
                                    <p class="font-medium text-gray-900 text-sm sm:text-base">₹<%= item.price %></p>
                                  </div>
                                  <div class="bg-white p-2 sm:p-3 rounded-lg border border-gray-200">
                                    <p class="text-xs text-gray-500 mb-1">Item Total</p>
                                    <p class="font-medium text-blue-600 text-sm sm:text-base">₹<%= (item.price * item.quantity).toFixed(2) %></p>
                                  </div>
                                </div>
                              </div>

                              <!-- Item Status Badge -->
                              <div class="flex-shrink-0 mobile-text-center md:text-right">
                                <span class="status-badge <%= getStatusClass(item.status || order.orderStatus) %> inline-block">
                                  <i class="fas <%= getStatusIcon(item.status || order.orderStatus) %>"></i>
                                  <%= (item.status || order.orderStatus).charAt(0).toUpperCase() + (item.status || order.orderStatus).slice(1) %>
                                </span>
                              </div>
                            </div>

                            <!-- Progress Bar -->
                            <div class="mt-4">
                              <div class="flex justify-between text-xs sm:text-sm text-gray-600 mb-2">
                                <span class="hidden xs:inline">Order Placed</span>
                                <span class="text-xs">Processing</span>
                                <span class="hidden sm:inline">Shipped</span>
                                <span class="hidden md:inline">Out for Delivery</span>
                                <span class="hidden xs:inline">Delivered</span>
                              </div>
                              <div class="w-full bg-gray-200 rounded-full h-2 sm:h-2.5">
                                <div class="<%= getProgressBarClass(item.status || order.orderStatus) %> h-2 sm:h-2.5 rounded-full transition-all duration-500"></div>
                              </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="mt-4 sm:mt-6 pt-4 border-t border-gray-200 flex flex-wrap gap-2 sm:gap-3 action-buttons-mobile">
                              <!-- Download Invoice Button -->
                              <button 
                                onclick="downloadInvoice('<%= order._id %>', '<%= item._id %>', '<%= item.product.name %>', this)"
                                class="btn-primary text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-semibold flex items-center gap-2 sm:gap-3 professional-shadow text-sm sm:text-base mobile-full">
                                <i class="fas fa-file-invoice"></i>
                                <span>Download Invoice</span>
                              </button>

                              <!-- Cancel Button (Only show for eligible statuses) -->
                              <% if (canCancelItem(item.status || order.orderStatus)) { %>
                                <button 
                                  onclick="showCancelModal('<%= order._id %>', '<%= item._id %>', '<%= item.product.name %>')"
                                  class="btn-danger text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-semibold flex items-center gap-2 sm:gap-3 professional-shadow text-sm sm:text-base mobile-full">
                                  <i class="fas fa-times-circle"></i>
                                  <span>Cancel Item</span>
                                </button>
                              <% } else { %>
                                <button 
                                  disabled
                                  class="bg-gray-400 text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-semibold flex items-center gap-2 sm:gap-3 professional-shadow cursor-not-allowed opacity-50 text-sm sm:text-base mobile-full">
                                  <i class="fas fa-times-circle"></i>
                                  <span>Cancel Not Available</span>
                                </button>
                              <% } %>

                              <!-- Return Button (Only show for delivered items) -->
                              <% if (canReturnItem(item.status || order.orderStatus)) { %>
                                <button 
                                  onclick="showReturnModal('<%= order._id %>', '<%= item._id %>', '<%= item.product.name %>')"
                                  class="btn-warning text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-semibold flex items-center gap-2 sm:gap-3 professional-shadow text-sm sm:text-base mobile-full">
                                  <i class="fas fa-undo"></i>
                                  <span>Return Item</span>
                                </button>
                              <% } else { %>
                                <button 
                                  disabled
                                  class="bg-gray-400 text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-semibold flex items-center gap-2 sm:gap-3 professional-shadow cursor-not-allowed opacity-50 text-sm sm:text-base mobile-full">
                                  <i class="fas fa-undo"></i>
                                  <span>Return Not Available</span>
                                </button>
                              <% } %>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% }) %>
                  </div>

                  <!-- Order Footer -->
                  <div class="bg-gray-50 px-4 sm:px-6 py-3 sm:py-4 border-t border-gray-200">
                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-3 sm:gap-4 mobile-stack mobile-text-center md:text-left">
                      <div class="text-xs sm:text-sm text-gray-600">
                        <p><strong>Shipping Address:</strong> 
                          <%= order.shippingAddress.addressLine1 %>, 
                          <%= order.shippingAddress.city %>, 
                          <%= order.shippingAddress.state %> - 
                          <%= order.shippingAddress.pincode %>
                        </p>
                      </div>
                      <div class="text-xs sm:text-sm text-gray-600">
                        <p><strong>Payment Method:</strong> 
                          <%= order.paymentMethod === 'cod' ? 'Cash on Delivery' : order.paymentMethod %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <!-- Empty State -->
              <div class="bg-white rounded-2xl professional-shadow p-6 sm:p-8 md:p-12 text-center">
                <div class="flex flex-col items-center justify-center text-gray-500">
                  <i class="fas fa-shopping-cart text-4xl sm:text-6xl mb-3 sm:mb-4 text-gray-300"></i>
                  <h2 class="text-xl sm:text-2xl font-bold text-gray-700 mb-2">No Orders Found</h2>
                  <p class="text-gray-600 text-sm sm:text-base mb-4 sm:mb-6">You haven't placed any orders yet.</p>
                  <a href="/" class="btn-primary text-white px-6 sm:px-8 py-3 sm:py-4 rounded-xl font-semibold hover:bg-blue-700 transition-colors flex items-center gap-2 sm:gap-3 text-sm sm:text-base">
                    <i class="fas fa-shopping-bag"></i>
                    <span>Start Shopping</span>
                  </a>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Cancel Modal -->
  <div id="cancelModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden px-3 sm:px-4">
    <div class="bg-white rounded-2xl p-4 sm:p-6 max-w-md w-full mx-auto professional-shadow">
      <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-3 sm:mb-4">Cancel Order Item</h3>
      <p class="text-gray-600 text-sm sm:text-base mb-3 sm:mb-4" id="cancelItemName">Are you sure you want to cancel this item?</p>

      <form id="cancelForm">
        <input type="hidden" id="cancelOrderId" name="orderId">
        <input type="hidden" id="cancelItemId" name="itemId">

        <!-- Select Reason -->
        <div class="mb-3 sm:mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">Reason for cancellation</label>
          <select id="cancelReasonSelect" name="reason"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-blue-500"
            required>
            <option value="">Select a reason</option>
            <option value="Changed mind">Changed mind</option>
            <option value="Found better price">Found better price</option>
            <option value="Shipping too long">Shipping takes too long</option>
            <option value="Ordered by mistake">Ordered by mistake</option>
            <option value="Other">Other reason</option>
          </select>
        </div>

        <!-- Textarea (Initially Hidden) -->
        <div id="cancelOtherBox" class="mb-3 sm:mb-4 hidden">
          <label class="block text-sm font-medium text-gray-700 mb-2">Additional details</label>
          <textarea id="cancelOtherText" name="details"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-blue-500"
            rows="3"
            placeholder="Please provide more details..."></textarea>
        </div>

        <div class="flex gap-2 sm:gap-3 flex-col sm:flex-row">
          <button type="button" onclick="hideCancelModal()"
            class="flex-1 bg-gray-500 text-white px-3 sm:px-4 py-2 rounded-lg hover:bg-gray-600 transition text-sm sm:text-base">
            Cancel
          </button>

          <button type="submit"
            class="flex-1 bg-red-600 text-white px-3 sm:px-4 py-2 rounded-lg hover:bg-red-700 transition text-sm sm:text-base">
            Confirm Cancel
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Return Modal -->
  <div id="returnModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden px-3 sm:px-4">
    <div class="bg-white rounded-2xl p-4 sm:p-6 max-w-md w-full mx-auto professional-shadow">
      <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-3 sm:mb-4">Return Order Item</h3>
      <p class="text-gray-600 text-sm sm:text-base mb-3 sm:mb-4" id="returnItemName">Please provide details for the return request.</p>

      <form id="returnForm">
        <input type="hidden" id="returnOrderId" name="orderId">
        <input type="hidden" id="returnItemId" name="itemId">

        <!-- Select Reason -->
        <div class="mb-3 sm:mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">Return reason</label>
          <select id="returnReasonSelect" name="reason"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-blue-500"
            required>
            <option value="">Select a reason</option>
            <option value="Product damaged">Product damaged</option>
            <option value="Wrong item received">Wrong item received</option>
            <option value="Size issue">Size doesn't fit</option>
            <option value="Quality issues">Quality not as expected</option>
            <option value="Other">Other reason</option>
          </select>
        </div>

        <!-- Textarea (Initially Hidden) -->
        <div id="otherReasonBox" class="mb-3 sm:mb-4 hidden">
          <label class="block text-sm font-medium text-gray-700 mb-2">Additional details</label>
          <textarea id="otherReasonText" name="details"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-blue-500"
            rows="3"
            placeholder="Please describe the issue..."></textarea>
        </div>

        <div class="flex gap-2 sm:gap-3 flex-col sm:flex-row">
          <button type="button" onclick="hideReturnModal()"
            class="flex-1 bg-gray-500 text-white px-3 sm:px-4 py-2 rounded-lg hover:bg-gray-600 transition text-sm sm:text-base">
            Cancel
          </button>
          <button type="submit"
            class="flex-1 bg-orange-600 text-white px-3 sm:px-4 py-2 rounded-lg hover:bg-orange-700 transition text-sm sm:text-base">
            Submit Return
          </button>
        </div>
      </form>
    </div>
  </div>

  <%- include('../partials/footer') %>

  <script>
    // Download invoice function
    function downloadInvoice(orderId, itemId, productName, btn) {
      const button = btn; 
      const originalHtml = button.innerHTML;

      button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generating...';
      button.disabled = true;

      const invoiceUrl = `/order/${orderId}/item/${itemId}/invoice`;

      const link = document.createElement("a");
      link.href = invoiceUrl;
      link.target = "_blank";
      link.click();

      setTimeout(() => {
        button.innerHTML = originalHtml;
        button.disabled = false;
      }, 1500);
    }

    function validateCancelInputs() {
      const reason = document.getElementById("cancelReasonSelect").value;
      const details = document.getElementById("cancelOtherText").value.trim();

      // Patterns not allowed
      const invalidPatterns = /(\)\))|(&&&)|[0-9]/;

      if (invalidPatterns.test(reason)) {
        alert("Reason contains invalid characters!");
        return false;
      }

      if (details && invalidPatterns.test(details)) {
        alert("Details cannot contain numbers, '))', or '&&&'");
        return false;
      }

      return true;
    }

    // Cancel modal functions
    function showCancelModal(orderId, itemId, productName) {
      document.getElementById('cancelOrderId').value = orderId;
      document.getElementById('cancelItemId').value = itemId;
      document.getElementById('cancelItemName').textContent = `Are you sure you want to cancel "${productName}"?`;
      document.getElementById('cancelModal').classList.remove('hidden');
    }

    function hideCancelModal() {
      document.getElementById('cancelModal').classList.add('hidden');
    }

    // Return modal functions
    function showReturnModal(orderId, itemId, productName) {
      document.getElementById('returnOrderId').value = orderId;
      document.getElementById('returnItemId').value = itemId;
      document.getElementById('returnItemName').textContent = `Please provide return details for "${productName}"`;
      document.getElementById('returnModal').classList.remove('hidden');
    }

    function hideReturnModal() {
      document.getElementById('returnModal').classList.add('hidden');
    }

    // Form submissions
    document.getElementById('cancelForm')?.addEventListener('submit', async function(e) {
      e.preventDefault();
      // Validation before sending request
      if (!validateCancelInputs()) {
        return;
      }
      await submitAction(this, '/order/' + this.orderId.value + '/item/' + this.itemId.value + '/cancel', 'cancel');
    });

    document.getElementById('returnForm')?.addEventListener('submit', async function(e) {
      e.preventDefault();
      await submitAction(this, '/order/' + this.orderId.value + '/item/' + this.itemId.value + '/return', 'return');
    });

    // Show textarea only if reason = Other
    document.getElementById("returnReasonSelect").addEventListener("change", function () {
      const box = document.getElementById("otherReasonBox");

      if (this.value === "Other") {
        box.classList.remove("hidden");
      } else {
        box.classList.add("hidden");
        document.getElementById("otherReasonText").value = "";
      }
    });

    // Show textarea only if reason = Other (Cancel Modal)
    document.getElementById("cancelReasonSelect").addEventListener("change", function () {
      const box = document.getElementById("cancelOtherBox");

      if (this.value === "Other") {
        box.classList.remove("hidden");
      } else {
        box.classList.add("hidden");
        document.getElementById("cancelOtherText").value = "";
      }
    });

    async function submitAction(form, url, actionType) {
      const formData = new FormData(form);
      const submitBtn = form.querySelector('button[type="submit"]');
      const originalText = submitBtn.innerHTML;

      submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
      submitBtn.disabled = true;

      try {
        const response = await fetch(url, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(Object.fromEntries(formData))
        });

        const result = await response.json();

        if (result.success) {
          showNotification(`${actionType.charAt(0).toUpperCase() + actionType.slice(1)} request submitted successfully!`, 'success');
          setTimeout(() => {
            location.reload();
          }, 2000);
        } else {
          throw new Error(result.message);
        }
      } catch (error) {
        showNotification('Error: ' + error.message, 'error');
        submitBtn.innerHTML = originalText;
        submitBtn.disabled = false;
      }
    }

    function showNotification(message, type) {
      const notification = document.createElement('div');
      notification.className = `fixed top-4 right-4 p-3 sm:p-4 rounded-lg shadow-lg transform transition-all duration-300 z-50 text-sm sm:text-base ${
        type === 'success' ? 'bg-green-500 text-white' : 'bg-red-500 text-white'
      }`;
      notification.innerHTML = `
        <div class="flex items-center gap-2 sm:gap-3">
          <i class="fas fa-${type === 'success' ? 'check' : 'exclamation'}-circle"></i>
          <span class="font-medium">${message}</span>
        </div>
      `;
      
      document.body.appendChild(notification);
      
      setTimeout(() => {
        notification.style.opacity = '0';
        setTimeout(() => {
