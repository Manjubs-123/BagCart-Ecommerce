function toggleOrderDetails(orderId) {
  const details = document.getElementById('details-' + orderId);
  const icon = document.getElementById('icon-' + orderId);
  if (!details) return;

  // Close all other accordions
  document.querySelectorAll('.accordion-content').forEach(d => {
    if (d === details) return;
    d.classList.remove('open');
    // reset associated icon rotation if any
    const otherId = d.id && d.id.replace(/^details-/, '');
    const otherIcon = otherId ? document.getElementById('icon-' + otherId) : null;
    if (otherIcon) otherIcon.classList.remove('rotate-180');
    if (d.dataset) d.setAttribute('aria-hidden', 'true');
  });

  const isOpen = details.classList.contains('open');

  if (isOpen) {
    details.classList.remove('open');
    if (icon) {
      icon.classList.remove('rotate-180');
      icon.setAttribute('aria-expanded', 'false');
    }
    details.setAttribute('aria-hidden', 'true');
  } else {
    details.classList.add('open');
    if (icon) {
      icon.classList.add('rotate-180');
      icon.setAttribute('aria-expanded', 'true');
    }
    details.setAttribute('aria-hidden', 'false');

    // optional: bring into view
    setTimeout(() => details.scrollIntoView({ behavior: 'smooth', block: 'start' }), 120);
  }
}

