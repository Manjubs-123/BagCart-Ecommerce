<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Offer Management | Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        .offer-card {
            transition: all 0.3s ease;
            border-left: 4px solid;
        }
        .offer-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
        }
        .product-offer { border-left-color: #3b82f6; }
        .category-offer { border-left-color: #10b981; }
        .referral-offer { border-left-color: #8b5cf6; }
        
        .offer-badge {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        .badge-product { background-color: #dbeafe; color: #1e40af; }
        .badge-category { background-color: #d1fae5; color: #065f46; }
        .badge-referral { background-color: #ede9fe; color: #5b21b6; }
        
        .status-active { background-color: #d1fae5; color: #065f46; }
        .status-inactive { background-color: #fef3c7; color: #92400e; }
        .status-expired { background-color: #fee2e2; color: #991b1b; }
        
        .filter-btn {
            transition: all 0.2s ease;
        }
        .filter-btn.active {
            background-color: #3b82f6;
            color: white;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    
    <!-- Sidebar -->
    <%- include('../partials/sidebar', { currentPage: 'offers' }) %>
    
    <!-- Main Content -->
    <main class="ml-64 flex-1 p-6">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex justify-between items-center mb-2">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Offer Management</h1>
                    <p class="text-gray-600">Create and manage product, category, and referral offers</p>
                </div>
                <div class="flex gap-3">
                    <a href="/admin/offers/create" 
                       class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-6 py-3 rounded-lg font-semibold hover:from-blue-700 hover:to-indigo-700 transition-all flex items-center gap-2">
                        <i class="fas fa-plus"></i>
                        Create New Offer
                    </a>
                </div>
            </div>
            
            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
                <div class="bg-white rounded-xl p-6 shadow-sm border-l-4 border-blue-500">
                    <div class="flex justify-between items-center">
                        <div>
                            <p class="text-sm text-gray-500">Total Offers</p>
                            <p class="text-2xl font-bold text-gray-900"><%= stats.totalOffers %></p>
                        </div>
                        <div class="bg-blue-100 p-3 rounded-full">
                            <i class="fas fa-tag text-blue-600 text-xl"></i>
                        </div>
                    </div>
                </div>
                
                <div class="bg-white rounded-xl p-6 shadow-sm border-l-4 border-green-500">
                    <div class="flex justify-between items-center">
                        <div>
                            <p class="text-sm text-gray-500">Active Offers</p>
                            <p class="text-2xl font-bold text-gray-900"><%= stats.activeOffers %></p>
                        </div>
                        <div class="bg-green-100 p-3 rounded-full">
                            <i class="fas fa-bolt text-green-600 text-xl"></i>
                        </div>
                    </div>
                </div>
                
                <div class="bg-white rounded-xl p-6 shadow-sm border-l-4 border-purple-500">
                    <div class="flex justify-between items-center">
                        <div>
                            <p class="text-sm text-gray-500">Product Offers</p>
                            <p class="text-2xl font-bold text-gray-900"><%= stats.productOffers %></p>
                        </div>
                        <div class="bg-purple-100 p-3 rounded-full">
                            <i class="fas fa-box text-purple-600 text-xl"></i>
                        </div>
                    </div>
                </div>
                
                <div class="bg-white rounded-xl p-6 shadow-sm border-l-4 border-teal-500">
                    <div class="flex justify-between items-center">
                        <div>
                            <p class="text-sm text-gray-500">Category Offers</p>
                            <p class="text-2xl font-bold text-gray-900"><%= stats.categoryOffers %></p>
                        </div>
                        <div class="bg-teal-100 p-3 rounded-full">
                            <i class="fas fa-layer-group text-teal-600 text-xl"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters & Search -->
        <div class="bg-white rounded-xl p-6 mb-6 shadow-sm">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
                <div class="flex-1">
                    <div class="relative">
                        <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                        <input type="text" 
                               id="searchInput"
                               placeholder="Search offers by name or code..." 
                               class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    </div>
                </div>
                
                <div class="flex gap-2 flex-wrap">
                    <button onclick="filterOffers('all')" 
                            class="filter-btn active px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                        All Offers
                    </button>
                    <button onclick="filterOffers('product')" 
                            class="filter-btn px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                        Product Offers
                    </button>
                    <button onclick="filterOffers('category')" 
                            class="filter-btn px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                        Category Offers
                    </button>
                    <button onclick="filterOffers('active')" 
                            class="filter-btn px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                        Active
                    </button>
                    <button onclick="filterOffers('expired')" 
                            class="filter-btn px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                        Expired
                    </button>
                </div>
            </div>
        </div>

        <!-- Offers List -->
       <!-- TABLE OFFER LIST -->
<div class="bg-white rounded-xl shadow-sm p-6 mb-8">
    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-gray-100 text-gray-700 text-sm">
                    <th class="py-3 px-4 border-b">Offer Name</th>
                    <th class="py-3 px-4 border-b">Type</th>
                    <th class="py-3 px-4 border-b">Discount</th>
                    <th class="py-3 px-4 border-b">Valid</th>
                    <th class="py-3 px-4 border-b">Applied To</th>
                    <th class="py-3 px-4 border-b">Status</th>
                    <th class="py-3 px-4 border-b text-center">Actions</th>
                </tr>
            </thead>

            <tbody>
                <% if (offers.length === 0) { %>
                    <tr>
                        <td colspan="7" class="text-center py-10 text-gray-500">
                            <i class="fas fa-tag text-4xl mb-3"></i>
                            <p>No offers found</p>
                        </td>
                    </tr>
                <% } else { %>
                    <% offers.forEach(offer => { 
                        const isExpired = new Date(offer.validTo) < new Date();
                        const isActive = offer.isActive && !isExpired;

                        const statusClass = isExpired 
                            ? 'bg-red-100 text-red-700' 
                            : isActive 
                                ? 'bg-green-100 text-green-700' 
                                : 'bg-yellow-100 text-yellow-700';

                        const typeClass = offer.type === 'product' 
                            ? 'bg-blue-100 text-blue-700' 
                            : 'bg-teal-100 text-teal-700';
                    %>

                    <tr class="hover:bg-gray-50 transition">
                        <!-- Name -->
                        <td class="py-4 px-4 font-medium text-gray-900 whitespace-nowrap">
                            <%= offer.name %>
                        </td>

                        <!-- Type -->
                        <td class="py-4 px-4">
                            <span class="px-3 py-1 rounded-full text-xs font-semibold <%= typeClass %>">
                                <%= offer.type === 'product' ? 'Product Offer' : 'Category Offer' %>
                            </span>
                        </td>

                        <!-- Discount -->
                        <td class="py-4 px-4 whitespace-nowrap font-semibold text-gray-900">
                            <%= offer.discountValue %>% 
                        </td>

                        <!-- Date -->
                        <td class="py-4 px-4 text-sm">
                            <%= new Date(offer.validFrom).toLocaleDateString() %> â€”
                            <%= new Date(offer.validTo).toLocaleDateString() %>
                        </td>

                        <!-- Applied To -->
                        <td class="py-4 px-4 text-sm">
                            <% if (offer.type === 'product') { %>
                                <%= offer.products.length %> products
                            <% } else { %>
                                <%= offer.categories.length %> categories
                            <% } %>
                        </td>

                        <!-- Status -->
                        <td class="py-4 px-4">
                            <span class="px-3 py-1 rounded-full text-xs font-semibold <%= statusClass %>">
                                <%= isExpired ? "Expired" : isActive ? "Active" : "Inactive" %>
                            </span>
                        </td>

                        <!-- Actions -->
                       <td class="py-4 px-4 text-center">
    <div class="inline-flex gap-2">

        <!-- Edit -->
        <a href="/admin/offers/edit/<%= offer._id %>" 
           class="px-4 py-2 bg-blue-600 text-white rounded-md text-xs font-medium hover:bg-blue-700 transition flex items-center gap-1">
            <i class="fas fa-edit"></i>
            Edit
        </a>

        <% if (isActive) { %>
            <!-- Deactivate -->
            <button onclick="toggleOfferStatus('<%= offer._id %>', false)"
                    class="px-4 py-2 bg-yellow-500 text-white rounded-md text-xs font-medium hover:bg-yellow-600 transition flex items-center gap-1">
                <i class="fas fa-pause"></i>
                Pause
            </button>
        <% } else if (!isExpired) { %>
            <!-- Activate -->
            <button onclick="toggleOfferStatus('<%= offer._id %>', true)"
                    class="px-4 py-2 bg-green-600 text-white rounded-md text-xs font-medium hover:bg-green-700 transition flex items-center gap-1">
                <i class="fas fa-play"></i>
                Activate
            </button>
        <% } %>

        <!-- Delete -->
        <button onclick="deleteOffer('<%= offer._id %>', '<%= offer.name %>')"
                class="px-4 py-2 bg-red-600 text-white rounded-md text-xs font-medium hover:bg-red-700 transition flex items-center gap-1">
            <i class="fas fa-trash"></i>
            Delete
        </button>

    </div>
</td>

                    </tr>

                    <% }) %>
                <% } %>
            </tbody>
        </table>
      
    </div>
</div>


        <!-- Pagination -->
        <% if (totalPages > 1) { %>
            <div class="flex justify-center mt-8">
                <nav class="flex items-center gap-2">
                    <% if (page > 1) { %>
                        <a href="?page=<%= page - 1 %>&type=<%= currentType %>&status=<%= currentStatus %>" 
                           class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    <% } %>
                    
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <% if (i === page) { %>
                            <span class="px-4 py-2 bg-blue-600 text-white rounded-lg">
                                <%= i %>
                            </span>
                        <% } else if (i >= page - 2 && i <= page + 2) { %>
                            <a href="?page=<%= i %>&type=<%= currentType %>&status=<%= currentStatus %>" 
                               class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                                <%= i %>
                            </a>
                        <% } %>
                    <% } %>
                    
                    <% if (page < totalPages) { %>
                        <a href="?page=<%= page + 1 %>&type=<%= currentType %>&status=<%= currentStatus %>" 
                           class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    <% } %>
                </nav>
            </div>
        <% } %>
    </main>

    <script>
        // Filter buttons active state
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
            });
        });

        // Toggle dropdown
        function toggleDropdown(offerId) {
            const dropdown = document.getElementById(`dropdown-${offerId}`);
            dropdown.classList.toggle('hidden');
            
            // Close other dropdowns
            document.querySelectorAll('[id^="dropdown-"]').forEach(d => {
                if (d.id !== `dropdown-${offerId}`) {
                    d.classList.add('hidden');
                }
            });
        }

        // Close dropdowns when clicking outside
        document.addEventListener('click', function(event) {
            if (!event.target.closest('.relative')) {
                document.querySelectorAll('[id^="dropdown-"]').forEach(d => {
                    d.classList.add('hidden');
                });
            }
        });

        // Filter offers
        function filterOffers(filter) {
            let url = '/admin/offers?';
            if (filter !== 'all') {
                if (['product', 'category'].includes(filter)) {
                    url += `type=${filter}`;
                } else {
                    url += `status=${filter}`;
                }
            }
            window.location.href = url;
        }


         // Toggle offer active/inactive
    function toggleOfferStatus(offerId, activate) {
        const action = activate ? 'activate' : 'deactivate';

        Swal.fire({
            title: `${activate ? "Activate" : "Deactivate"} Offer?`,
            text: `Are you sure you want to ${action} this offer?`,
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: activate ? "#16a34a" : "#f59e0b",
            cancelButtonColor: "#6b7280",
            confirmButtonText: `Yes, ${action}`,
        }).then((result) => {
            if (result.isConfirmed) {
                axios.post(`/admin/offers/${offerId}/toggle-status`, { isActive: activate })
                    .then((res) => {
                        Swal.fire({
                            icon: "success",
                            title: "Updated!",
                            text: `Offer has been ${action}d successfully.`,
                            timer: 1500,
                            showConfirmButton: false
                        }).then(() => location.reload());
                    })
                    .catch((err) => {
                        Swal.fire("Error", err.response?.data?.message || "Something went wrong!", "error");
                    });
            }
        });
    }

    // DELETE OFFER
    function deleteOffer(offerId, offerName) {
        Swal.fire({
            title: "Delete Offer?",
            html: `Are you sure you want to delete <b>${offerName}</b>?`,
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#dc2626",
            cancelButtonColor: "#6b7280",
            confirmButtonText: "Yes, delete it"
        }).then((result) => {
            if (result.isConfirmed) {
                axios.delete(`/admin/offers/${offerId}`)
                    .then(() => {
                        Swal.fire({
                            icon: "success",
                            title: "Deleted!",
                            text: "Offer removed successfully",
                            timer: 1500,
                            showConfirmButton: false
                        }).then(() => location.reload());
                    })
                    .catch((err) => {
                        Swal.fire("Error", err.response?.data?.message || "Delete failed!", "error");
                    });
            }
        });
    }
        // Search functionality
        let searchTimeout;
        document.getElementById('searchInput').addEventListener('input', function(e) {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                const searchTerm = e.target.value;
                if (searchTerm.length >= 2 || searchTerm.length === 0) {
                    window.location.href = `/admin/offers?search=${encodeURIComponent(searchTerm)}`;
                }
            }, 500);
        });
    </script>
</body>
</html>