<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Categories Management | Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <style>
    :root {
      --primary: #1a56db;
      --primary-dark: #1e429f;
      --secondary: #047857;
      --accent: #f59e0b;
      --light: #f8fafc;
      --dark: #1e293b;
    }

    .gradient-bg {
      background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    }

    .btn-primary {
      background-color: var(--primary);
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      background-color: var(--primary-dark);
      transform: translateY(-2px);
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .btn-success {
      background-color: var(--secondary);
      transition: all 0.3s ease;
    }

    .btn-success:hover {
      background-color: #065f46;
      transform: translateY(-2px);
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .card-hover {
      transition: all 0.3s ease;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    .card-hover:hover {
      transform: translateY(-2px);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    .status-active {
      background-color: #dcfce7;
      color: #166534;
      padding: 0.25rem 0.75rem;
      border-radius: 9999px;
      font-size: 0.75rem;
      font-weight: 600;
    }

    .status-inactive {
      background-color: #fef3c7;
      color: #92400e;
      padding: 0.25rem 0.75rem;
      border-radius: 9999px;
      font-size: 0.75rem;
      font-weight: 600;
    }

    .status-blocked {
      background-color: #fee2e2;
      color: #991b1b;
      padding: 0.25rem 0.75rem;
      border-radius: 9999px;
      font-size: 0.75rem;
      font-weight: 600;
    }
    
    /* Mobile overlay */
    @media (max-width: 1023px) {
      .mobile-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 40;
      }
      
      .mobile-overlay.active {
        display: block;
      }
      
      body.sidebar-open {
        overflow: hidden;
      }
    }
  </style>
</head>

<body class="bg-gray-50 text-gray-900 flex min-h-screen">
  <!-- Mobile Overlay -->
  <div class="mobile-overlay lg:hidden" id="mobile-overlay"></div>
  
  <!-- Sidebar -->
   <%- include('../partials/sidebar', { currentPage: 'category' }) %>

  <!-- Main Content -->
  <main class="flex-1 w-full p-4 sm:p-6 lg:p-8 lg:ml-64 min-h-screen transition-all duration-300">
    <!-- Header Section -->
    <div class="mb-6 lg:mb-8">
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-4 sm:mb-6">
        <div class="flex-1">
          <div class="flex items-center justify-between mb-2">
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Categories Management</h1>
            <!-- Mobile menu button -->
            <button
              id="mobile-menu-button"
              class="lg:hidden p-2 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors"
              aria-label="Toggle menu"
            >
              <i class="fas fa-bars text-lg"></i>
            </button>
          </div>
          <p class="text-gray-600 text-sm sm:text-base mt-1">Manage product categories and their status</p>
        </div>
        <button 
          onclick="window.location.href='/admin/category/addCategory'"
          class="btn-primary text-white px-4 sm:px-6 py-2.5 sm:py-3 rounded-lg font-semibold flex items-center justify-center gap-2 shadow-lg w-full sm:w-auto text-sm sm:text-base">
          <i class="fas fa-plus-circle"></i>
          Add New Category
        </button>
      </div>
      
      <!-- Stats Cards -->
      <div class="grid grid-cols-1 xs:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-5 lg:gap-6 mb-6 lg:mb-8">
        <div class="bg-white rounded-xl lg:rounded-2xl p-4 sm:p-5 lg:p-6 card-hover border-l-4 border-blue-500">
          <div class="flex justify-between items-center">
            <div>
              <p class="text-xs sm:text-sm text-gray-500">Total Categories</p>
              <p class="text-xl sm:text-2xl font-bold text-gray-900"><%= totalCategories || 0 %></p>
            </div>
            <div class="bg-blue-100 p-2 sm:p-3 rounded-full">
              <i class="fas fa-layer-group text-blue-600 text-lg sm:text-xl"></i>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-xl lg:rounded-2xl p-4 sm:p-5 lg:p-6 card-hover border-l-4 border-green-500">
          <div class="flex justify-between items-center">
            <div>
              <p class="text-xs sm:text-sm text-gray-500">Active Categories</p>
              <p class="text-xl sm:text-2xl font-bold text-gray-900"><%= activeCategories || 0 %></p>
            </div>
            <div class="bg-green-100 p-2 sm:p-3 rounded-full">
              <i class="fas fa-check-circle text-green-600 text-lg sm:text-xl"></i>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-xl lg:rounded-2xl p-4 sm:p-5 lg:p-6 card-hover border-l-4 border-red-500">
          <div class="flex justify-between items-center">
            <div>
              <p class="text-xs sm:text-sm text-gray-500">Blocked Categories</p>
              <p class="text-xl sm:text-2xl font-bold text-gray-900"><%= blockedCategories || 0 %></p>
            </div>
            <div class="bg-red-100 p-2 sm:p-3 rounded-full">
              <i class="fas fa-ban text-red-600 text-lg sm:text-xl"></i>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-xl lg:rounded-2xl p-4 sm:p-5 lg:p-6 card-hover border-l-4 border-purple-500">
          <div class="flex justify-between items-center">
            <div>
              <p class="text-xs sm:text-sm text-gray-500">This Page</p>
              <p class="text-xl sm:text-2xl font-bold text-gray-900"><%= categories ? categories.length : 0 %>/<%= totalCategories || 0 %></p>
            </div>
            <div class="bg-purple-100 p-2 sm:p-3 rounded-full">
              <i class="fas fa-list text-purple-600 text-lg sm:text-xl"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Search and Filters -->
    <div class="bg-white rounded-xl lg:rounded-2xl p-4 sm:p-6 card-hover mb-6">
      <div class="flex flex-col md:flex-row gap-4 items-stretch md:items-center justify-between">
        <div class="flex-1 w-full">
          <form action="/admin/category" method="get" class="flex flex-col sm:flex-row items-stretch sm:items-center gap-3 w-full">
            <div class="relative flex-1">
              <input 
                  type="text" 
                  name="q" 
                  value="<%= q || '' %>" 
                  placeholder="Search categories..."
                  class="border border-gray-300 rounded-lg px-4 py-2.5 w-full 
                        focus:outline-none focus:ring-2 focus:ring-blue-500 
                        focus:border-transparent pl-10 text-sm sm:text-base"
              />
              <i class="fas fa-search text-gray-400 absolute left-3 top-3.5"></i>
            </div>

            <div class="flex gap-2">
              <button type="submit" 
                  class="bg-blue-600 text-white px-4 py-2.5 rounded-lg hover:bg-blue-700 
                        transition-all flex items-center justify-center gap-2 action-btn flex-1 sm:flex-none text-sm sm:text-base">
                  <i class="fas fa-search"></i>
                  <span class="hidden xs:inline">Search</span>
              </button>

              <a href="/admin/category" 
                class="bg-gray-500 text-white px-4 py-2.5 rounded-lg hover:bg-gray-600 
                        transition-all flex items-center justify-center gap-2 action-btn flex-1 sm:flex-none text-sm sm:text-base">
                  <i class="fas fa-times"></i>
                  <span class="hidden xs:inline">Clear</span>
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Categories Table -->
    <div class="bg-white rounded-xl lg:rounded-2xl shadow-sm border border-gray-200 overflow-hidden card-hover">
      <!-- Desktop Table (lg and above) -->
      <div class="hidden lg:block overflow-x-auto">
        <table class="min-w-full">
          <thead class="bg-gray-50 border-b border-gray-200">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Sl.no</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Category Name</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Description</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Status</th>
              <th class="px-6 py-4 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (categories && categories.length > 0) { %>
              <% categories.forEach((cat, index) => { %>
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= (page-1)*limit + index + 1 %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
                        <i class="fas fa-folder text-blue-600"></i>
                      </div>
                      <div class="text-sm font-medium text-gray-900 truncate max-w-xs"><%= cat.name %></div>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-700 max-w-xs truncate">
                    <%= cat.description || '<span class="text-gray-400 italic">No description</span>' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if(cat.isDeleted) { %>
                      <span class="status-blocked">
                        <i class="fas fa-trash mr-1"></i>Deleted
                      </span>
                    <% } else { %>
                      <span class="<%= cat.isActive ? 'status-active' : 'status-inactive' %>">
                        <i class="fas <%= cat.isActive ? 'fa-check' : 'fa-ban' %> mr-1"></i>
                        <%= cat.isActive ? 'Active' : 'Blocked' %>
                      </span>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <div class="flex justify-center gap-2">
                      <!-- Edit Button -->
                      <a href="/admin/category/edit/<%= cat._id %>" 
                         class="bg-blue-600 text-white px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg hover:bg-blue-700 transition flex items-center justify-center gap-1 sm:gap-2 text-xs sm:text-sm font-medium"
                         title="Edit Category">
                         <i class="fas fa-edit text-xs sm:text-sm"></i>
                         <span class="hidden sm:inline">Edit</span>
                      </a>

                      <!-- Toggle Status Button -->
                      <button
                        onclick="toggleCategoryStatus('<%= cat._id %>', <%= cat.isActive ? 'true' : 'false' %>)"
                        class="<%= cat.isActive ? 'bg-red-600 hover:bg-red-700' : 'bg-green-600 hover:bg-green-700' %> text-white px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg transition flex items-center justify-center gap-1 sm:gap-2 text-xs sm:text-sm font-medium"
                        <%= cat.isDeleted ? 'disabled' : '' %>
                        title="<%= cat.isActive ? 'Block Category' : 'Unblock Category' %>">
                        <i class="fas <%= cat.isActive ? 'fa-ban' : 'fa-check' %> text-xs sm:text-sm"></i>
                        <span class="hidden sm:inline"><%= cat.isActive ? 'Block' : 'Unblock' %></span>
                      </button>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="5" class="px-6 py-8 sm:py-12 text-center">
                  <div class="flex flex-col items-center justify-center text-gray-500">
                    <i class="fas fa-inbox text-3xl sm:text-4xl mb-3 text-gray-300"></i>
                    <p class="text-base sm:text-lg font-medium">No categories found</p>
                    <p class="text-xs sm:text-sm mt-1">Get started by creating your first category</p>
                    <button 
                      onclick="window.location.href='/admin/category/addCategory'"
                      class="btn-primary text-white px-4 sm:px-6 py-2 rounded-lg font-medium mt-4 flex items-center justify-center gap-2 text-sm sm:text-base w-full sm:w-auto">
                      <i class="fas fa-plus-circle"></i>
                      Add New Category
                    </button>
                  </div>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      
      <!-- Mobile & Tablet View (below lg) -->
      <div class="lg:hidden">
        <% if (categories && categories.length > 0) { %>
          <div class="space-y-3 sm:space-y-4 p-3 sm:p-4">
            <% categories.forEach((cat, index) => { %>
              <div class="border border-gray-200 rounded-xl p-3 sm:p-4 bg-gray-50 hover:bg-gray-100 transition-colors">
                <div class="flex justify-between items-start mb-3">
                  <div class="flex items-start gap-3 flex-1 min-w-0">
                    <div class="flex-shrink-0 h-10 w-10 bg-blue-100 rounded-lg flex items-center justify-center">
                      <i class="fas fa-folder text-blue-600"></i>
                    </div>
                    <div class="min-w-0 flex-1">
                      <div class="flex items-center gap-2 mb-1">
                        <span class="text-xs font-medium text-gray-500">#<%= (page-1)*limit + index + 1 %></span>
                        <h4 class="font-semibold text-gray-800 text-sm sm:text-base truncate"><%= cat.name %></h4>
                      </div>
                      <p class="text-xs sm:text-sm text-gray-600 truncate">
                        <%= cat.description || '<span class="text-gray-400 italic">No description</span>' %>
                      </p>
                    </div>
                  </div>
                  <div class="ml-2">
                    <% if(cat.isDeleted) { %>
                      <span class="status-blocked text-xs">
                        <i class="fas fa-trash mr-1"></i>Deleted
                      </span>
                    <% } else { %>
                      <span class="<%= cat.isActive ? 'status-active' : 'status-inactive' %> text-xs">
                        <i class="fas <%= cat.isActive ? 'fa-check' : 'fa-ban' %> mr-1"></i>
                        <%= cat.isActive ? 'Active' : 'Blocked' %>
                      </span>
                    <% } %>
                  </div>
                </div>
                
                <div class="flex gap-2">
                  <!-- Edit Button -->
                  <a href="/admin/category/edit/<%= cat._id %>" 
                     class="bg-blue-600 text-white px-3 py-1.5 rounded-lg hover:bg-blue-700 transition flex items-center justify-center gap-1 flex-1 text-sm">
                     <i class="fas fa-edit"></i>
                     Edit
                  </a>

                  <!-- Toggle Status Button -->
                  <button
                    onclick="toggleCategoryStatus('<%= cat._id %>', <%= cat.isActive ? 'true' : 'false' %>)"
                    class="<%= cat.isActive ? 'bg-red-600 hover:bg-red-700' : 'bg-green-600 hover:bg-green-700' %> text-white px-3 py-1.5 rounded-lg transition flex items-center justify-center gap-1 flex-1 text-sm"
                    <%= cat.isDeleted ? 'disabled' : '' %>
                    title="<%= cat.isActive ? 'Block Category' : 'Unblock Category' %>">
                    <i class="fas <%= cat.isActive ? 'fa-ban' : 'fa-check' %>"></i>
                    <%= cat.isActive ? 'Block' : 'Unblock' %>
                  </button>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="text-center py-8 sm:py-12">
            <div class="flex flex-col items-center justify-center text-gray-500">
              <i class="fas fa-inbox text-3xl sm:text-4xl mb-3 text-gray-300"></i>
              <p class="text-base sm:text-lg font-medium">No categories found</p>
              <p class="text-xs sm:text-sm mt-1">Get started by creating your first category</p>
              <button 
                onclick="window.location.href='/admin/category/addCategory'"
                class="btn-primary text-white px-4 sm:px-6 py-2 rounded-lg font-medium mt-4 flex items-center justify-center gap-2 text-sm sm:text-base w-full sm:w-auto">
                <i class="fas fa-plus-circle"></i>
                Add New Category
              </button>
            </div>
          </div>
        <% } %>
      </div>
    </div>

   <!-- Pagination -->
   <% if (pages > 1) { %>
     <div class="flex flex-wrap justify-center items-center gap-2 mt-6 lg:mt-8">
       <% if (page > 1) { %>
         <a 
           href="?page=<%= page - 1 %>&limit=<%= limit %>&q=<%= q || '' %>"
           class="px-3 sm:px-4 py-2 border rounded-lg bg-white hover:bg-gray-50 transition-all flex items-center gap-1 sm:gap-2 action-btn text-sm">
           <i class="fas fa-chevron-left text-xs"></i>
           <span class="hidden xs:inline">Previous</span>
         </a>
       <% } %>

       <div class="flex flex-wrap gap-1 sm:gap-2 justify-center">
         <% for (let i = 1; i <= pages; i++) { %>
           <a 
             href="?page=<%= i %>&limit=<%= limit %>&q=<%= q || '' %>"
             class="px-3 sm:px-4 py-2 border rounded-lg <%= i === page ? 'bg-blue-600 text-white' : 'bg-white hover:bg-gray-50' %> transition-all action-btn text-sm">
             <%= i %>
           </a>
         <% } %>
       </div>

       <% if (page < pages) { %>
         <a 
           href="?page=<%= page + 1 %>&limit=<%= limit %>&q=<%= q || '' %>"
           class="px-3 sm:px-4 py-2 border rounded-lg bg-white hover:bg-gray-50 transition-all flex items-center gap-1 sm:gap-2 action-btn text-sm">
           <span class="hidden xs:inline">Next</span>
           <i class="fas fa-chevron-right text-xs"></i>
         </a>
       <% } %>
     </div>
   <% } %>
  </main>

  <!-- Sidebar Toggle Script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const sidebar = document.getElementById('admin-sidebar');
      const overlay = document.getElementById('mobile-overlay');
      const body = document.body;

      function toggleSidebar() {
        sidebar.classList.toggle('-translate-x-full');
        overlay.classList.toggle('active');
        body.classList.toggle('sidebar-open');
      }

      function closeSidebar() {
        sidebar.classList.add('-translate-x-full');
        overlay.classList.remove('active');
        body.classList.remove('sidebar-open');
      }

      if (mobileMenuButton && sidebar && overlay) {
        mobileMenuButton.addEventListener('click', toggleSidebar);
        overlay.addEventListener('click', closeSidebar);
      }

      // Close sidebar when clicking on any link
      document.querySelectorAll('#admin-sidebar a').forEach(link => {
        link.addEventListener('click', () => {
          if (window.innerWidth < 1024) {
            closeSidebar();
          }
        });
      });

      // Close sidebar on escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && window.innerWidth < 1024) {
          closeSidebar();
        }
      });
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    // Update items per page
    function updateLimit(newLimit) {
      const url = new URL(window.location.href);
      url.searchParams.set('limit', newLimit);
      url.searchParams.set('page', '1'); // Reset to first page
      window.location.href = url.toString();
    }

    // Toggle category status
    function toggleCategoryStatus(id, isActive) {
      const action = isActive ? "block" : "unblock";
      const actionText = isActive ? "Block" : "Unblock";
      const buttonColor = isActive ? '#ef4444' : '#22c55e';

      Swal.fire({
        title: `${actionText} Category`,
        html: `Are you sure you want to <strong>${action}</strong> this category?`,
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: buttonColor,
        cancelButtonColor: "#6b7280",
        confirmButtonText: `Yes, ${actionText}!`,
        cancelButtonText: "Cancel",
        reverseButtons: true
      }).then((result) => {
        if (result.isConfirmed) {
          // Show loading state
          Swal.fire({
            title: `${actionText}ing...`,
            text: 'Please wait while we update the category',
            allowOutsideClick: false,
            didOpen: () => {
              Swal.showLoading();
            }
          });

          fetch(`/admin/category/toggleStatus?id=${id}`, { 
            method: "POST",
            headers: {
              'Content-Type': 'application/json',
            }
          })
            .then(res => res.json())
            .then(data => {
              Swal.fire({
                title: "Success!",
                text: data.message,
                icon: "success",
                timer: 1500,
                showConfirmButton: false
              }).then(() => location.reload());
            })
            .catch(() => {
              Swal.fire({
                title: "Error!",
                text: "Failed to update category status",
                icon: "error",
                confirmButtonText: "OK"
              });
            });
        }
      });
    }

    // Show success message if redirected with updated parameter
    const params = new URLSearchParams(window.location.search);
    if (params.get("updated") === "true") {
      Swal.fire({
        icon: "success",
        title: "Category updated successfully!",
        toast: true,
        position: "top-end",
        showConfirmButton: false,
        timer: 3000,
        timerProgressBar: true
      });
    }

    // Show success message if redirected with created parameter
    if (params.get("created") === "true") {
      Swal.fire({
        icon: "success",
        title: "Category created successfully!",
        toast: true,
        position: "top-end",
        showConfirmButton: false,
        timer: 3000,
        timerProgressBar: true
      });
    }
  </script>
</body>
</html>