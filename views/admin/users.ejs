<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management | Admin - BagHub</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        .card-hover {
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }

        .card-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        .sidebar {
            scrollbar-width: thin;
            scrollbar-color: rgba(255, 255, 255, 0.3) transparent;
        }

        .sidebar::-webkit-scrollbar {
            width: 4px;
        }

        .sidebar::-webkit-scrollbar-track {
            background: transparent;
        }

        .sidebar::-webkit-scrollbar-thumb {
            background-color: rgba(255, 255, 255, 0.3);
            border-radius: 20px;
        }

        .sidebar::-webkit-scrollbar-thumb:hover {
            background-color: rgba(255, 255, 255, 0.5);
        }

        .nav-link-active {
            background: rgba(255, 255, 255, 0.15);
            border-left-color: #3b82f6;
            padding-left: 12px;
        }

        .nav-link-active .nav-icon {
            background: rgba(59, 130, 246, 0.3);
        }

        .nav-link-active span {
            color: white;
            font-weight: 600;
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }

        .action-btn {
            transition: all 0.2s ease;
        }

        .action-btn:hover {
            transform: translateY(-1px);
        }

        .table-row-hover:hover {
            background: linear-gradient(90deg, #f8fafc, #f1f5f9);
            transition: all 0.2s ease;
        }

        .stats-card {
            background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
            border: 1px solid #e2e8f0;
            border-radius: 16px;
            padding: 1.5rem;
        }
        
        /* Mobile overlay */
        @media (max-width: 1023px) {
            .mobile-overlay {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: rgba(0, 0, 0, 0.5);
                z-index: 40;
            }
            
            .mobile-overlay.active {
                display: block;
            }
            
            body.sidebar-open {
                overflow: hidden;
            }
        }
    </style>
</head>

<body class="bg-gray-50 font-sans flex flex-col min-h-screen">

    <!-- Mobile Overlay -->
    <div class="mobile-overlay lg:hidden" id="mobile-overlay"></div>

    <!-- Main Layout Container -->
    <div class="flex flex-1">
        <!-- Include Sidebar -->
        <%- include('../partials/sidebar', { currentPage: 'users' }) %>

            <!-- Main Content -->
            <main class="flex-1 w-full p-4 sm:p-6 lg:p-8 lg:ml-64 min-h-screen transition-all duration-300">
                <!-- Page Header -->
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-6 lg:mb-8">
                    <div class="flex-1">
                        <div class="flex items-center justify-between mb-2">
                            <h1 class="text-2xl sm:text-3xl font-bold text-gray-800">User Management</h1>
                            <!-- Mobile menu button -->
                            <button
                                id="mobile-menu-button"
                                class="lg:hidden p-2 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors"
                                aria-label="Toggle menu"
                            >
                                <i class="fas fa-bars text-lg"></i>
                            </button>
                        </div>
                        <p class="text-gray-600 text-sm sm:text-base">Manage customer accounts and access permissions</p>
                    </div>
                    <div class="flex items-center justify-end gap-3">
                       
                        <div
                            class="w-8 h-8 sm:w-10 sm:h-10 bg-gradient-to-r from-blue-500 to-emerald-500 rounded-full flex items-center justify-center shadow-md">
                            <span class="text-white font-semibold text-xs sm:text-sm">A</span>
                        </div>
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="grid grid-cols-1 xs:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-5 lg:gap-6 mb-6 lg:mb-8">
                    <!-- Total Users -->
                    <div class="stats-card card-hover border-l-4 border-blue-500 rounded-xl lg:rounded-2xl p-4 sm:p-5 lg:p-6">
                        <div class="flex items-center justify-between mb-3 lg:mb-4">
                            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-blue-100 rounded-lg lg:rounded-xl flex items-center justify-center">
                                <i class="fas fa-users text-blue-600 text-base sm:text-lg"></i>
                            </div>
                            <span class="text-green-500 text-xs sm:text-sm font-semibold bg-green-50 px-2 py-1 sm:px-3 sm:py-1 rounded-full">
                                <i class="fas fa-arrow-up mr-1"></i>8.2%
                            </span>
                        </div>
                        <h3 class="text-xl sm:text-2xl font-bold text-gray-800 mb-1">
                            <%= totalUsers %>
                        </h3>
                        <p class="text-gray-600 text-sm">Total Users</p>
                        <p class="text-gray-400 text-xs sm:text-sm mt-1 lg:mt-2">All registered customers</p>
                    </div>

                    <!-- Active Users -->
                    <div class="stats-card card-hover border-l-4 border-green-500 rounded-xl lg:rounded-2xl p-4 sm:p-5 lg:p-6">
                        <div class="flex items-center justify-between mb-3 lg:mb-4">
                            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-green-100 rounded-lg lg:rounded-xl flex items-center justify-center">
                                <i class="fas fa-user-check text-green-600 text-base sm:text-lg"></i>
                            </div>
                            <span class="text-green-500 text-xs sm:text-sm font-semibold bg-green-50 px-2 py-1 sm:px-3 sm:py-1 rounded-full">
                                <i class="fas fa-arrow-up mr-1"></i>5.3%
                            </span>
                        </div>
                        <h3 class="text-xl sm:text-2xl font-bold text-gray-800 mb-1">
                            <%= activeUsers %>
                        </h3>
                        <p class="text-gray-600 text-sm">Active Users</p>
                        <p class="text-gray-400 text-xs sm:text-sm mt-1 lg:mt-2">Currently accessible accounts</p>
                    </div>

                    <!-- Blocked Users -->
                    <div class="stats-card card-hover border-l-4 border-red-500 rounded-xl lg:rounded-2xl p-4 sm:p-5 lg:p-6">
                        <div class="flex items-center justify-between mb-3 lg:mb-4">
                            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-red-100 rounded-lg lg:rounded-xl flex items-center justify-center">
                                <i class="fas fa-user-slash text-red-600 text-base sm:text-lg"></i>
                            </div>
                            <span class="text-red-500 text-xs sm:text-sm font-semibold bg-red-50 px-2 py-1 sm:px-3 sm:py-1 rounded-full">
                                <i class="fas fa-arrow-down mr-1"></i>2.1%
                            </span>
                        </div>
                        <h3 class="text-xl sm:text-2xl font-bold text-gray-800 mb-1">
                            <%= blockedUsers %></h3>
                        
                        <p class="text-gray-600 text-sm">Blocked Users</p>
                        <p class="text-gray-400 text-xs sm:text-sm mt-1 lg:mt-2">Suspended accounts</p>
                    </div>

                    <!-- This Month -->
                    <div class="stats-card card-hover border-l-4 border-purple-500 rounded-xl lg:rounded-2xl p-4 sm:p-5 lg:p-6">
                        <div class="flex items-center justify-between mb-3 lg:mb-4">
                            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-purple-100 rounded-lg lg:rounded-xl flex items-center justify-center">
                                <i class="fas fa-chart-line text-purple-600 text-base sm:text-lg"></i>
                            </div>
                            <span class="text-blue-500 text-xs sm:text-sm font-semibold">+24</span>
                        </div>
                        <h3 class="text-xl sm:text-2xl font-bold text-gray-800 mb-1">New This Month</h3>
                        <p class="text-gray-600 text-sm">User Growth</p>
                        <p class="text-gray-400 text-xs sm:text-sm mt-1 lg:mt-2">24 new registrations</p>
                    </div>
                </div>

                <!-- Search and Actions Bar -->
                <div class="flex flex-col md:flex-row justify-between items-stretch md:items-center mb-6 gap-4">
                    <!-- Search Bar -->
                    <form action="/admin/users" method="get" class="flex flex-col sm:flex-row items-stretch sm:items-center gap-3 w-full md:w-auto">
                        <div class="relative flex-1">
                            <input type="text" name="q" value="<%= q || '' %>" placeholder="Search users..."
                                class="border border-gray-300 rounded-lg px-4 py-2.5 w-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent pl-10 text-sm sm:text-base" />
                            <i class="fas fa-search text-gray-400 absolute left-3 top-3.5"></i>
                        </div>
                        <div class="flex gap-2">
                            <button type="submit"
                                class="bg-blue-600 text-white px-4 py-2.5 rounded-lg hover:bg-blue-700 transition-all flex items-center justify-center gap-2 action-btn flex-1 sm:flex-none">
                                <i class="fas fa-search"></i>
                                <span class="hidden xs:inline">Search</span>
                            </button>
                            <a href="/admin/users"
                                class="bg-gray-500 text-white px-4 py-2.5 rounded-lg hover:bg-gray-600 transition-all flex items-center justify-center gap-2 action-btn flex-1 sm:flex-none">
                                <i class="fas fa-times"></i>
                                <span class="hidden xs:inline">Clear</span>
                            </a>
                        </div>
                    </form>
                </div>

                <!-- Users Table -->
                <div class="bg-white rounded-xl lg:rounded-2xl shadow-lg overflow-hidden card-hover">
                    <!-- Desktop Table (lg and above) -->
                    <div class="hidden lg:block overflow-x-auto">
                        <table class="min-w-full text-sm">
                            <thead>
                                <tr class="bg-gradient-to-r from-gray-50 to-gray-100 text-gray-600 uppercase text-xs">
                                    <th class="px-6 py-4 text-left font-semibold rounded-tl-xl">User</th>
                                    <th class="px-6 py-4 text-left font-semibold">Contact</th>
                                    <th class="px-6 py-4 text-left font-semibold">Status</th>
                                    <th class="px-6 py-4 text-center font-semibold rounded-tr-xl">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                                <% users.forEach(user=> { %>
                                    <tr class="table-row-hover">
                                        <td class="px-6 py-4">
                                            <div class="flex items-center space-x-3">
                                                <div
                                                    class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full flex items-center justify-center shadow-md flex-shrink-0">
                                                    <span class="text-white font-semibold text-sm">
                                                        <%= user.name.charAt(0).toUpperCase() %>
                                                    </span>
                                                </div>
                                                <div class="min-w-0">
                                                    <span class="font-medium text-gray-800 truncate block">
                                                        <%= user.name %>
                                                    </span>
                                                    <p class="text-xs text-gray-500 truncate">User ID: <%=
                                                            user._id.toString().slice(-8) %>
                                                    </p>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="flex flex-col">
                                                <span class="text-gray-800 font-medium truncate">
                                                    <%= user.email %>
                                                </span>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4">
                                            <% if (user.isBlocked) { %>
                                                <span class="status-badge bg-red-100 text-red-800">
                                                    <i class="fas fa-ban text-red-500"></i>
                                                    Blocked
                                                </span>
                                                <% } else { %>
                                                    <span class="status-badge bg-green-100 text-green-800">
                                                        <i class="fas fa-check-circle text-green-500"></i>
                                                        Active
                                                    </span>
                                                    <% } %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="flex gap-2 justify-center">
                                                <button type="button"
                                                    onclick="confirmToggle('<%= user._id %>', '<%= user.isBlocked %>')"
                                                    class="<%= user.isBlocked ? 'bg-green-600 hover:bg-green-700' : 'bg-red-600 hover:bg-red-700' %> text-white px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg transition-all text-sm sm:text-base">
                                                    <% if (user.isBlocked) { %>
                                                        <i class="fas fa-unlock mr-1"></i><span>Unblock</span>
                                                        <% } else { %>
                                                            <i class="fas fa-ban mr-1"></i><span>Block</span>
                                                            <% } %>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Mobile & Tablet View (below lg) -->
                    <div class="lg:hidden">
                        <% if (users.length===0) { %>
                            <div class="text-center py-8 sm:py-12">
                                <i class="fas fa-users text-gray-300 text-4xl sm:text-5xl mb-3 sm:mb-4"></i>
                                <h3 class="text-base sm:text-lg font-medium text-gray-700 mb-1 sm:mb-2">No users found</h3>
                                <p class="text-gray-500 text-sm sm:text-base mb-4 sm:mb-6">Try adjusting your search criteria</p>
                            </div>
                        <% } else { %>
                            <div class="space-y-3 sm:space-y-4 p-3 sm:p-4">
                                <% users.forEach(user=> { %>
                                    <div class="border border-gray-200 rounded-xl p-3 sm:p-4 bg-gray-50 hover:bg-gray-100 transition-colors">
                                        <div class="flex justify-between items-start mb-3">
                                            <div class="flex items-start gap-3 flex-1 min-w-0">
                                                <div
                                                    class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full flex items-center justify-center shadow-md flex-shrink-0">
                                                    <span class="text-white font-semibold text-sm">
                                                        <%= user.name.charAt(0).toUpperCase() %>
                                                    </span>
                                                </div>
                                                <div class="min-w-0 flex-1">
                                                    <h4 class="font-semibold text-gray-800 text-sm sm:text-base truncate">
                                                        <%= user.name %>
                                                    </h4>
                                                    <p class="text-xs text-gray-600 mt-1 truncate">
                                                        <%= user.email %>
                                                    </p>
                                                    <p class="text-xs text-gray-500 mt-1">ID: <%= user._id.toString().slice(-8) %></p>
                                                </div>
                                            </div>
                                            <div class="ml-2">
                                                <% if (user.isBlocked) { %>
                                                    <span class="status-badge bg-red-100 text-red-800 text-xs">
                                                        <i class="fas fa-ban text-red-500 text-xs"></i>
                                                        <span>Blocked</span>
                                                    </span>
                                                <% } else { %>
                                                    <span class="status-badge bg-green-100 text-green-800 text-xs">
                                                        <i class="fas fa-check-circle text-green-500 text-xs"></i>
                                                        <span>Active</span>
                                                    </span>
                                                <% } %>
                                            </div>
                                        </div>
                                        
                                        <div class="flex justify-end">
                                            <button type="button"
                                                onclick="confirmToggle('<%= user._id %>', '<%= user.isBlocked %>')"
                                                class="<%= user.isBlocked ? 'bg-green-600 hover:bg-green-700' : 'bg-red-600 hover:bg-red-700' %> text-white px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg transition-all text-sm sm:text-base w-full sm:w-auto">
                                                <% if (user.isBlocked) { %>
                                                    <i class="fas fa-unlock mr-1"></i><span>Unblock User</span>
                                                <% } else { %>
                                                    <i class="fas fa-ban mr-1"></i><span>Block User</span>
                                                <% } %>
                                            </button>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Pagination -->
                <% if (pages> 1) { %>
                    <div class="flex flex-wrap justify-center items-center gap-2 mt-6 lg:mt-8">
                        <% if (page> 1) { %>
                            <a href="/admin/users?page=<%= page - 1 %>&limit=<%= limit %><%= q ? '&q=' + q : '' %>"
                                class="px-3 sm:px-4 py-2 border rounded-lg bg-white hover:bg-gray-50 transition-all flex items-center gap-1 sm:gap-2 action-btn text-sm">
                                <i class="fas fa-chevron-left text-xs"></i>
                                <span class="hidden xs:inline">Previous</span>
                            </a>
                        <% } %>

                        <div class="flex flex-wrap gap-1 sm:gap-2 justify-center">
                            <% for (let i=1; i <=pages; i++) { %>
                                <a href="/admin/users?page=<%= i %>&limit=<%= limit %><%= q ? '&q=' + q : '' %>"
                                    class="px-3 sm:px-4 py-2 border rounded-lg <%= i === page ? 'bg-blue-600 text-white' : 'bg-white hover:bg-gray-50' %> transition-all action-btn text-sm">
                                    <%= i %>
                                </a>
                            <% } %>
                        </div>

                        <% if (page < pages) { %>
                            <a href="/admin/users?page=<%= page + 1 %>&limit=<%= limit %><%= q ? '&q=' + q : '' %>"
                                class="px-3 sm:px-4 py-2 border rounded-lg bg-white hover:bg-gray-50 transition-all flex items-center gap-1 sm:gap-2 action-btn text-sm">
                                <span class="hidden xs:inline">Next</span>
                                <i class="fas fa-chevron-right text-xs"></i>
                            </a>
                        <% } %>
                    </div>
                <% } %>
            </main>
    </div>

    <!-- Sidebar Toggle Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const sidebar = document.getElementById('admin-sidebar');
            const overlay = document.getElementById('mobile-overlay');
            const body = document.body;

            function toggleSidebar() {
                sidebar.classList.toggle('-translate-x-full');
                overlay.classList.toggle('active');
                body.classList.toggle('sidebar-open');
            }

            function closeSidebar() {
                sidebar.classList.add('-translate-x-full');
                overlay.classList.remove('active');
                body.classList.remove('sidebar-open');
            }

            if (mobileMenuButton && sidebar && overlay) {
                mobileMenuButton.addEventListener('click', toggleSidebar);
                overlay.addEventListener('click', closeSidebar);
            }

            // Close sidebar when clicking on any link
            document.querySelectorAll('#admin-sidebar a').forEach(link => {
                link.addEventListener('click', () => {
                    if (window.innerWidth < 1024) {
                        closeSidebar();
                    }
                });
            });

            // Close sidebar on escape key
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && window.innerWidth < 1024) {
                    closeSidebar();
                }
            });
        });
    </script>

    <script>

        function toggleBlock(userId, action) {
            return
            const verb = action === "block" ? "Block" : "Unblock";

            Swal.fire({
                title: `Confirm ${verb.toLowerCase()}`,
                text: `You are about to ${verb.toLowerCase()} this user.`,
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: `Yes, ${verb.toLowerCase()} user!`,
                cancelButtonText: "Cancel",
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/admin/toggle-block/${userId}`, {
                        method: "PUT",
                        credentials: "same-origin",
                        headers: {
                            "Content-Type": "application/json",
                            "Accept": "application/json",
                        },
                    })
                        .then(async (res) => {
                            const data = await res.json().catch(() => null);

                            if (!data) {
                                throw new Error("Invalid JSON");
                            }

                            if (data.success) {
                                Swal.fire("Success", data.message, "success").then(() => location.reload());
                            } else {
                                Swal.fire("Error", data.message || "Something went wrong.", "error");
                            }
                        })
                        .catch((err) => {
                            console.error("Fetch error:", err);
                            Swal.fire("Error", "Unexpected server response.", "error");
                        });

                }
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.querySelector('input[name="q"]');
            const searchForm = document.querySelector('form[action="/admin/users"]');

            if (!searchForm) return;

            searchForm.addEventListener('submit', function () {
                const btn = this.querySelector('button[type="submit"]');
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Searching...';
                btn.disabled = true;
            });
        });
    </script>
    
    <script>
        function confirmToggle(userId, isBlocked) {
            const action = isBlocked === "true" ? "unblock" : "block";

            Swal.fire({
                title: `Confirm ${action}`,
                text: `Are you sure you want to ${action} this user?`,
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: action === "block" ? "#dc2626" : "#16a34a",
                cancelButtonColor: "#6b7280",
                confirmButtonText: `Yes, ${action}!`,
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/admin/users/toggle-block/${userId}`, {
                        method: "PUT",
                        credentials: "same-origin",
                        headers: {
                            "Content-Type": "application/json",
                            "Accept": "application/json",
                        },
                    })
                        .then((res) => res.json())
                        .then((data) => {
                            if (data.success) {
                                Swal.fire("Success", data.message, "success").then(() => location.reload());
                            } else {
                                Swal.fire("Error", data.message || "Something went wrong.", "error");
                            }
                        })
                        .catch((err) => {
                            console.error(err);
                            Swal.fire("Error", "Unexpected server response.", "error");
                        });
                }
            });
        }
    </script>
</body>

</html>