<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Orders Management | Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #1a56db;
      --primary-dark: #1e429f;
      --secondary: #047857;
      --accent: #f59e0b;
      --light: #f8fafc;
      --dark: #1e293b;
    }

    .gradient-bg {
      background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    }

    .card-hover {
      transition: all 0.3s ease;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    .card-hover:hover {
      transform: translateY(-2px);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    .status-pending { background-color: #fef3c7; color: #92400e; }
    .status-processing { background-color: #dbeafe; color: #1e40af; }
    .status-shipped { background-color: #e0e7ff; color: #3730a3; }
    .status-out_for_delivery { background-color: #fce7f3; color: #be185d; }
    .status-delivered { background-color: #dcfce7; color: #166534; }
    .status-cancelled { background-color: #fee2e2; color: #991b1b; }

    .status-badge {
      padding: 0.25rem 0.75rem;
      border-radius: 9999px;
      font-size: 0.75rem;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
    }
    
    /* Mobile overlay */
    @media (max-width: 1023px) {
      .mobile-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 40;
      }
      
      .mobile-overlay.active {
        display: block;
      }
      
      body.sidebar-open {
        overflow: hidden;
      }
      
      .modal-content {
        max-width: 95vw;
        max-height: 90vh;
        overflow-y: auto;
      }
    }
  </style>
</head>

<body class="bg-gray-50 text-gray-900 flex min-h-screen">
  <!-- Mobile Overlay -->
  <div class="mobile-overlay lg:hidden" id="mobile-overlay"></div>
  
  <!-- Sidebar -->
  <%- include('../partials/sidebar', { currentPage: 'orders' }) %>

  <!-- Main Content -->
  <main class="flex-1 w-full p-4 sm:p-6 lg:p-8 lg:ml-64 min-h-screen transition-all duration-300">
    <!-- Header Section -->
    <div class="mb-6 lg:mb-8">
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-4 lg:mb-6">
        <div class="flex-1">
          <div class="flex items-center justify-between mb-2">
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Orders Management</h1>
            <!-- Mobile menu button -->
            <button
              id="mobile-menu-button"
              class="lg:hidden p-2 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors"
              aria-label="Toggle menu"
            >
              <i class="fas fa-bars text-lg"></i>
            </button>
          </div>
          <p class="text-gray-600 text-sm sm:text-base">Manage customer orders and their status</p>
        </div>
      </div>
      
      <!-- Stats Cards -->
      <div class="grid grid-cols-1 xs:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-5 lg:gap-6 mb-6 lg:mb-8">
        <div class="bg-white rounded-xl p-4 sm:p-5 lg:p-6 card-hover border-l-4 border-blue-500">
          <div class="flex justify-between items-center">
            <div>
              <p class="text-sm text-gray-500">Total Orders</p>
              <p class="text-xl sm:text-2xl font-bold text-gray-900"><%= totalOrders || orders.length || 0 %></p>
            </div>
            <div class="bg-blue-100 p-2 sm:p-3 rounded-full">
              <i class="fas fa-shopping-cart text-blue-600 text-lg sm:text-xl"></i>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-xl p-4 sm:p-5 lg:p-6 card-hover border-l-4 border-green-500">
          <div class="flex justify-between items-center">
            <div>
              <p class="text-sm text-gray-500">Completed</p>
              <p class="text-xl sm:text-2xl font-bold text-gray-900">
                <%= deliveredOrders || orders.filter(o => o.orderStatus === 'delivered').length || 0 %>
              </p>
            </div>
            <div class="bg-green-100 p-2 sm:p-3 rounded-full">
              <i class="fas fa-check-circle text-green-600 text-lg sm:text-xl"></i>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-xl p-4 sm:p-5 lg:p-6 card-hover border-l-4 border-yellow-500">
          <div class="flex justify-between items-center">
            <div>
              <p class="text-sm text-gray-500">In Progress</p>
              <p class="text-xl sm:text-2xl font-bold text-gray-900">
                <%= inProgressOrders || orders.filter(o => ['pending', 'processing', 'shipped', 'out_for_delivery'].includes(o.orderStatus)).length || 0 %>
              </p>
            </div>
            <div class="bg-yellow-100 p-2 sm:p-3 rounded-full">
              <i class="fas fa-sync-alt text-yellow-600 text-lg sm:text-xl"></i>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-xl p-4 sm:p-5 lg:p-6 card-hover border-l-4 border-red-500">
          <div class="flex justify-between items-center">
            <div>
              <p class="text-sm text-gray-500">Cancelled</p>
              <p class="text-xl sm:text-2xl font-bold text-gray-900">
                <%= cancelledOrders || orders.filter(o => o.orderStatus === 'cancelled').length || 0 %>
              </p>
            </div>
            <div class="bg-red-100 p-2 sm:p-3 rounded-full">
              <i class="fas fa-times-circle text-red-600 text-lg sm:text-xl"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Search and Filters -->
    <div class="bg-white rounded-xl p-4 sm:p-6 card-hover mb-6">
      <form method="GET" action="/admin/orders" 
            class="flex flex-col lg:flex-row gap-4 items-stretch lg:items-center justify-between">
        <!-- search and status filter -->
        <div class="flex flex-col md:flex-row gap-3 sm:gap-4 flex-1 w-full">
          
          <select name="status" 
            class="border border-gray-300 rounded-lg px-4 py-2.5 w-full md:w-48
                  focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm sm:text-base">

            <option value="">All Statuses</option>

            <!-- ORDER LEVEL STATUSES -->
            <option value="pending" <%= query.status=='pending'?'selected':'' %>>Pending</option>
            <option value="processing" <%= query.status=='processing'?'selected':'' %>>Processing</option>
            <option value="shipped" <%= query.status=='shipped'?'selected':'' %>>Shipped</option>
            <option value="out_for_delivery" <%= query.status=='out_for_delivery'?'selected':'' %>>Out for Delivery</option>
            <option value="delivered" <%= query.status=='delivered'?'selected':'' %>>Delivered</option>

            <!-- ITEM LEVEL STATUSES -->
            <option value="cancelled" <%= query.status=='cancelled'?'selected':'' %>>Cancelled</option>
            <option value="return-requested" <%= query.status=='return-requested'?'selected':'' %>>Return Requested</option>
            <option value="returned" <%= query.status=='returned'?'selected':'' %>>Returned</option>

          </select>

          <div class="flex gap-2">
            <button type="submit" 
              class="bg-blue-600 text-white px-4 sm:px-6 py-2.5 rounded-lg hover:bg-blue-700 
                    transition-all flex items-center justify-center gap-2 font-medium flex-1 sm:flex-none text-sm sm:text-base">
              <i class="fas fa-search"></i>
              <span>Search</span>
            </button>

            <a href="/admin/orders" 
              class="bg-gray-500 text-white px-4 sm:px-6 py-2.5 rounded-lg hover:bg-gray-600 
                    transition-all flex items-center justify-center gap-2 font-medium flex-1 sm:flex-none text-sm sm:text-base">
              <i class="fas fa-times"></i>
              <span>Clear</span>
            </a>
          </div>
        </div>

        <!-- RETURN REQUESTS BUTTON WITH BADGE -->
        <a href="/admin/orders/returns"
          class="relative bg-emerald-600 text-white px-4 sm:px-6 py-2.5 rounded-lg hover:bg-emerald-700 
                transition-all flex items-center justify-center gap-2 font-medium shadow-md text-sm sm:text-base">
          
          <i class="fas fa-undo"></i>
          <span>Return Requests</span>

          <% if (returnCount > 0) { %>
            <span class="absolute -top-2 -right-2 bg-red-600 text-white text-xs
                        font-bold px-2 py-1 rounded-full shadow-md">
              <%= returnCount %>
            </span>
          <% } %>
        </a>
      </form>
    </div>

    <!-- Orders Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden card-hover">
      <!-- Desktop Table (lg and above) -->
      <div class="hidden lg:block overflow-x-auto">
        <table class="min-w-full">
          <thead class="bg-gray-50 border-b border-gray-200">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Order ID</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Customer</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Items</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Order Items</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Total</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Date</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Status</th>
              <th class="px-6 py-4 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (orders && orders.length > 0) { %>
              <% orders.forEach(order => { %>
                <% const cancelledCount = order.items.filter(i => i.status === 'cancelled').length; %>
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
                        <i class="fas fa-receipt text-blue-600"></i>
                      </div>
                      <div>
                        <div class="text-sm font-medium text-gray-900 font-mono">
                          <%= order.orderId || order._id %>
                        </div>
                        <div class="text-xs text-gray-500 mt-1">
                          <% if (order.items && order.items[0] && order.items[0].itemOrderId) { %>
                            Item ID: <%= order.items[0].itemOrderId.split('/')[0] %>
                          <% } %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= order.user?.name || '—' %></div>
                    <div class="text-sm text-gray-500"><%= order.user?.email || '' %></div>
                    <div class="text-xs text-gray-400 mt-1">
                      <%= order.shippingAddress?.phone || 'No phone' %>
                    </div>
                  </td>

                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= order.items.length %></div>
                    <div class="text-xs text-gray-500">items</div>

                    <% if (cancelledCount > 0) { %>
                      <span class="mt-2 inline-block bg-red-100 text-red-700 px-2 py-1 rounded text-xs font-semibold">
                        <%= cancelledCount %> item cancelled
                      </span>
                    <% } %>
                  </td>

                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-700 max-w-xs">
                      <% order.items.forEach((item, index) => { %>
                        <div class="flex items-center gap-2 mb-1">
                          <span class="text-xs bg-gray-100 px-2 py-1 rounded">#<%= index + 1 %></span>
                          <span class="text-xs truncate">
                            <% if (item.product && item.product.name) { %>
                              <%= item.product.name %>
                            <% } else { %>
                              Product <%= index + 1 %>
                            <% } %>
                          </span>
                          <span class="status-badge <%= getStatusClass(item.status || order.orderStatus) %> text-xs">
                            <%= (item.status || order.orderStatus).charAt(0).toUpperCase() + (item.status || order.orderStatus).slice(1) %>
                          </span>
                        </div>
                      <% }) %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-bold text-gray-900">₹<%= (order.totalAmount || 0).toFixed(2) %></div>
                    <div class="text-xs text-gray-500">
                      Sub: ₹<%= (order.subtotal || 0).toFixed(2) %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <%= new Date(order.createdAt).toLocaleDateString() %>
                    </div>
                    <div class="text-xs text-gray-500">
                      <%= new Date(order.createdAt).toLocaleTimeString() %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="status-badge <%= getStatusClass(order.orderStatus) %>">
                      <i class="fas <%= getStatusIcon(order.orderStatus) %>"></i>
                      <%= (order.orderStatus || "unknown").charAt(0).toUpperCase() + (order.orderStatus || "unknown").slice(1) %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <a 
                      href="/admin/orders/<%= order._id %>" 
                      class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 
                            transition flex items-center justify-center gap-2 text-sm font-medium"
                      title="View Order Details">
                      <i class="fas fa-eye"></i>
                      <span>Details</span>
                    </a>

                    <% if (cancelledCount > 0) { %>
                      <button 
                        onclick="showCancelledItems('<%= order._id %>')" 
                        class="mt-2 bg-red-600 text-white px-3 py-1 rounded-lg text-xs hover:bg-red-700 transition flex items-center justify-center gap-2 w-full">
                        <i class="fas fa-ban"></i>
                        View Cancelled
                      </button>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="8" class="px-6 py-12 text-center">
                  <div class="flex flex-col items-center justify-center text-gray-500">
                    <i class="fas fa-shopping-cart text-4xl mb-3 text-gray-300"></i>
                    <p class="text-lg font-medium">No orders found</p>
                    <p class="text-sm mt-1">No orders match your search criteria</p>
                    <a href="/admin/orders" class="bg-blue-600 text-white px-4 py-2 rounded-lg mt-4 hover:bg-blue-700 transition text-sm">
                      View All Orders
                    </a>
                  </div>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      
      <!-- Mobile & Tablet View (below lg) -->
      <div class="lg:hidden">
        <% if (orders && orders.length > 0) { %>
          <div class="space-y-4 p-4 sm:p-6">
            <% orders.forEach(order => { %>
              <% const cancelledCount = order.items.filter(i => i.status === 'cancelled').length; %>
              <div class="border border-gray-200 rounded-xl p-4 sm:p-6 bg-gray-50 hover:bg-gray-100 transition-colors">
                <!-- Order Header -->
                <div class="flex justify-between items-start mb-4">
                  <div class="flex items-start gap-3 flex-1">
                    <div class="flex-shrink-0 h-10 w-10 bg-blue-100 rounded-lg flex items-center justify-center">
                      <i class="fas fa-receipt text-blue-600"></i>
                    </div>
                    <div class="min-w-0 flex-1">
                      <h3 class="font-medium text-gray-900 text-sm sm:text-base truncate">
                        Order: <%= order.orderId || order._id.toString().slice(-8) %>
                      </h3>
                      <div class="flex flex-wrap gap-2 mt-1">
                        <span class="status-badge <%= getStatusClass(order.orderStatus) %> text-xs">
                          <i class="fas <%= getStatusIcon(order.orderStatus) %> text-xs"></i>
                          <%= (order.orderStatus || "unknown").charAt(0).toUpperCase() + (order.orderStatus || "unknown").slice(1) %>
                        </span>
                        <% if (cancelledCount > 0) { %>
                          <span class="bg-red-100 text-red-700 px-2 py-1 rounded text-xs font-semibold">
                            <%= cancelledCount %> cancelled
                          </span>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
                
                <!-- Order Details -->
                <div class="space-y-3">
                  <!-- Customer Info -->
                  <div>
                    <h4 class="text-xs text-gray-500 font-medium mb-1">Customer</h4>
                    <p class="text-sm text-gray-900 font-medium truncate"><%= order.user?.name || '—' %></p>
                    <p class="text-xs text-gray-600 truncate"><%= order.user?.email || '' %></p>
                  </div>
                  
                  <!-- Items Info -->
                  <div class="grid grid-cols-2 gap-4">
                    <div>
                      <h4 class="text-xs text-gray-500 font-medium mb-1">Items</h4>
                      <p class="text-sm text-gray-900 font-medium"><%= order.items.length %></p>
                    </div>
                    <div>
                      <h4 class="text-xs text-gray-500 font-medium mb-1">Total</h4>
                      <p class="text-sm text-gray-900 font-bold">₹<%= (order.totalAmount || 0).toFixed(2) %></p>
                    </div>
                  </div>
                  
                  <!-- Date -->
                  <div>
                    <h4 class="text-xs text-gray-500 font-medium mb-1">Date</h4>
                    <p class="text-sm text-gray-900">
                      <%= new Date(order.createdAt).toLocaleDateString() %>
                    </p>
                  </div>
                  
                  <!-- Items List -->
                  <div>
                    <h4 class="text-xs text-gray-500 font-medium mb-2">Items</h4>
                    <div class="space-y-2 max-h-32 overflow-y-auto pr-2">
                      <% order.items.forEach((item, index) => { %>
                        <div class="flex items-center justify-between bg-white p-2 rounded border">
                          <div class="flex-1 min-w-0">
                            <p class="text-xs font-medium text-gray-800 truncate">
                              <% if (item.product && item.product.name) { %>
                                <%= item.product.name %>
                              <% } else { %>
                                Product <%= index + 1 %>
                              <% } %>
                            </p>
                            <span class="status-badge <%= getStatusClass(item.status || order.orderStatus) %> text-xs mt-1">
                              <%= (item.status || order.orderStatus).charAt(0).toUpperCase() + (item.status || order.orderStatus).slice(1) %>
                            </span>
                          </div>
                        </div>
                      <% }) %>
                    </div>
                  </div>
                  
                  <!-- Actions -->
                  <div class="flex flex-col sm:flex-row gap-2 pt-3">
                    <a 
                      href="/admin/orders/<%= order._id %>" 
                      class="bg-blue-600 text-white px-4 py-2.5 rounded-lg hover:bg-blue-700 
                            transition flex items-center justify-center gap-2 text-sm font-medium flex-1">
                      <i class="fas fa-eye"></i>
                      <span>View Details</span>
                    </a>
                    
                    <% if (cancelledCount > 0) { %>
                      <button 
                        onclick="showCancelledItems('<%= order._id %>')" 
                        class="bg-red-600 text-white px-4 py-2.5 rounded-lg hover:bg-red-700 
                              transition flex items-center justify-center gap-2 text-sm font-medium flex-1">
                        <i class="fas fa-ban"></i>
                        <span>View Cancelled</span>
                      </button>
                    <% } %>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="text-center py-12">
            <i class="fas fa-shopping-cart text-4xl mb-3 text-gray-300"></i>
            <p class="text-lg font-medium text-gray-700 mb-2">No orders found</p>
            <p class="text-gray-500 mb-6">No orders match your search criteria</p>
            <a href="/admin/orders" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
              View All Orders
            </a>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Pagination -->
    <% if (pages > 1) { %>
      <div class="flex flex-wrap justify-center items-center gap-2 mt-6 lg:mt-8">
        <% if (page > 1) { %>
          <a 
            href="?page=<%= page - 1 %>&search=<%= query.search || '' %>&status=<%= query.status || '' %>"
            class="px-3 sm:px-4 py-2 border rounded-lg bg-white hover:bg-gray-50 transition-all flex items-center gap-1 sm:gap-2 text-sm">
            <i class="fas fa-chevron-left text-xs"></i>
            <span class="hidden xs:inline">Previous</span>
          </a>
        <% } %>

        <div class="flex flex-wrap gap-1 sm:gap-2 justify-center">
          <% for (let i = 1; i <= pages; i++) { %>
            <a 
              href="?page=<%= i %>&search=<%= query.search || '' %>&status=<%= query.status || '' %>"
              class="px-3 sm:px-4 py-2 border rounded-lg <%= i === page ? 'bg-blue-600 text-white' : 'bg-white hover:bg-gray-50' %> transition-all text-sm">
              <%= i %>
            </a>
          <% } %>
        </div>

        <% if (page < pages) { %>
          <a 
            href="?page=<%= page + 1 %>&search=<%= query.search || '' %>&status=<%= query.status || '' %>"
            class="px-3 sm:px-4 py-2 border rounded-lg bg-white hover:bg-gray-50 transition-all flex items-center gap-1 sm:gap-2 text-sm">
            <span class="hidden xs:inline">Next</span>
            <i class="fas fa-chevron-right text-xs"></i>
          </a>
        <% } %>
      </div>
    <% } %>
  </main>

  <!-- Cancelled Items Modal -->
  <div id="cancelDetailsModal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50 p-4">
    <div class="bg-white p-4 sm:p-6 rounded-xl modal-content w-full max-w-md max-h-[80vh] overflow-y-auto">
      <h3 class="text-lg sm:text-xl font-bold mb-4">Cancelled Items</h3>
      <div id="cancelDetailsContainer"></div>
      <button onclick="hideCancelDetails()" 
              class="mt-4 w-full bg-gray-600 text-white py-2 rounded-lg hover:bg-gray-700 transition text-sm sm:text-base">
        Close
      </button>
    </div>
  </div>

  <!-- Sidebar Toggle Script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const sidebar = document.getElementById('admin-sidebar');
      const overlay = document.getElementById('mobile-overlay');
      const body = document.body;

      function toggleSidebar() {
        sidebar.classList.toggle('-translate-x-full');
        overlay.classList.toggle('active');
        body.classList.toggle('sidebar-open');
      }

      function closeSidebar() {
        sidebar.classList.add('-translate-x-full');
        overlay.classList.remove('active');
        body.classList.remove('sidebar-open');
      }

      if (mobileMenuButton && sidebar && overlay) {
        mobileMenuButton.addEventListener('click', toggleSidebar);
        overlay.addEventListener('click', closeSidebar);
      }

      // Close sidebar when clicking on any link
      document.querySelectorAll('#admin-sidebar a').forEach(link => {
        link.addEventListener('click', () => {
          if (window.innerWidth < 1024) {
            closeSidebar();
          }
        });
