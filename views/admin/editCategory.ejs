<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Category | Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-white text-gray-900 flex min-h-screen">

  <!-- Sidebar -->
  <%- include('../partials/sidebar') %>

  <!-- Main Content -->
  <main class="ml-64 flex-1 p-10">
    <h1 class="text-2xl font-semibold mb-8">Edit Category</h1>

    <form id="editForm" action="/admin/category/update/<%= category._id %>" method="POST" class="space-y-6 max-w-lg">
      <div>
        <input
          type="text"
          name="name"
          value="<%= category.name %>"
          class="border border-gray-300 rounded-md w-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-700"
          required
        >
      </div>

      <div>
        <textarea
          name="description"
          class="border border-gray-300 rounded-md w-full px-4 py-2 h-28 focus:outline-none focus:ring-2 focus:ring-emerald-700"
        ><%= category.description %></textarea>
      </div>

      <div>
        <button
          type="submit"
          class="bg-emerald-800 text-white px-5 py-2 rounded-md hover:bg-emerald-900 transition"
        >
          Update
        </button>
      </div>
    </form>
  </main>

  <script>
    // SweetAlert confirmation after update
    const params = new URLSearchParams(window.location.search);
    if (params.get("updated") === "true") {
      Swal.fire({
        icon: "success",
        title: "Category updated successfully",
        showConfirmButton: false,
        timer: 1500
      });
    }
  </script>

</body>
</html>
