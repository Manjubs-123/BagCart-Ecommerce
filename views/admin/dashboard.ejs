              <td class="p-4">
                <span class="status-badge bg-yellow-100 text-yellow-800">Processing</span>
              </td>
            </tr>
            
            <tr class="table-row-hover">
              <td class="p-4">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-gem text-purple-600 text-sm"></i>
                  </div>
                  <span class="font-medium text-gray-800">Genuine Leather</span>
                </div>
              </td>
              <td class="p-4 text-gray-600">#ORD-7805</td>
              <td class="p-4 text-gray-600">7 Feb, 2023</td>
              <td class="p-4">
                <div class="flex items-center space-x-2">
                  <div class="w-6 h-6 bg-gray-300 rounded-full"></div>
                  <span class="text-gray-800">Mike Davis</span>
                </div>
              </td>
              <td class="p-4 font-semibold text-gray-800">₹57.00</td>
              <td class="p-4">
                <span class="status-badge bg-green-100 text-green-800">Completed</span>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </main>

  <script>
    // Add active state to current page link
    document.addEventListener('DOMContentLoaded', function() {
      const currentPath = window.location.pathname;
      const navLinks = document.querySelectorAll('aside nav a');
      
      navLinks.forEach(link => {
        if (link.getAttribute('href') === currentPath) {
          link.classList.add('nav-link-active');
        }
      });

      // Mobile menu toggle (optional)
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const sidebar = document.querySelector('aside');
      
      if (mobileMenuButton && sidebar) {
        mobileMenuButton.addEventListener('click', () => {
          sidebar.classList.toggle('mobile-open');
        });
      }

      // Close mobile menu when clicking on a link
      navLinks.forEach(link => {
        link.addEventListener('click', () => {
          if (window.innerWidth < 768) {
            sidebar.classList.remove('mobile-open');
          }
        });
      });
    });
  </script>
</body>
</html>