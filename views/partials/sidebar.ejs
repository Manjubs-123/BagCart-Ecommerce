<!-- views/admin/partials/sidebar.ejs -->
<aside class="w-64 bg-emerald-900 text-white min-h-screen flex flex-col fixed left-0 top-0 overflow-y-auto">
  <div class="flex items-center justify-center h-20 border-b border-emerald-800">
    <a href="/admin/dashboard" class="flex items-center gap-2">
      <img src="/images/favicon.png" alt="BagHub" class="w-8 h-8"/>
      <span class="text-lg font-semibold">BagHub</span>
    </a>
  </div>

  <nav class="flex-1 px-4 py-6 space-y-2">
    <% const links = [
      { href: '/admin/dashboard', icon: 'fa-chart-line', label: 'Dashboard' },
      { href: '/admin/products', icon: 'fa-boxes', label: 'Products' },
      { href: '/admin/users', icon: 'fa-users', label: 'Customers' },
      { href: '/admin/category', icon: 'fa-layer-group', label: 'Category' },
      { href: '/admin/orders', icon: 'fa-cart-shopping', label: 'Orders' },
      { href: '/admin/coupons', icon: 'fa-ticket', label: 'Coupons' },
      { href: '/admin/offers', icon: 'fa-gift', label: 'Offers' },
      { href: '/admin/banner', icon: 'fa-image', label: 'Banner' },
      { href: '/admin/sales-report', icon: 'fa-chart-column', label: 'Sales Report' },
    ] %>

    <% links.forEach(link => { %>
      <a href="<%= link.href %>" class="flex items-center gap-3 p-3 rounded-md hover:bg-emerald-800">
        <i class="fa-solid <%= link.icon %> w-5"></i>
        <span><%= link.label %></span>
      </a>
    <% }) %>
  </nav>

  <div class="p-4 border-t border-emerald-800">
    <a href="/admin/logout" class="flex items-center gap-3 p-2 rounded-md hover:bg-emerald-800">
      <i class="fa-solid fa-right-from-bracket w-5"></i>
      <span>Logout</span>
    </a>
  </div>
</aside>
