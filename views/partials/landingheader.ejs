<!-- views/partials/header.ejs -->
<header class="bg-green-900 text-white shadow-md">
  <div class="container mx-auto flex items-center justify-between py-4 px-6">
    <!-- Logo -->
    <a href="/" class="text-lg font-bold flex items-center gap-2">
      <img
        src="https://cdn-icons-png.flaticon.com/512/891/891462.png"
        class="w-7 h-7"
        alt="BagHub Logo"
      />
      BagHub
    </a>

    <!-- Navigation (hidden on small screens) -->
    <nav class="hidden md:flex space-x-6">
      <a href="/" class="hover:text-gray-200">Home</a>
      <a href="/shop" class="hover:text-gray-200">Shop</a>
      <a href="/contact" class="hover:text-gray-200">Contact Us</a>
      <a href="/about" class="hover:text-gray-200">About Us</a>
    </nav>

    <!-- Icons -->
    <div class="flex items-center space-x-4 relative group">
      <!-- Wishlist -->
      <a href="/wishlist" class="relative hover:text-gray-300">
        <i class="fa-regular fa-heart text-xl"></i>
        <span
          class="absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full w-4 h-4 flex items-center justify-center"
          >0</span
        >
      </a>

      <!-- Cart -->
      <a href="/cart" class="relative hover:text-gray-300">
        <i class="fa-solid fa-cart-shopping text-xl"></i>
        <span
          class="absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full w-4 h-4 flex items-center justify-center"
          >0</span
        >
      </a>

      <!-- User Dropdown -->
      <div class="relative group">
        <button class="hover:text-gray-300 focus:outline-none">
          <i class="fa-regular fa-user text-xl"></i>
        </button>

        <!-- Dropdown -->
        <div
          class="hidden absolute right-0 mt-2 w-40 bg-white border border-gray-200 rounded-lg shadow-lg text-gray-700 group-hover:block"
        >
          <a href="/account" class="block px-4 py-2 hover:bg-gray-100"
            >My Account</a
          >
          <a href="/user/logout" class="block px-4 py-2 hover:bg-gray-100"
            >Logout</a
          >
        </div>
      </div>
    </div>

    <!-- Mobile Menu Button -->
    <button class="md:hidden text-white text-2xl" id="mobile-menu-btn">
      <i class="fa-solid fa-bars"></i>
    </button>
  </div>

  <!-- Mobile Menu -->
  <nav class="hidden md:hidden bg-green-800 px-6 pb-4" id="mobile-menu">
    <a href="/" class="block py-2 hover:text-gray-200">Home</a>
    <a href="/shop" class="block py-2 hover:text-gray-200">Shop</a>
    <a href="/contact" class="block py-2 hover:text-gray-200">Contact Us</a>
    <a href="/about" class="block py-2 hover:text-gray-200">About Us</a>
  </nav>
</header>

<!-- JS for mobile menu -->
<script>
  const mobileBtn = document.getElementById("mobile-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");

  if (mobileBtn && mobileMenu) {
    mobileBtn.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  }
</script>

<!-- Favicon and Font Awesome -->
<link
  rel="icon"
  type="image/png"
  href="https://cdn-icons-png.flaticon.com/512/891/891462.png"
/>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
/>
