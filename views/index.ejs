<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BagHub | Premium Backpacks</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>

  <body class="font-sans bg-gray-50 text-gray-900">
    <!-- HEADER -->
    <%- include('partials/header') %>

    <!-- HERO SECTION -->
    <section class="bg-emerald-800 text-white">
      <div
        class="max-w-7xl mx-auto flex flex-col-reverse md:flex-row items-center justify-between px-6 py-16 gap-10"
      >
        <!-- Text Section -->
        <div class="max-w-lg text-center md:text-left">
          <h1 class="text-3xl md:text-5xl font-extrabold leading-tight mb-4">
            Adventure Awaits with <br />
            Premium Backpacks
          </h1>
          <p class="text-gray-100 mb-6 text-sm md:text-base leading-relaxed">
            Discover our collection of durable, stylish, and functional
            backpacks designed for every journey — from urban commutes to
            mountain adventures.
          </p>
          <a
            href="#"
            class="bg-black text-white px-6 py-3 rounded-lg hover:bg-gray-700 transition inline-block"
            >Know more</a
          >
        </div>

        <!-- Image Section -->
        <div class="flex justify-center md:justify-end">
          <img
            src="https://rukminim2.flixcart.com/image/832/832/xif0q/backpack/f/v/n/-original-imagx25zuz7cy9nz.jpeg?q=70"
            alt="backpack"
            class="w-64 md:w-80 rounded-xl shadow-lg"
          />
        </div>
      </div>
    </section>

    <!-- FEATURED PRODUCTS -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <h2 class="text-3xl font-semibold mb-10">Featured Products</h2>

        <div
          class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8"
        >
          <% const featured = [
            { name: "Skybags Klik Daypack", img:
            "https://rukminim2.flixcart.com/image/612/612/l4x2rgw0/backpack/4/x/x/-original-imagfpzvsy7jypzj.jpeg?q=70",
            price: "₹999" }, { name: "Safari Omega Spacious", img:
            "https://rukminim2.flixcart.com/image/612/612/xif0q/backpack/u/1/9/-original-imaghrhvbz3tw4zv.jpeg?q=70",
            price: "₹1799" }, { name: "Gear Vintage2", img:
            "https://rukminim2.flixcart.com/image/612/612/l4n2oi80/backpack/m/3/f/blue-backpack-gear-original-imagfgrqhxkyf2g9.jpeg?q=70",
            price: "₹1395" } ]; %>

          <% featured.forEach(item => { %>
          <div
            class="bg-gray-50 border rounded-xl p-4 hover:shadow-xl transition-transform transform hover:-translate-y-1"
          >
            <img
              src="<%= item.img %>"
              alt="<%= item.name %>"
              class="rounded-lg w-full h-64 object-cover mb-4"
            />
            <h3 class="font-semibold text-lg mb-1"><%= item.name %></h3>
            <p class="text-gray-700"><%= item.price %></p>
          </div>
          <% }); %>
        </div>

        <button
          class="mt-10 bg-emerald-800 text-white px-6 py-3 rounded-lg hover:bg-emerald-700 transition"
        >
          See more →
        </button>
      </div>
    </section>

    <!-- SHOP YOUR FAVOURITES -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <h2 class="text-3xl font-semibold mb-10">Shop Your Favourites</h2>

        <div
          class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 md:gap-10"
        >
          <img
            src="https://rukminim2.flixcart.com/image/612/612/xif0q/backpack/u/1/9/-original-imaghrhvbz3tw4zv.jpeg?q=70"
            class="rounded-xl w-full object-cover"
            alt="bag"
          />
          <img
            src="https://rukminim2.flixcart.com/image/612/612/xif0q/backpack/8/i/d/-original-imagqz2hcz6g5scu.jpeg?q=70"
            class="rounded-xl w-full object-cover"
            alt="bag"
          />
          <img
            src="https://rukminim2.flixcart.com/image/612/612/xif0q/backpack/d/g/m/-original-imagqz2hcz6g5scu.jpeg?q=70"
            class="rounded-xl w-full object-cover"
            alt="bag"
          />
        </div>
      </div>
    </section>

    <!-- HAND PICKED -->
    <section class="py-16 bg-white text-center">
      <h2 class="text-3xl font-semibold mb-4">Hand Picked</h2>
      <p class="text-sm text-gray-600 mb-10">
        Discover our hand-picked collection featuring quality, style, and
        timeless appeal.
      </p>

      <div
        class="max-w-6xl mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 px-4"
      >
        <img
          src="https://rukminim2.flixcart.com/image/612/612/xif0q/backpack/z/j/v/-original-imaghxdupxgcg6qk.jpeg?q=70"
          class="rounded-xl w-full object-cover"
          alt="bag"
        />
        <img
          src="https://rukminim2.flixcart.com/image/612/612/xif0q/backpack/l/a/t/-original-imaghxdupxgcg6qk.jpeg?q=70"
          class="rounded-xl w-full object-cover"
          alt="bag"
        />
        <img
          src="https://rukminim2.flixcart.com/image/612/612/xif0q/backpack/u/1/9/-original-imaghrhvbz3tw4zv.jpeg?q=70"
          class="rounded-xl w-full object-cover"
          alt="bag"
        />
      </div>
    </section>

    <!-- TRENDING NOW -->
    <section class="py-16 bg-gray-50 text-center">
      <h2 class="text-3xl font-semibold mb-10">Trending Now</h2>

      <div
        class="max-w-7xl mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 px-4"
      >
        <img
          src="https://rukminim2.flixcart.com/image/612/612/xif0q/backpack/f/v/n/-original-imagx25zuz7cy9nz.jpeg?q=70"
          class="rounded-xl w-full object-cover"
          alt="bag"
        />
        <img
          src="https://rukminim2.flixcart.com/image/612/612/xif0q/backpack/u/1/9/-original-imaghrhvbz3tw4zv.jpeg?q=70"
          class="rounded-xl w-full object-cover"
          alt="bag"
        />
        <img
          src="https://rukminim2.flixcart.com/image/612/612/l4n2oi80/backpack/m/3/f/blue-backpack-gear-original-imagfgrqhxkyf2g9.jpeg?q=70"
          class="rounded-xl w-full object-cover"
          alt="bag"
        />
        <img
          src="https://rukminim2.flixcart.com/image/612/612/xif0q/backpack/d/g/m/-original-imagqz2hcz6g5scu.jpeg?q=70"
          class="rounded-xl w-full object-cover"
          alt="bag"
        />
      </div>

      <button
        class="mt-10 bg-emerald-800 text-white px-6 py-3 rounded-lg hover:bg-emerald-700 transition"
      >
        See more →
      </button>
    </section>

    <!-- FOOTER -->
    <%- include('partials/footer') %>

    <!-- AXIOS SAMPLE -->
    <script>
      async function loadProducts() {
        try {
          const res = await axios.get("/api/products");
          console.log(res.data);
        } catch (err) {
          console.error("Error loading products:", err);
        }
      }
      loadProducts();
    </script>
  </body>
</html>
